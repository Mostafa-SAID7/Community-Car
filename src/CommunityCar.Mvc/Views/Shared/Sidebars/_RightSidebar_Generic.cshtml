@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!-- Generic Info Widget -->
<div class="card border-0 shadow-sm mb-4 rounded-4 bg-primary text-white">
    <div class="card-body text-center p-4">
        <i class="fas fa-car-side fa-3x mb-3 opacity-75"></i>
        <h5 class="fw-bold">Community Car</h5>
        <p class="small opacity-75 mb-3">Join our growing community of car enthusiasts!</p>
        <button class="btn btn-light btn-sm rounded-pill px-4 fw-bold text-primary">Learn More</button>
    </div>
</div>

<!-- Footer Links -->
<div class="text-center">
    <div class="small text-muted mb-2">
        <a href="#" class="text-muted text-decoration-none me-2">About</a>
        <a href="#" class="text-muted text-decoration-none me-2">Privacy</a>
        <a href="#" class="text-muted text-decoration-none">Terms</a>
    </div>
    <p class="small text-muted mb-0">&copy; @DateTime.Now.Year Community Car</p>
</div>
