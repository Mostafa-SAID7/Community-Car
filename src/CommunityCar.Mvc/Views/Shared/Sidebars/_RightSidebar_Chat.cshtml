@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!-- Safety Tips Widget -->
<div class="card border-0 shadow-sm mb-4 rounded-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
    <div class="card-body p-4">
        <div class="d-flex align-items-center mb-3">
            <div class="rounded-circle bg-white bg-opacity-25 p-2 me-3">
                <i class="fas fa-shield-alt fa-lg"></i>
            </div>
            <h6 class="fw-bold mb-0">@Localizer["Stay Safe"]</h6>
        </div>
        <p class="small opacity-90 mb-0">@Localizer["Never share your password or financial details. Report any suspicious behavior to our support team."]</p>
    </div>
</div>

<!-- Suggested Groups Widget -->
<div class="card border-0 shadow-sm mb-4 rounded-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="card-title fw-bold m-0">@Localizer["Join Groups"]</h6>
            <a href="#" class="text-decoration-none small">@Localizer["See All"]</a>
        </div>
        
        <div class="d-flex align-items-center mb-3">
            <div class="position-relative me-3">
                <span class="rounded-circle bg-light d-flex align-items-center justify-content-center border" style="width: 40px; height: 40px;">
                    <i class="fas fa-car text-primary"></i>
                </span>
            </div>
            <div class="flex-grow-1">
                <h6 class="m-0 small fw-bold">BMW Enthusiasts</h6>
                <small class="text-muted" style="font-size: 0.75rem;">1.2k Members</small>
            </div>
            <button class="btn btn-outline-primary btn-sm rounded-pill py-0 px-2 small" style="font-size: 0.7rem;">@Localizer["Join"]</button>
        </div>

        <div class="d-flex align-items-center">
            <div class="position-relative me-3">
                <span class="rounded-circle bg-light d-flex align-items-center justify-content-center border" style="width: 40px; height: 40px;">
                    <i class="fas fa-wrench text-warning"></i>
                </span>
            </div>
            <div class="flex-grow-1">
                <h6 class="m-0 small fw-bold">DIY Repairs</h6>
                <small class="text-muted" style="font-size: 0.75rem;">850 Members</small>
            </div>
            <button class="btn btn-outline-primary btn-sm rounded-pill py-0 px-2 small" style="font-size: 0.7rem;">@Localizer["Join"]</button>
        </div>
    </div>
</div>

<!-- Trending Topics Widget -->
<div class="card border-0 shadow-sm mb-4 rounded-4">
    <div class="card-body">
        <h6 class="card-title fw-bold mb-3">@Localizer["Trending Topics"]</h6>
        <div class="d-flex flex-wrap gap-2">
            <a href="#" class="badge bg-light text-dark text-decoration-none border p-2 rounded-pill">#CarMeets</a>
            <a href="#" class="badge bg-light text-dark text-decoration-none border p-2 rounded-pill">#DragRacing</a>
            <a href="#" class="badge bg-light text-dark text-decoration-none border p-2 rounded-pill">#ClassicCars</a>
            <a href="#" class="badge bg-light text-dark text-decoration-none border p-2 rounded-pill">#Photography</a>
        </div>
    </div>
</div>
