@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!-- Quick Actions -->
<div class="card border-0 shadow-sm mb-4 rounded-4">
    <div class="card-body">
        <h6 class="card-title fw-bold mb-3">@Localizer["Quick Actions"]</h6>
        <div class="d-grid gap-2">
            <a asp-area="Dashboard" asp-controller="Settings" asp-action="Index" class="btn btn-outline-primary btn-sm">
                <i class="fas fa-cog me-2"></i>@Localizer["Settings"]
            </a>
            <a asp-area="Dashboard" asp-controller="AuditLogs" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-history me-2"></i>@Localizer["Audit Logs"]
            </a>
            <a asp-area="Dashboard" asp-controller="Security" asp-action="Index" class="btn btn-outline-warning btn-sm">
                <i class="fas fa-shield-alt me-2"></i>@Localizer["Security"]
            </a>
        </div>
    </div>
</div>

<!-- System Status -->
<div class="card border-0 shadow-sm mb-4 rounded-4">
    <div class="card-body">
        <h6 class="card-title fw-bold mb-3">@Localizer["System Status"]</h6>
        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="small">@Localizer["Server"]</span>
            <span class="badge bg-success">@Localizer["Online"]</span>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="small">@Localizer["Database"]</span>
            <span class="badge bg-success">@Localizer["Connected"]</span>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <span class="small">@Localizer["Cache"]</span>
            <span class="badge bg-success">@Localizer["Active"]</span>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="card border-0 shadow-sm mb-4 rounded-4">
    <div class="card-body">
        <h6 class="card-title fw-bold mb-3">@Localizer["Recent Activity"]</h6>
        <div class="small text-muted">
            <div class="mb-2">
                <i class="fas fa-user-plus text-primary me-2"></i>
                <span>5 new users today</span>
            </div>
            <div class="mb-2">
                <i class="fas fa-comments text-info me-2"></i>
                <span>23 new posts</span>
            </div>
            <div>
                <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                <span>2 pending reports</span>
            </div>
        </div>
    </div>
</div>
