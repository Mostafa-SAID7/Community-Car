@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="list-group list-group-flush border-0">
    <a asp-controller="Feed" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Feed" ? "active" : "")">
        <i class="fas fa-home fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Feed"]</span>
    </a>
    <a asp-controller="Questions" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Questions" && Context.Request.Query["tab"] != "bookmarks" ? "active" : "")">
        <i class="fas fa-question-circle fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Questions"]</span>
    </a>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Questions" asp-action="Bookmarks" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["action"]?.ToString() == "Bookmarks" ? "active" : "")">
            <i class="fas fa-bookmark fa-fw me-3"></i>
            <span class="fw-medium">@Localizer["Bookmarks"]</span>
        </a>
    }

    <a asp-controller="Friends" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Friends" ? "active" : "")">
        <i class="fas fa-user-friends fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Friends"]</span>
    </a>
    <a asp-controller="Groups" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Groups" ? "active" : "")">
        <i class="fas fa-users fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Groups"]</span>
    </a>
    <a asp-controller="Events" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Events" ? "active" : "")">
        <i class="fas fa-calendar-alt fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Events"]</span>
    </a>
    <a asp-controller="Reviews" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reviews" ? "active" : "")">
        <i class="fas fa-star fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Reviews"]</span>
    </a>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Badges" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Badges" ? "active" : "")">
            <i class="fas fa-medal fa-fw me-3"></i>
            <span class="fw-medium">@Localizer["Badges"]</span>
        </a>
    }
    <a asp-controller="Posts" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Posts" ? "active" : "")">
        <i class="fas fa-edit fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Posts"]</span>
    </a>
    <a asp-controller="Maps" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Maps" ? "active" : "")">
        <i class="fas fa-map-marked-alt fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Maps"]</span>
    </a>
    <a asp-controller="Guides" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "Guides" ? "active" : "")">
        <i class="fas fa-book-open fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["Guides"]</span>
    </a>
    <a asp-controller="News" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["controller"]?.ToString() == "News" ? "active" : "")">
        <i class="fas fa-newspaper fa-fw me-3"></i>
        <span class="fw-medium">@Localizer["News"]</span>
    </a>
    
    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
    {
        <div class="admin-section-header">Admin</div>
        <a asp-area="Dashboard" asp-controller="Overview" asp-action="Index" class="list-group-item list-group-item-action border-0 d-flex align-items-center bg-transparent px-3 py-2 mb-1 rounded @(ViewContext.RouteData.Values["area"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["controller"]?.ToString() == "Overview" ? "active" : "")">
            <i class="fas fa-tachometer-alt fa-fw me-3"></i>
            <span class="fw-medium">@Localizer["Dashboard"]</span>
        </a>
    }
</div>

