@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    var isRtl = culture.StartsWith("ar", StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="@culture" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Community Car</title>
    
    <link rel="icon" type="image/png" href="~/images/logo/logo.png" />

    <!-- Inline Theme Loader - Must run before any CSS to prevent flash -->
    <script>
        (function() {
            const THEME_KEY = 'community-car-theme';
            const savedTheme = localStorage.getItem(THEME_KEY);
            
            if (savedTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
            } else if (savedTheme === 'light') {
                document.documentElement.removeAttribute('data-theme');
            } else {
                // Check system preference if no saved theme
                const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                if (prefersDark) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                }
            }
        })();
    </script>

    <!-- Libraries CSS -->
    @if (isRtl)
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" defer></script>
    
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <partial name="_Header" />
    
    <main role="main" class="container-fluid my-4">
        @{
            var hideSidebars = ViewData["HideSidebars"] as bool? ?? false;
        }
        @if (hideSidebars)
        {
            <div class="row">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                <!-- Left Sidebar (Desktop: 2 cols, Mobile: toggleable offcanvas) -->
                <div class="col-lg-2 sidebar-left">
                    <div class="sidebar-sticky">
                        @if (IsSectionDefined("LeftSidebar"))
                        {
                            @await RenderSectionAsync("LeftSidebar", required: false)
                        }
                        else
                        {
                            <partial name="_LeftSidebar" />
                        }
                    </div>
                </div>

                <!-- Main Content (Desktop: 7 cols, Tablet: 9 cols, Mobile: 12 cols) -->
                <div class="col-12 col-md-9 col-lg-7">
                    @RenderBody()
                </div>

                <!-- Right Sidebar (Desktop: 3 cols, Hidden on Tablet and Mobile) -->
                <div class="col-lg-3 sidebar-right">
                    <div class="sidebar-sticky">
                        @if (IsSectionDefined("RightSidebar"))
                        {
                            @await RenderSectionAsync("RightSidebar", required: false)
                        }
                        else
                        {
                            <partial name="Sidebars/_RightSidebar_Generic" />
                        }
                    </div>
                </div>
            </div>
        }
    </main>
    
    <partial name="_Footer" />

    <!-- Sidebar Backdrop -->
    <div class="sidebar-backdrop"></div>

    <!-- Libraries JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/chart.js/chart.umd.min.js"></script>

    <!-- Culture Helper (must load early) -->
    <script src="~/js/culture-helper.js"></script>

    <!-- Core Modular JS -->
    <script src="~/js/core/config.js"></script>
    <script src="~/js/core/helpers.js"></script>
    <script src="~/js/core/ajax.js"></script>
    
    <!-- Utils Modular JS -->
    <script src="~/js/utils/dom.js"></script>
    <script src="~/js/utils/validators.js"></script>
    <script src="~/js/utils/theme-manager.js"></script>
    
    <!-- Layout Modular JS -->
    <script src="~/js/layout/header.js"></script>
    <script src="~/js/layout/navigation.js"></script>
    <script src="~/js/layout/sidebar.js"></script>
    
    <!-- Component Modular JS -->
    <script src="~/js/components/modal.js"></script>
    <script src="~/js/components/dropdown.js"></script>
    <script src="~/js/components/toast.js"></script>
    <script src="~/js/components/charts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="~/js/components/notification.js"></script>
    
    <!-- Storage Manager -->
    <script src="~/js/storage-manager.js"></script>
    
    <!-- Entry Point JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/friends.js" asp-append-version="true"></script>

    <!-- Global I18n for JS -->
    <script>
        window.I18n = {
            culture: '@culture',
            isRtl: @(isRtl ? "true" : "false"),
            translations: {
                notifications: {
                    newFriendRequest: '@Localizer["New Friend Request"].Value',
                    noNewNotifications: '@Localizer["No new notifications"].Value',
                    failedToLoadNotifications: '@Localizer["Failed to load notifications"].Value',
                    viewAll: '@Localizer["View All Notifications"].Value',
                    accept: '@Localizer["Accept"].Value',
                    decline: '@Localizer["Decline"].Value',
                    markAllRead: '@Localizer["Mark all as read"].Value',
                    title: '@Localizer["Notifications"].Value'
                },
                chat: {
                    newMessage: '@Localizer["New message received"].Value'
                },
                alerts: {
                    great: '@Localizer["Great!"].Value',
                    yes: '@Localizer["Yes, do it!"].Value',
                    cancel: '@Localizer["Cancel"].Value'
                },
                common: {
                    search: '@Localizer["Search..."].Value',
                    tryAgain: '@Localizer["Try again"].Value'
                }
            }
        };
    </script>

    <!-- TempData Toast Notifications -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["SuccessToast"] != null)
            {
                <text>window.Toast.show('@TempData["SuccessToast"]', 'success');</text>
            }
            @if (TempData["ErrorToast"] != null)
            {
                <text>window.Toast.show('@TempData["ErrorToast"]', 'error');</text>
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
