@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    var isRtl = culture.StartsWith("ar", StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="@culture" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Community Car</title>
    
    <link rel="icon" type="image/png" href="~/images/logo/logo.png" />

    <!-- Inline Theme Loader - Must run before any CSS to prevent flash -->
    <script>
        (function() {
            const THEME_KEY = 'community-car-theme';
            const savedTheme = localStorage.getItem(THEME_KEY);
            
            if (savedTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
            } else if (savedTheme === 'light') {
                document.documentElement.removeAttribute('data-theme');
            } else {
                // Check system preference if no saved theme
                const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                if (prefersDark) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                }
            }
        })();
    </script>

    <!-- Libraries CSS -->
    @if (isRtl)
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" defer></script>
    
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body data-authenticated="@(User.Identity?.IsAuthenticated == true ? "true" : "false")" data-page="@(ViewData["PageType"] ?? "generic")">
    <partial name="_Header" />
    
    <main role="main" class="my-4">
        @{
            var hideSidebars = ViewData["HideSidebars"] as bool? ?? false;
            var hideRightSidebar = ViewData["HideRightSidebar"] as bool? ?? false;
        }
        @if (hideSidebars)
        {
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container-fluid">
                <div class="row g-3 align-items-start">
                    <!-- Left Sidebar (Desktop: 2 cols, Tablet: 3 cols, Mobile: toggleable offcanvas) -->
                    <div class="col-md-2 col-lg-2 sidebar-left">
                        <div class="sidebar-sticky">
                            @if (IsSectionDefined("LeftSidebar"))
                            {
                                @await RenderSectionAsync("LeftSidebar", required: false)
                            }
                            else
                            {
                                <partial name="_LeftSidebar" />
                            }
                        </div>
                    </div>

                    <!-- Main Content (Expands when right sidebar is hidden) -->
                    <article class="@(hideRightSidebar ? "col-md-9 col-lg-10" : "col-md-6 col-lg-7")">
                        @RenderBody()
                    </article>

                    <!-- Right Sidebar (Desktop: 3 cols, Tablet: 3 cols, Hidden on Mobile) -->
                    @if (!hideRightSidebar)
                    {
                        <div class="col-md-3 col-lg-3 sidebar-right pe-md-0">
                            <div class="sidebar-sticky">
                                @if (IsSectionDefined("RightSidebar"))
                                {
                                    @await RenderSectionAsync("RightSidebar", required: false)
                                }
                                else
                                {
                                    <partial name="Sidebars/_RightSidebar_Generic" />
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </main>
    
    @{
        var hideFooter = ViewData["HideFooter"] as bool? ?? false;
    }
    @if (!hideFooter)
    {
        <partial name="_Footer" />
    }

    <!-- Sidebar Backdrop -->
    <div class="sidebar-backdrop"></div>

    <!-- Libraries JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/chart.js/chart.umd.min.js"></script>

    <!-- Culture Helper (must load early) -->
    <script src="~/js/culture-helper.js"></script>

    <!-- Core Architecture - Load First -->
    <script src="~/js/utils/common-utils.js"></script>
    <script src="~/js/utils/dom-utils.js"></script>
    <script src="~/js/core/event-bus.js"></script>
    <script src="~/js/core/api-client.js"></script>
    <script src="~/js/core/config.js"></script>
    
    <!-- Utils Modular JS -->
    <script src="~/js/utils/validators.js"></script>
    <script src="~/js/utils/theme-manager.js"></script>
    
    <!-- Layout Modular JS -->
    <script src="~/js/layout/header.js"></script>
    <script src="~/js/layout/navigation.js"></script>
    <script src="~/js/layout/sidebar.js"></script>
    
    <!-- Component Modular JS -->
    <script src="~/js/components/modal.js"></script>
    <script src="~/js/components/dropdown.js"></script>
    <script src="~/js/components/toast.js"></script>
    <script src="~/js/components/tag-input.js"></script>
    <script src="~/js/components/charts.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/components/notification.js"></script>
    
    <!-- SignalR Hubs -->
    <script src="~/js/hubs/post-hub.js"></script>
    
    <!-- Storage Manager -->
    <script src="~/js/storage-manager.js"></script>
    
    <!-- Error Monitor & Dev Tools (Development) -->
    <script src="~/js/utils/error-monitor.js"></script>
    <script src="~/js/utils/dev-tools.js"></script>
    
    <!-- Application Core - Initialize App -->
    <script src="~/js/core/app.js"></script>
    
    <!-- Legacy Scripts (To be refactored) -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Global I18n for JS -->
    <script>
        window.I18n = {
            culture: '@culture',
            isRtl: @(isRtl ? "true" : "false"),
            translations: {
                notifications: {
                    newFriendRequest: '@Localizer["New Friend Request"].Value',
                    noNewNotifications: '@Localizer["No new notifications"].Value',
                    failedToLoadNotifications: '@Localizer["Failed to load notifications"].Value',
                    viewAll: '@Localizer["View All Notifications"].Value',
                    accept: '@Localizer["Accept"].Value',
                    decline: '@Localizer["Decline"].Value',
                    markAllRead: '@Localizer["Mark all as read"].Value',
                    title: '@Localizer["Notifications"].Value'
                },
                chat: {
                    newMessage: '@Localizer["New message received"].Value'
                },
                friends: {
                    accepting: '@Localizer["Accepting..."].Value',
                    rejecting: '@Localizer["Rejecting..."].Value',
                    removing: '@Localizer["Removing..."].Value',
                    blocking: '@Localizer["Blocking..."].Value',
                    unblocking: '@Localizer["Unblocking..."].Value',
                    sending: '@Localizer["Sending..."].Value',
                    sent: '@Localizer["Sent"].Value',
                    addFriend: '@Localizer["Add Friend"].Value',
                    confirmRemove: '@Localizer["Are you sure you want to remove this friend?"].Value',
                    confirmBlock: '@Localizer["Are you sure you want to block this user? They will not be able to send you friend requests or interact with your content."].Value',
                    failedToAccept: '@Localizer["Failed to accept friend request"].Value',
                    failedToReject: '@Localizer["Failed to reject friend request"].Value',
                    failedToRemove: '@Localizer["Failed to remove friend"].Value',
                    failedToBlock: '@Localizer["Failed to block user"].Value',
                    failedToUnblock: '@Localizer["Failed to unblock user"].Value',
                    failedToSend: '@Localizer["Failed to send friend request"].Value'
                },
                guides: {
                    liked: '@Localizer["Liked"].Value',
                    like: '@Localizer["Like"].Value',
                    saved: '@Localizer["Saved"].Value',
                    save: '@Localizer["Save"].Value',
                    copied: '@Localizer["Guide link copied to clipboard!"].Value',
                    copyFailed: '@Localizer["Failed to copy link"].Value'
                },
                alerts: {
                    great: '@Localizer["Great!"].Value',
                    yes: '@Localizer["Yes, do it!"].Value',
                    cancel: '@Localizer["Cancel"].Value',
                    confirm: '@Localizer["Confirm"].Value'
                },
                common: {
                    search: '@Localizer["Search..."].Value',
                    tryAgain: '@Localizer["Try again"].Value',
                    loading: '@Localizer["Loading..."].Value',
                    error: '@Localizer["An error occurred. Please try again."].Value'
                }
            }
        };
    </script>

    <!-- TempData Toast Notifications -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["SuccessToast"] != null)
            {
                <text>window.Toast.show('@TempData["SuccessToast"]', 'success');</text>
            }
            @if (TempData["ErrorToast"] != null)
            {
                <text>window.Toast.show('@TempData["ErrorToast"]', 'error');</text>
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
