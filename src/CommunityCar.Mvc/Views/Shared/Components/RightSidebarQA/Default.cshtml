@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Mvc.ViewModels.Qa.SidebarQAViewModel

<!-- Ask Question Action -->
<div class="d-grid mb-4">
    <a asp-controller="Questions" asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
        <i class="fas fa-plus-circle me-2"></i> @Localizer["Ask Question"]
    </a>
</div>

<!-- Top Tags Widget -->
<div class="card border-0 shadow-sm mb-4 rounded-4">
    <div class="card-body">
        <h6 class="card-title fw-bold mb-3">@Localizer["Top Tags"]</h6>
        <ul class="list-group list-group-flush">
            @if (Model.PopularTags != null && Model.PopularTags.Any())
            {
                foreach (var tag in Model.PopularTags)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                        <a asp-controller="Questions" asp-action="Index" asp-route-tag="@tag.Name" class="text-decoration-none text-body">
                            <span class="badge bg-primary bg-opacity-10 text-primary me-2"><i class="fas fa-tag fa-xs"></i></span>
                            @tag.Name
                        </a>
                        <span class="badge bg-secondary rounded-pill">@tag.UsageCount</span>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item px-0 border-0 text-muted small">@Localizer["No tags found"]</li>
            }
        </ul>
    </div>
</div>

<!-- Unanswered Questions Widget -->
<div class="card border-0 shadow-sm mb-4 rounded-4">
    <div class="card-body">
        <h6 class="card-title fw-bold mb-3">@Localizer["Help Needed"]</h6>
        <div class="vstack gap-3">
            @if (Model.HelpNeededQuestions != null && Model.HelpNeededQuestions.Any())
            {
                foreach (var question in Model.HelpNeededQuestions)
                {
                    <div>
                        <a asp-controller="Questions" asp-action="Details" asp-route-slug="@question.Slug" class="text-decoration-none text-dark fw-bold small d-block mb-1">@question.Title</a>
                        <span class="text-muted" style="font-size: 0.75rem;">@Localizer["Asked"] @question.CreatedAt.ToTimeAgo()</span>
                    </div>
                    <hr class="m-0 text-muted opacity-25">
                }
            }
            else
            {
                <div class="text-muted small">@Localizer["All questions answered!"]</div>
            }
        </div>
    </div>
</div>
