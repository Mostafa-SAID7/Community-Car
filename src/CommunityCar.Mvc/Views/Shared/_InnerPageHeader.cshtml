@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var title = ViewData["HeaderTitle"] ?? ViewData["Title"] ?? Localizer["Page"];
    var description = ViewData["HeaderDescription"] ?? "";
    string iconClass = ViewData["HeaderIcon"]?.ToString() ?? "fas fa-info-circle";
    var actions = ViewData["HeaderActions"] as Microsoft.AspNetCore.Html.IHtmlContent;
}

<div class="inner-page-header">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div class="d-flex align-items-center gap-3">
            <button id="sidebarToggle" class="btn btn-link text-white p-0 d-lg-none" type="button" aria-label="Toggle Sidebar">
                <i class="fas fa-bars fa-lg"></i>
            </button>
            <div>
                <h1 class="mb-2 fw-bold">
                    <i class="@iconClass me-2"></i>@title
                </h1>
            @if (description != null && !string.IsNullOrEmpty(description.ToString()))
            {
                <p class="mb-0 opacity-90">@description</p>
            }
        </div>
        @if (actions != null)
        {
            <div class="header-actions">
                @actions
            </div>
        }
    </div>
</div>
