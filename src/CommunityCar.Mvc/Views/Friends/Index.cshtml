@model IEnumerable<CommunityCar.Web.ViewModels.Community.FriendshipViewModel>
@{
    ViewData["Title"] = "My Friends";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2">My Friends</h1>
            <p class="text-muted">Manage your friendships and connections</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Search" class="btn btn-outline-primary me-2">
                <i class="bi bi-search"></i> Find Friends
            </a>
            <a asp-action="Requests" class="btn btn-outline-primary">
                <i class="bi bi-person-plus"></i> Requests
                @if (ViewBag.RequestCount != null && ViewBag.RequestCount > 0)
                {
                    <span class="badge bg-danger">@ViewBag.RequestCount</span>
                }
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Index">
                        <i class="bi bi-people"></i> Friends (@(ViewBag.FriendCount ?? 0))
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Requests">
                        <i class="bi bi-person-plus"></i> Requests
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Suggestions">
                        <i class="bi bi-lightbulb"></i> Suggestions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Blocked">
                        <i class="bi bi-slash-circle"></i> Blocked
                    </a>
                </li>
            </ul>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <h3 class="mt-3">No Friends Yet</h3>
            <p class="text-muted">Start connecting with people to build your network!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var friend in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(friend.ProfilePictureUrl))
                                {
                                    <img src="@friend.ProfilePictureUrl" alt="@friend.FriendName" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                        <span class="fs-4">@friend.FriendName.Substring(0, 1)</span>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">
                                        <a href="/Identity/Profiles/@friend.Slug" class="text-decoration-none text-dark">
                                            @friend.FriendName
                                        </a>
                                    </h5>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-check"></i> Friends since @friend.Since.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="/Identity/Profiles/@friend.Slug" class="btn btn-sm btn-outline-primary flex-grow-1">
                                    <i class="bi bi-person"></i> View Profile
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <form asp-action="RemoveFriend" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to remove this friend?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="friendId" value="@friend.FriendId" />
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-person-dash"></i> Remove Friend
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="BlockUser" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to block this user?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="friendId" value="@friend.FriendId" />
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-slash-circle"></i> Block User
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/friends.js"></script>
}
