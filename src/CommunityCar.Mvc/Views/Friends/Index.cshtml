@model IEnumerable<CommunityCar.Mvc.ViewModels.Friends.FriendshipViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["My Friends"].Value;
}

@{
    ViewData["HeaderTitle"] = Localizer["My Friends"].Value;
    ViewData["HeaderDescription"] = Localizer["Manage your friendships and connections"].Value;
    ViewData["HeaderIcon"] = "fas fa-user-friends";
    
    var requestCount = ViewBag.RequestCount ?? 0;
    var requestBadge = requestCount > 0 ? $"<span class='badge bg-danger ms-1'>{requestCount}</span>" : "";
    
    var searchUrl = Url.Action("Search");
    var requestsUrl = Url.Action("Requests");
    var actionsHtml = "<div class='d-flex gap-2 flex-wrap'>" +
                      "<a href='" + searchUrl + "' class='btn btn-light'>" +
                      "<i class='fas fa-search me-2'></i>" + Localizer["Find Friends"].Value +
                      "</a>" +
                      "<a href='" + requestsUrl + "' class='btn btn-light'>" +
                      "<i class='fas fa-user-plus me-2'></i>" + Localizer["Requests"].Value + requestBadge +
                      "</a>" +
                      "</div>";
    ViewData["HeaderActions"] = Html.Raw(actionsHtml);
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/friends.css" />
}

@{
    ViewData["PageType"] = "friends";
}

@section Scripts {
    <script src="~/js/friends-hub.js"></script>
    <script src="~/js/pages/friends.js"></script>
}

<partial name="_InnerPageHeader" />

<div class="container py-4" data-friend-hub>

    <!-- Premium Navigation Tabs -->
    <div class="friends-nav">
        <a class="nav-link active" asp-action="Index">
            <i class="fas fa-user-friends"></i> @Localizer["Friends"].Value 
            <span class="badge  text-primary ms-2">@(ViewBag.FriendCount ?? 0)</span>
        </a>
        <a class="nav-link" asp-action="Requests">
            <i class="fas fa-user-plus"></i> @Localizer["Received"].Value
             @if (requestCount > 0) { <span class="badge bg-danger ms-2">@requestCount</span> }
        </a>
        <a class="nav-link" asp-action="SentRequests">
            <i class="fas fa-paper-plane"></i> @Localizer["Sent"].Value
        </a>
        <a class="nav-link" asp-action="Suggestions">
            <i class="fas fa-lightbulb"></i> @Localizer["Suggestions"].Value
        </a>
        <a class="nav-link" asp-action="Blocked">
            <i class="fas fa-ban"></i> @Localizer["Blocked"].Value
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="friends-empty">
            <div class="friends-empty-icon">
                <i class="fas fa-user-friends"></i>
            </div>
            <h3 class="fw-bold mb-2">@Localizer["No Friends Yet"].Value</h3>
            <p class="text-muted mb-4">@Localizer["Start connecting with people to build your network!"].Value</p>
            <a href="@Url.Action("Search")" class="btn btn-primary rounded-pill px-4 py-2">
                <i class="fas fa-search me-2"></i>@Localizer["Find Friends"].Value
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var friend in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <partial name="_FriendCard" model="friend" />
                </div>
            }
        </div>
    }
</div>


