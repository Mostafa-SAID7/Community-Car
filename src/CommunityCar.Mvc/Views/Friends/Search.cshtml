@model IEnumerable<CommunityCar.Web.ViewModels.Community.UserSearchViewModel>
@{
    ViewData["Title"] = "Find Friends";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2">Find Friends</h1>
            <p class="text-muted">Search for people to connect with</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-people"></i> My Friends
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <form asp-action="Search" method="get" class="d-flex gap-2">
                <input type="text" name="query" class="form-control" placeholder="Search by name or username..." value="@ViewBag.SearchQuery" autofocus>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
            </form>
        </div>
    </div>

    @if (ViewBag.SearchQuery != null)
    {
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-search display-1 text-muted"></i>
                <h3 class="mt-3">No Results Found</h3>
                <p class="text-muted">Try searching with different keywords.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var user in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                    {
                                        <img src="@user.ProfilePictureUrl" alt="@user.Name" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                            <span class="fs-4">@user.Name.Substring(0, 1)</span>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-1">
                                            <a href="/Identity/Profiles/@user.Slug" class="text-decoration-none text-dark">
                                                @user.Name
                                            </a>
                                        </h5>
                                        <small class="text-muted">@@@user.UserName</small>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <a href="/Identity/Profiles/@user.Slug" class="btn btn-sm btn-outline-secondary flex-grow-1">
                                        <i class="bi bi-person"></i> View Profile
                                    </a>
                                    
                                    @if (user.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.None)
                                    {
                                        <form asp-action="SendRequest" method="post" class="flex-grow-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="friendId" value="@user.UserId" />
                                            <button type="submit" class="btn btn-sm btn-primary w-100">
                                                <i class="bi bi-person-plus"></i> Add Friend
                                            </button>
                                        </form>
                                    }
                                    else if (user.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.Pending)
                                    {
                                        <button class="btn btn-sm btn-secondary w-100" disabled>
                                            <i class="bi bi-clock"></i> Request Sent
                                        </button>
                                    }
                                    else if (user.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.Accepted)
                                    {
                                        <button class="btn btn-sm btn-success w-100" disabled>
                                            <i class="bi bi-check-circle"></i> Friends
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-search display-1 text-muted"></i>
            <h3 class="mt-3">Search for Friends</h3>
            <p class="text-muted">Enter a name or username to find people you know.</p>
            <a asp-action="Suggestions" class="btn btn-primary mt-3">
                <i class="bi bi-lightbulb"></i> View Suggestions
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/friends.js"></script>
}
