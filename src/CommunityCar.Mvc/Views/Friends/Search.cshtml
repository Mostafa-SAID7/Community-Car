@model IEnumerable<CommunityCar.Mvc.ViewModels.Friends.UserSearchViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Find Friends"].Value;
}

@{
    ViewData["HeaderTitle"] = Localizer["Find Friends"].Value;
    ViewData["HeaderDescription"] = Localizer["Search for people to connect with"].Value;
    ViewData["HeaderIcon"] = "fas fa-search";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/friends.css" />
}

@{
    ViewData["PageType"] = "friends";
}

@section Scripts {
    <script src="~/js/friends-hub.js"></script>
    <script src="~/js/pages/friends.js"></script>
}

<partial name="_InnerPageHeader" />

<div class="container py-4" data-friend-hub>

    <!-- Premium Navigation Tabs -->
    <div class="friends-nav">
        <a class="nav-link" asp-action="Index">
            <i class="fas fa-user-friends"></i> @Localizer["Friends"] 
        </a>
        <a class="nav-link" asp-action="Requests">
            <i class="fas fa-user-plus"></i> @Localizer["Received"]
             @if (ViewBag.RequestCount > 0) { <span class="badge bg-danger ms-2">@ViewBag.RequestCount</span> }
        </a>
        <a class="nav-link" asp-action="SentRequests">
            <i class="fas fa-paper-plane"></i> @Localizer["Sent"]
        </a>
        <a class="nav-link" asp-action="Suggestions">
            <i class="fas fa-lightbulb"></i> @Localizer["Suggestions"]
        </a>
        <a class="nav-link" asp-action="Blocked">
            <i class="fas fa-ban"></i> @Localizer["Blocked"]
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Bar -->
    <div class="friends-search">
        <form asp-action="Search" method="get" class="search-input-group" id="friendSearchForm">
            <i class="fas fa-search"></i>
            <input type="text" name="query" id="friendSearchInput" class="form-control" placeholder="@Localizer["Search by name or username..."]" value="@ViewBag.SearchQuery" autofocus autocomplete="off">
            <div id="searchSpinner" class="search-spinner" style="display: none;">
                <i class="fas fa-spinner fa-spin"></i>
            </div>
        </form>
    </div>

    <!-- Live Search Results Container -->
    <div id="liveSearchResults" style="display: none;">
        <div class="row g-4" id="searchResultsGrid">
            <!-- Results will be populated here -->
        </div>
    </div>

    <!-- Original Results Container -->
    <div id="originalResults">
    @if (ViewBag.SearchQuery != null)
    {
        @if (!Model.Any())
        {
            <div class="friends-empty">
                <div class="friends-empty-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h3 class="fw-bold mb-2">@Localizer["No Results Found"]</h3>
                <p class="text-muted mb-4">@Localizer["Try searching with different keywords."]</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var user in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="friend-card">
                            <div class="friend-avatar-container">
                                @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                {
                                    <img src="@user.ProfilePictureUrl" alt="@user.Name" class="friend-avatar">
                                }
                                else
                                {
                                    <div class="friend-avatar-placeholder">
                                        @user.Name.Substring(0, 1)
                                    </div>
                                }
                                
                                <div class="friend-info">
                                    <a href="@Url.Action("Index", "Profiles", new { area = "Identity", id = user.UserId })" class="friend-name">
                                        @user.Name
                                    </a>
                                    <div class="friend-meta">
                                        @user.UserName
                                    </div>
                                </div>
                            </div>

                            <div class="friend-actions mt-auto d-flex gap-2">
                                <a href="@Url.Action("Index", "Profiles", new { area = "Identity", id = user.UserId })" class="btn btn-outline-secondary rounded-pill flex-grow-1">
                                    <i class="fas fa-user me-2"></i> @Localizer["Profile"]
                                </a>
                                
                                @if (user.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.None)
                                {
                                    <form asp-action="SendRequest" method="post" class="flex-grow-1 ajax-add-friend-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="friendId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-primary w-100 rounded-pill">
                                            <i class="fas fa-user-plus me-2"></i> @Localizer["Add"]
                                        </button>
                                    </form>
                                }
                                else if (user.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.Pending)
                                {
                                    <button class="btn btn-secondary w-100 rounded-pill flex-grow-1" disabled>
                                        <i class="fas fa-clock me-2"></i> @Localizer["Sent"]
                                    </button>
                                }
                                else if (user.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.Accepted)
                                {
                                    <button class="btn btn-success w-100 rounded-pill flex-grow-1" disabled>
                                        <i class="fas fa-check me-2"></i> @Localizer["Friend"]
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="friends-empty">
            <div class="friends-empty-icon">
                <i class="fas fa-search"></i>
            </div>
            <h3 class="fw-bold mb-2">@Localizer["Search for Friends"]</h3>
            <p class="text-muted mb-4">@Localizer["Enter a name or username to find people you know."]</p>
            <a asp-action="Suggestions" class="btn btn-primary rounded-pill px-4 py-2">
                <i class="fas fa-lightbulb me-2"></i>@Localizer["View Suggestions"]
            </a>
        </div>
    }
    </div>
</div>


