@model IEnumerable<CommunityCar.Web.ViewModels.Community.FriendRequestViewModel>
@{
    ViewData["Title"] = "Friend Requests";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2">Friend Requests</h1>
            <p class="text-muted">Review and manage your pending friend requests</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Friends
            </a>
        </div>
    </div>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link" asp-action="Index">
                <i class="bi bi-people"></i> My Friends
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-action="Requests">
                <i class="bi bi-inbox"></i> Requests
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Blocked">
                <i class="bi bi-slash-circle"></i> Blocked
            </a>
        </li>
    </ul>

    <div class="row mb-3">
        <div class="col-12">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index">
                        <i class="bi bi-people"></i> Friends
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Requests">
                        <i class="bi bi-person-plus"></i> Requests (@(ViewBag.RequestCount ?? 0))
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Suggestions">
                        <i class="bi bi-lightbulb"></i> Suggestions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Blocked">
                        <i class="bi bi-slash-circle"></i> Blocked
                    </a>
                </li>
            </ul>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h3 class="mt-3">No Pending Requests</h3>
            <p class="text-muted">You don't have any friend requests at the moment.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-people"></i> View My Friends
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var request in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(request.ProfilePictureUrl))
                                {
                                    <img src="@request.ProfilePictureUrl" alt="@request.UserName" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                        <span class="fs-4">@request.UserName.Substring(0, 1)</span>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">
                                        <a href="/Identity/Profiles/@request.Slug" class="text-decoration-none text-dark">
                                            @request.UserName
                                        </a>
                                    </h5>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> @request.ReceivedAt.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <form asp-action="AcceptRequest" method="post" class="flex-grow-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="friendId" value="@request.UserId" />
                                    <button type="submit" class="btn btn-sm btn-success w-100">
                                        <i class="bi bi-check-circle"></i> Accept
                                    </button>
                                </form>
                                <form asp-action="RejectRequest" method="post" class="flex-grow-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="friendId" value="@request.UserId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </form>
                            </div>

                            <div class="mt-2">
                                <a href="/Identity/Profiles/@request.Slug" class="btn btn-sm btn-outline-secondary w-100">
                                    <i class="bi bi-person"></i> View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/friends.js"></script>
}
