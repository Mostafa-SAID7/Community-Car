@model CommunityCar.Web.ViewModels.Community.FriendshipViewModel

<div class="card h-100 shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" alt="@Model.FriendName" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
            }
            else
            {
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                    <span class="fs-4">@Model.FriendName.Substring(0, 1)</span>
                </div>
            }
            <div class="flex-grow-1">
                <h5 class="card-title mb-1">
                    <a href="/Identity/Profiles/@Model.Slug" class="text-decoration-none text-dark">
                        @Model.FriendName
                    </a>
                </h5>
                <small class="text-muted">
                    <i class="bi bi-calendar-check"></i> Friends since @Model.Since.ToString("MMM dd, yyyy")
                </small>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a href="/Identity/Profiles/@Model.Slug" class="btn btn-sm btn-outline-primary flex-grow-1">
                <i class="bi bi-person"></i> View Profile
            </a>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <form asp-controller="Friends" asp-action="RemoveFriend" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to remove this friend?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="friendId" value="@Model.FriendId" />
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="bi bi-person-dash"></i> Remove Friend
                            </button>
                        </form>
                    </li>
                    <li>
                        <form asp-controller="Friends" asp-action="BlockUser" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to block this user?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="friendId" value="@Model.FriendId" />
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="bi bi-slash-circle"></i> Block User
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
