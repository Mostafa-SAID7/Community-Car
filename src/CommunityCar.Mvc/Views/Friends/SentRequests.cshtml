@model IEnumerable<CommunityCar.Web.ViewModels.Community.FriendRequestViewModel>
@{
    ViewData["Title"] = "Sent Friend Requests";
}

@{
    ViewData["HeaderTitle"] = "Sent Friend Requests";
    ViewData["HeaderDescription"] = "View friend requests you've sent";
    ViewData["HeaderIcon"] = "fas fa-paper-plane";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/friends.css" />
}

@{
    ViewData["PageType"] = "friends";
}

@section Scripts {
    <script src="~/js/friends-hub.js"></script>
    <script src="~/js/pages/friends.js"></script>
}

<partial name="_InnerPageHeader" />

<div class="container py-4" data-friend-hub>

    <!-- Premium Navigation Tabs -->
    <div class="friends-nav">
        <a class="nav-link" asp-action="Index">
            <i class="fas fa-user-friends"></i> Friends 
        </a>
        <a class="nav-link" asp-action="Requests">
            <i class="fas fa-user-plus"></i> Received
        </a>
        <a class="nav-link active" asp-action="SentRequests">
            <i class="fas fa-paper-plane"></i> Sent
            @if (ViewBag.SentRequestCount > 0) { <span class="badge bg-white text-primary ms-2">@ViewBag.SentRequestCount</span> }
        </a>
        <a class="nav-link" asp-action="Suggestions">
            <i class="fas fa-lightbulb"></i> Suggestions
        </a>
        <a class="nav-link" asp-action="Blocked">
            <i class="fas fa-ban"></i> Blocked
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="friends-empty">
            <div class="friends-empty-icon">
                <i class="fas fa-paper-plane"></i>
            </div>
            <h3 class="fw-bold mb-2">No Pending Requests</h3>
            <p class="text-muted mb-4">You haven't sent any friend requests yet.</p>
            <a href="@Url.Action("Search")" class="btn btn-primary rounded-pill px-4 py-2">
                <i class="fas fa-search me-2"></i>Find Friends
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var request in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="friend-card">
                         <div class="friend-avatar-container">
                            @if (!string.IsNullOrEmpty(request.ProfilePictureUrl))
                            {
                                <img src="@request.ProfilePictureUrl" alt="@request.UserName" class="friend-avatar">
                            }
                            else
                            {
                                <div class="friend-avatar-placeholder">
                                    @request.UserName.Substring(0, 1)
                                </div>
                            }
                            
                            <div class="friend-info">
                                <a href="@Url.Action("Index", "Profiles", new { area = "Identity", id = request.Slug })" class="friend-name">
                                    @request.UserName
                                </a>
                                <div class="friend-meta">
                                    <i class="fas fa-clock"></i> Sent @request.ReceivedAt.ToString("MMM dd")
                                </div>
                            </div>
                        </div>

                        <div class="friend-actions mt-auto">
                            <div class="text-center text-muted small">
                                <i class="fas fa-hourglass-half me-1"></i> Pending
                            </div>
                            <form asp-action="RemoveFriend" method="post" class="ajax-remove-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="friendId" value="@request.UserId" />
                                <button type="submit" class="btn btn-outline-danger w-100 rounded-pill mt-2">
                                    <i class="fas fa-times me-2"></i> Cancel Request
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
