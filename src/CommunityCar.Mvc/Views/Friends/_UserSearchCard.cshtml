@model CommunityCar.Web.ViewModels.Community.UserSearchViewModel

<div class="card h-100 shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" alt="@Model.Name" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
            }
            else
            {
                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                    <span class="fs-4">@Model.Name.Substring(0, 1)</span>
                </div>
            }
            <div class="flex-grow-1">
                <h5 class="card-title mb-1">
                    <a href="@Url.Action("Index", "Profiles", new { area = "Identity", id = Model.Slug })" class="text-decoration-none text-dark">
                        @Model.Name
                    </a>
                </h5>
                <small class="text-muted">@@@Model.UserName</small>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a href="@Url.Action("Index", "Profiles", new { area = "Identity", id = Model.Slug })" class="btn btn-sm btn-outline-secondary flex-grow-1">
                <i class="bi bi-person"></i> View Profile
            </a>
            
            @if (Model.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.None)
            {
                <form asp-controller="Friends" asp-action="SendRequest" method="post" class="flex-grow-1">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="friendId" value="@Model.UserId" />
                    <button type="submit" class="btn btn-sm btn-primary w-100">
                        <i class="bi bi-person-plus"></i> Add Friend
                    </button>
                </form>
            }
            else if (Model.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.Pending)
            {
                <button class="btn btn-sm btn-secondary w-100" disabled>
                    <i class="bi bi-clock"></i> Request Sent
                </button>
            }
            else if (Model.FriendshipStatus == CommunityCar.Domain.Enums.Community.friends.FriendshipStatus.Accepted)
            {
                <button class="btn btn-sm btn-success w-100" disabled>
                    <i class="bi bi-check-circle"></i> Friends
                </button>
            }
        </div>
    </div>
</div>
