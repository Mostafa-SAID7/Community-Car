@model IEnumerable<CommunityCar.Mvc.ViewModels.Friends.BlockedUserViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Blocked"].Value;
}

@{
    ViewData["HeaderTitle"] = Localizer["Blocked"].Value;
    ViewData["HeaderDescription"] = Localizer["Blocked users cannot send you friend requests or interact with your content."].Value;
    ViewData["HeaderIcon"] = "fas fa-ban";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/friends.css" />
}

@{
    ViewData["PageType"] = "friends";
}

@section Scripts {
    <script src="~/js/friends-hub.js"></script>
    <script src="~/js/pages/friends.js"></script>
}

<partial name="_InnerPageHeader" />

<div class="container py-4" data-friend-hub>

    <!-- Premium Navigation Tabs -->
    <div class="friends-nav">
        <a class="nav-link" asp-action="Index">
            <i class="fas fa-user-friends"></i> @Localizer["Friends"] 
        </a>
        <a class="nav-link" asp-action="Requests">
            <i class="fas fa-user-plus"></i> @Localizer["Received"]
             @if (ViewBag.RequestCount > 0) { <span class="badge bg-danger ms-2">@ViewBag.RequestCount</span> }
        </a>
        <a class="nav-link" asp-action="SentRequests">
            <i class="fas fa-paper-plane"></i> @Localizer["Sent"]
        </a>
        <a class="nav-link" asp-action="Suggestions">
            <i class="fas fa-lightbulb"></i> @Localizer["Suggestions"]
        </a>
        <a class="nav-link active" asp-action="Blocked">
            <i class="fas fa-ban"></i> @Localizer["Blocked"]
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-pill px-4 shadow-sm border-0 mb-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="friends-empty">
            <div class="friends-empty-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <h3 class="fw-bold mb-2">@Localizer["No Blocked Users"]</h3>
            <p class="text-muted mb-4">@Localizer["You haven't blocked anyone yet."]</p>
            <a href="@Url.Action("Index")" class="btn btn-primary rounded-pill px-4 py-2">
                <i class="fas fa-users me-2"></i>@Localizer["View My Friends"]
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-light border-0 shadow-sm rounded-xl mb-4 d-flex align-items-center gap-3 p-3">
            <i class="fas fa-info-circle text-primary fs-4"></i>
            <span class="text-secondary">@Localizer["Blocked users cannot send you friend requests or interact with your content."]</span>
        </div>

        <div class="row g-4">
            @foreach (var user in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="friend-card" style="border-left: 4px solid var(--red-500);">
                        <div class="friend-avatar-container">
                            @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                            {
                                <img src="@user.ProfilePictureUrl" alt="@user.UserName" class="friend-avatar" style="filter: grayscale(100%);">
                            }
                            else
                            {
                                <div class="friend-avatar-placeholder bg-secondary">
                                    @user.UserName.Substring(0, 1)
                                </div>
                            }
                            
                            <div class="friend-info">
                                <span class="friend-name text-muted">
                                    @user.UserName
                                </span>
                                <div class="friend-meta text-danger">
                                    <i class="fas fa-ban"></i> @Localizer["Blocked"] @user.BlockedAt.ToString("MMM dd")
                                </div>
                            </div>
                        </div>

                        <div class="friend-actions mt-auto">
                            <form asp-action="UnblockUser" method="post" class="w-100 ajax-unblock-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="friendId" value="@user.UserId" />
                                <button type="submit" class="btn btn-outline-success w-100 rounded-pill">
                                    <i class="fas fa-unlock me-2"></i> @Localizer["Unblock User"]
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
