@model IEnumerable<CommunityCar.Web.ViewModels.Community.BlockedUserViewModel>
@{
    ViewData["Title"] = "Blocked Users";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h2">Blocked Users</h1>
            <p class="text-muted">Manage users you have blocked</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Friends
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index">
                        <i class="bi bi-people"></i> Friends
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Requests">
                        <i class="bi bi-person-plus"></i> Requests
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Suggestions">
                        <i class="bi bi-lightbulb"></i> Suggestions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Blocked">
                        <i class="bi bi-slash-circle"></i> Blocked
                    </a>
                </li>
            </ul>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-shield-check display-1 text-muted"></i>
            <h3 class="mt-3">No Blocked Users</h3>
            <p class="text-muted">You haven't blocked anyone yet.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-people"></i> View My Friends
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Blocked users cannot send you friend requests or interact with your content.
        </div>

        <div class="row g-4">
            @foreach (var user in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-danger">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                {
                                    <img src="@user.ProfilePictureUrl" alt="@user.UserName" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover; filter: grayscale(100%);">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-danger text-white d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                        <span class="fs-4">@user.UserName.Substring(0, 1)</span>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">@user.UserName</h5>
                                    <small class="text-muted">
                                        <i class="bi bi-slash-circle"></i> Blocked @user.BlockedAt.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            </div>

                            <form asp-action="UnblockUser" method="post" onsubmit="return confirm('Are you sure you want to unblock this user?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="friendId" value="@user.UserId" />
                                <button type="submit" class="btn btn-sm btn-outline-success w-100">
                                    <i class="bi bi-unlock"></i> Unblock User
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
