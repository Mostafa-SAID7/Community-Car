@model MapPointDetailsViewModel
@using CommunityCar.Mvc.ViewModels.Maps

@{
    ViewData["Title"] = Model.MapPoint.Name;
    var point = Model.MapPoint;
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Map Points</a></li>
            <li class="breadcrumb-item active">@point.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <!-- Map Point Header -->
            <div class="card mb-4">
                @if (!string.IsNullOrEmpty(point.ImageUrl))
                {
                    <img src="@point.ImageUrl" class="card-img-top" alt="@point.Name" style="max-height: 400px; object-fit: cover;">
                }
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <span class="badge bg-primary me-2">@point.TypeName</span>
                            @if (point.IsVerified)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Verified
                                </span>
                            }
                        </div>
                        @if (point.IsOwner)
                        {
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@point.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteMapPoint('@point.Id')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        }
                    </div>

                    <h1 class="h2 mb-3">@point.Name</h1>

                    @if (!string.IsNullOrEmpty(point.Description))
                    {
                        <div class="mb-3">
                            <p class="lead">@point.Description</p>
                        </div>
                    }

                    <!-- Rating Display -->
                    @if (point.AverageRating > 0)
                    {
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <h3 class="mb-0">@point.AverageRating.ToString("F1")</h3>
                                </div>
                                <div>
                                    <div class="text-warning">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= point.AverageRating ? "-fill" : "")" style="font-size: 1.2rem;"></i>
                                        }
                                    </div>
                                    <small class="text-muted">@point.RatingCount ratings</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="d-flex gap-2 mb-3">
                            <button type="button" class="btn btn-outline-danger" onclick="toggleFavorite('@point.Id')">
                                <i class="bi bi-heart@(point.IsFavorited ? "-fill" : "")"></i> 
                                @(point.IsFavorited ? "Unfavorite" : "Favorite")
                            </button>
                            <button type="button" class="btn btn-outline-success" onclick="checkIn('@point.Id')">
                                <i class="bi bi-check-circle"></i> Check In
                            </button>
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#ratingModal">
                                <i class="bi bi-star"></i> Rate
                            </button>
                        </div>
                    }

                    <!-- Map -->
                    <div class="mb-3">
                        <div id="map" style="height: 300px; background: #e9ecef; border-radius: 0.25rem;">
                            <div class="d-flex align-items-center justify-content-center h-100">
                                <div class="text-center">
                                    <i class="bi bi-geo-alt" style="font-size: 3rem; color: #6c757d;"></i>
                                    <p class="text-muted">Map: @point.Latitude, @point.Longitude</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Comments (@Model.Comments.TotalCount)</h5>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form id="commentForm" class="mb-4">
                            <div class="mb-3">
                                <textarea id="commentContent" class="form-control" rows="3" placeholder="Add a comment..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Post Comment
                            </button>
                        </form>
                    }

                    <div id="commentsList">
                        @if (Model.Comments.Items.Any())
                        {
                            @foreach (var comment in Model.Comments.Items)
                            {
                                <div class="d-flex mb-3">
                                    @if (!string.IsNullOrEmpty(comment.UserAvatar))
                                    {
                                        <img src="@comment.UserAvatar" alt="@comment.UserName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <div class="bg-light p-3 rounded">
                                            <strong>@comment.UserName</strong>
                                            <small class="text-muted ms-2">@comment.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</small>
                                            <p class="mb-0 mt-2">@comment.Content</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No comments yet. Be the first to comment!</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Location Details Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Location Details</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(point.Address))
                    {
                        <div class="mb-3">
                            <i class="bi bi-geo-alt text-primary"></i>
                            <strong>Address</strong>
                            <p class="mb-0">@point.Address</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(point.PhoneNumber))
                    {
                        <div class="mb-3">
                            <i class="bi bi-telephone text-primary"></i>
                            <strong>Phone</strong>
                            <p class="mb-0">
                                <a href="tel:@point.PhoneNumber">@point.PhoneNumber</a>
                            </p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(point.Website))
                    {
                        <div class="mb-3">
                            <i class="bi bi-globe text-primary"></i>
                            <strong>Website</strong>
                            <p class="mb-0">
                                <a href="@point.Website" target="_blank">Visit Website <i class="bi bi-box-arrow-up-right"></i></a>
                            </p>
                        </div>
                    }
                    <div class="mb-3">
                        <i class="bi bi-eye text-primary"></i>
                        <strong>Views</strong>
                        <p class="mb-0">@point.ViewCount</p>
                    </div>
                    @if (point.CheckInCount > 0)
                    {
                        <div class="mb-3">
                            <i class="bi bi-check-circle text-primary"></i>
                            <strong>Check-ins</strong>
                            <p class="mb-0">@point.CheckInCount</p>
                        </div>
                    }
                    <div class="mb-0">
                        <i class="bi bi-calendar text-primary"></i>
                        <strong>Added</strong>
                        <p class="mb-0">@point.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>

            <!-- Nearby Points -->
            @if (Model.NearbyPoints.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Nearby Locations</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var nearby in Model.NearbyPoints)
                        {
                            <div class="mb-3">
                                <a asp-action="Details" asp-route-slug="@nearby.Slug" class="text-decoration-none">
                                    <strong>@nearby.Name</strong>
                                </a>
                                <br>
                                <small class="text-muted">
                                    <span class="badge bg-secondary">@nearby.TypeName</span>
                                    @if (nearby.AverageRating > 0)
                                    {
                                        <span class="text-warning">
                                            <i class="bi bi-star-fill"></i> @nearby.AverageRating.ToString("F1")
                                        </span>
                                    }
                                </small>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Rating Modal -->
<div class="modal fade" id="ratingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rate this Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="ratingForm">
                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <div class="rating-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi bi-star rating-star" data-rating="@i" style="font-size: 2rem; cursor: pointer; color: #ffc107;"></i>
                            }
                        </div>
                        <input type="hidden" id="ratingValue" value="0">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Comment (optional)</label>
                        <textarea id="ratingComment" class="form-control" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitRating()">Submit Rating</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Rating Stars
        document.querySelectorAll('.rating-star').forEach(star => {
            star.addEventListener('click', function() {
                const rating = this.dataset.rating;
                document.getElementById('ratingValue').value = rating;
                
                document.querySelectorAll('.rating-star').forEach((s, index) => {
                    if (index < rating) {
                        s.classList.remove('bi-star');
                        s.classList.add('bi-star-fill');
                    } else {
                        s.classList.remove('bi-star-fill');
                        s.classList.add('bi-star');
                    }
                });
            });
        });

        // Submit Rating
        function submitRating() {
            const rating = document.getElementById('ratingValue').value;
            const comment = document.getElementById('ratingComment').value;

            if (rating == 0) {
                alert('Please select a rating');
                return;
            }

            const formData = new FormData();
            formData.append('rating', rating);
            if (comment) formData.append('comment', comment);

            fetch('/Maps/Rate/@point.Id', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to submit rating');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Toggle Favorite
        function toggleFavorite(mapPointId) {
            fetch(`/Maps/ToggleFavorite/${mapPointId}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to toggle favorite');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Check In
        function checkIn(mapPointId) {
            fetch(`/Maps/CheckIn/${mapPointId}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message || 'Failed to check in');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Delete Map Point
        function deleteMapPoint(mapPointId) {
            if (!confirm('Are you sure you want to delete this map point? This action cannot be undone.')) return;

            fetch(`/Maps/Delete/${mapPointId}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/Maps';
                } else {
                    alert(data.message || 'Failed to delete map point');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Add Comment
        document.getElementById('commentForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const content = document.getElementById('commentContent').value.trim();
            if (!content) {
                alert('Please enter a comment');
                return;
            }

            const formData = new FormData();
            formData.append('mapPointId', '@point.Id');
            formData.append('content', content);

            fetch('/Maps/AddComment', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to add comment');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        });
    </script>
}
