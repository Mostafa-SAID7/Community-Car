@model List<MapPointDto>
@using CommunityCar.Domain.DTOs.Community

@{
    ViewData["Title"] = "Featured Locations";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="bi bi-star-fill text-warning"></i> Featured Locations
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to All
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var point in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow">
                        @if (!string.IsNullOrEmpty(point.ImageUrl))
                        {
                            <img src="@point.ImageUrl" class="card-img-top" alt="@point.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-geo-alt" style="font-size: 3rem; color: #dee2e6;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@point.TypeName</span>
                                <div>
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-star-fill"></i> Featured
                                    </span>
                                    @if (point.IsVerified)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Verified
                                        </span>
                                    }
                                </div>
                            </div>
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-slug="@point.Slug" class="text-decoration-none text-dark">
                                    @point.Name
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(point.Description))
                            {
                                <p class="card-text text-muted small">
                                    @(point.Description.Length > 100 ? point.Description.Substring(0, 100) + "..." : point.Description)
                                </p>
                            }
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(point.Address))
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @point.Address
                                    </small>
                                    <br>
                                }
                                @if (point.AverageRating > 0)
                                {
                                    <small class="text-warning">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= point.AverageRating ? "-fill" : "")"></i>
                                        }
                                        <span class="text-muted">(@point.RatingCount)</span>
                                    </small>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-eye"></i> @point.ViewCount views
                                </small>
                                <a asp-action="Details" asp-route-slug="@point.Slug" class="btn btn-sm btn-primary">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No featured locations at this time. Check back later!
        </div>
    }
</div>
