@model PagedResult<MapPointDto>
@using CommunityCar.Domain.Base
@using CommunityCar.Domain.DTOs.Community
@using CommunityCar.Domain.Enums.Community.maps

@{
    ViewData["Title"] = "Search Map Points";
    var types = ViewBag.Types as MapPointType[];
    var searchTerm = ViewBag.SearchTerm as string;
    var latitude = ViewBag.Latitude as double?;
    var longitude = ViewBag.Longitude as double?;
    var radiusKm = ViewBag.RadiusKm as double? ?? 10;
    var type = ViewBag.Type as MapPointType?;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Search Map Points</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to All
        </a>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Search">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Search by Name or Description</label>
                        <input type="text" name="searchTerm" class="form-control" value="@searchTerm" placeholder="Enter search term...">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Type</label>
                        <select name="type" class="form-select">
                            <option value="">All Types</option>
                            @if (types != null)
                            {
                                @foreach (var t in types)
                                {
                                    <option value="@t" selected="@(type == t)">@t</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-4">
                        <label class="form-label">Latitude</label>
                        <input type="number" name="latitude" class="form-control" value="@latitude" step="any" placeholder="e.g., 40.7128">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Longitude</label>
                        <input type="number" name="longitude" class="form-control" value="@longitude" step="any" placeholder="e.g., -74.0060">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Radius (km)</label>
                        <input type="number" name="radiusKm" class="form-control" value="@radiusKm" min="1" max="100" placeholder="10">
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Search" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                    <button type="button" class="btn btn-outline-info" onclick="getCurrentLocation()">
                        <i class="bi bi-geo-alt"></i> Use My Location
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (!string.IsNullOrEmpty(searchTerm) || latitude.HasValue)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <span>Showing results for: <strong>@searchTerm</strong></span>
            }
            @if (latitude.HasValue && longitude.HasValue)
            {
                <span>Within <strong>@radiusKm km</strong> of (@latitude.Value.ToString("F4"), @longitude.Value.ToString("F4"))</span>
            }
            - Found <strong>@Model.TotalCount</strong> results
        </div>
    }

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var point in Model.Items)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(point.ImageUrl))
                        {
                            <img src="@point.ImageUrl" class="card-img-top" alt="@point.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-geo-alt" style="font-size: 3rem; color: #dee2e6;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@point.TypeName</span>
                                @if (point.IsVerified)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Verified
                                    </span>
                                }
                            </div>
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-slug="@point.Slug" class="text-decoration-none text-dark">
                                    @point.Name
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(point.Description))
                            {
                                <p class="card-text text-muted small">
                                    @(point.Description.Length > 100 ? point.Description.Substring(0, 100) + "..." : point.Description)
                                </p>
                            }
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(point.Address))
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @point.Address
                                    </small>
                                    <br>
                                }
                                @if (point.AverageRating > 0)
                                {
                                    <small class="text-warning">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= point.AverageRating ? "-fill" : "")"></i>
                                        }
                                        <span class="text-muted">(@point.RatingCount)</span>
                                    </small>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-eye"></i> @point.ViewCount views
                                </small>
                                <a asp-action="Details" asp-route-slug="@point.Slug" class="btn btn-sm btn-outline-primary">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Search" asp-route-page="@(Model.PageNumber - 1)" 
                           asp-route-searchTerm="@searchTerm" asp-route-latitude="@latitude" 
                           asp-route-longitude="@longitude" asp-route-radiusKm="@radiusKm" 
                           asp-route-type="@type">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Search" asp-route-page="@i" 
                               asp-route-searchTerm="@searchTerm" asp-route-latitude="@latitude" 
                               asp-route-longitude="@longitude" asp-route-radiusKm="@radiusKm" 
                               asp-route-type="@type">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Search" asp-route-page="@(Model.PageNumber + 1)" 
                           asp-route-searchTerm="@searchTerm" asp-route-latitude="@latitude" 
                           asp-route-longitude="@longitude" asp-route-radiusKm="@radiusKm" 
                           asp-route-type="@type">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No map points found matching your search criteria.
        </div>
    }
</div>

@section Scripts {
    <script>
        function getCurrentLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    document.querySelector('input[name="latitude"]').value = position.coords.latitude;
                    document.querySelector('input[name="longitude"]').value = position.coords.longitude;
                }, function(error) {
                    alert('Unable to get your location. Please enter coordinates manually.');
                });
            } else {
                alert('Geolocation is not supported by your browser.');
            }
        }
    </script>
}
