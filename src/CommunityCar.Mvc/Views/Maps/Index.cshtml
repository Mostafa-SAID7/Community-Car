@model PagedResult<MapPointDto>
@using CommunityCar.Domain.Base
@using CommunityCar.Domain.DTOs.Community
@using CommunityCar.Domain.Enums.Community.maps

@{
    ViewData["Title"] = "Map Points";
    var types = ViewBag.Types as MapPointType[];
    var currentType = ViewBag.CurrentType as MapPointType?;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Map Points</h1>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div>
                <a asp-action="MyPoints" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pin-map"></i> My Points
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Location
                </a>
            </div>
        }
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Type</label>
                    <select name="type" class="form-select" onchange="this.form.submit()">
                        <option value="">All Types</option>
                        @if (types != null)
                        {
                            @foreach (var type in types)
                            {
                                <option value="@type" selected="@(currentType == type)">@type</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <a asp-action="Search" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i> Advanced Search
                        </a>
                        <a asp-action="Featured" class="btn btn-outline-warning">
                            <i class="bi bi-star"></i> Featured
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var point in Model.Items)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(point.ImageUrl))
                        {
                            <img src="@point.ImageUrl" class="card-img-top" alt="@point.Name" class="img-cover-200">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" class="h-200">
                                <i class="bi bi-geo-alt" class="icon-placeholder"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@point.TypeName</span>
                                @if (point.IsVerified)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Verified
                                    </span>
                                }
                            </div>
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-slug="@point.Slug" class="text-decoration-none text-dark">
                                    @point.Name
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(point.Description))
                            {
                                <p class="card-text text-muted small">
                                    @(point.Description.Length > 100 ? point.Description.Substring(0, 100) + "..." : point.Description)
                                </p>
                            }
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(point.Address))
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @point.Address
                                    </small>
                                    <br>
                                }
                                @if (point.AverageRating > 0)
                                {
                                    <small class="text-warning">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= point.AverageRating ? "-fill" : "")"></i>
                                        }
                                        <span class="text-muted">(@point.RatingCount)</span>
                                    </small>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-eye"></i> @point.ViewCount views
                                </small>
                                <a asp-action="Details" asp-route-slug="@point.Slug" class="btn btn-sm btn-outline-primary">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-type="@currentType">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-type="@currentType">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-type="@currentType">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No map points found. @if (User.Identity?.IsAuthenticated ?? false) { <a asp-action="Create">Add the first location!</a> }
        </div>
    }
</div>
