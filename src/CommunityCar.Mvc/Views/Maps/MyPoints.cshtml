@model PagedResult<MapPointDto>
@using CommunityCar.Domain.Base
@using CommunityCar.Domain.DTOs.Community

@{
    ViewData["Title"] = "My Map Points";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">My Map Points</h1>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back to All
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Location
            </a>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var point in Model.Items)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(point.ImageUrl))
                        {
                            <img src="@point.ImageUrl" class="card-img-top" alt="@point.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-geo-alt" style="font-size: 3rem; color: #dee2e6;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@point.TypeName</span>
                                <span class="badge bg-@(point.StatusName == "Published" ? "success" : point.StatusName == "Draft" ? "secondary" : "warning")">
                                    @point.StatusName
                                </span>
                            </div>
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-slug="@point.Slug" class="text-decoration-none text-dark">
                                    @point.Name
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(point.Description))
                            {
                                <p class="card-text text-muted small">
                                    @(point.Description.Length > 100 ? point.Description.Substring(0, 100) + "..." : point.Description)
                                </p>
                            }
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(point.Address))
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @point.Address
                                    </small>
                                    <br>
                                }
                                <small class="text-muted">
                                    <i class="bi bi-eye"></i> @point.ViewCount views
                                    @if (point.RatingCount > 0)
                                    {
                                        <span class="ms-2">
                                            <i class="bi bi-star-fill text-warning"></i> @point.AverageRating.ToString("F1") (@point.RatingCount)
                                        </span>
                                    }
                                </small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    Created @point.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-slug="@point.Slug" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@point.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="MyPoints" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="MyPoints" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="MyPoints" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You haven't added any map points yet. <a asp-action="Create">Add your first location!</a>
        </div>
    }
</div>
