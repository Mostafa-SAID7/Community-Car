@model CommunityCar.Domain.Base.PagedResult<CommunityCar.Domain.DTOs.Community.ReviewDto>
@{
    ViewData["Title"] = "Car Reviews";
    var currentType = ViewBag.CurrentType as CommunityCar.Domain.Enums.Community.reviews.ReviewType?;
    var minRating = ViewBag.MinRating as int?;
    var maxRating = ViewBag.MaxRating as int?;
    var types = ViewBag.Types as Array;
}

@section Styles {
    }

@{
    ViewData["HeaderTitle"] = "Car Reviews";
    ViewData["HeaderDescription"] = "Read honest reviews from real car owners and enthusiasts";
    ViewData["HeaderIcon"] = "fas fa-star";
    
    if (User.Identity?.IsAuthenticated ?? false)
    {
        var createUrl = Url.Action("Create");
        var myReviewsUrl = Url.Action("MyReviews");
        var actionsHtml = "<div class='d-flex gap-2 flex-wrap'>" +
                          "<a href='" + createUrl + "' class='btn btn-light'>" +
                          "<i class='fas fa-plus-circle me-2'></i>Write Review" +
                          "</a>" +
                          "<a href='" + myReviewsUrl + "' class='btn btn-light'>" +
                          "<i class='fas fa-user-edit me-2'></i>My Reviews" +
                          "</a>" +
                          "</div>";
        ViewData["HeaderActions"] = Html.Raw(actionsHtml);
    }
}

<partial name="_InnerPageHeader" />

<div class="container">
    <!-- Filters -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <span class="fw-bold me-2">
                            <i class="fas fa-filter me-1"></i>Type:
                        </span>
                        <a asp-action="Index" 
                           asp-route-minRating="@minRating"
                           asp-route-maxRating="@maxRating"
                           class="btn btn-sm type-filter-btn @(currentType == null ? "btn-primary" : "btn-outline-primary")">
                            <i class="fas fa-th me-1"></i>All
                        </a>
                        @if (types != null)
                        {
                            @foreach (var type in types)
                            {
                                var typeValue = (CommunityCar.Domain.Enums.Community.reviews.ReviewType)type;
                                <a asp-action="Index" 
                                   asp-route-type="@typeValue"
                                   asp-route-minRating="@minRating"
                                   asp-route-maxRating="@maxRating"
                                   class="btn btn-sm type-filter-btn @(currentType == typeValue ? "btn-primary" : "btn-outline-primary")">
                                    @typeValue.ToString()
                                </a>
                            }
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <span class="fw-bold me-2">
                            <i class="fas fa-star me-1"></i>Rating:
                        </span>
                        <a asp-action="Index" 
                           asp-route-type="@currentType"
                           class="btn btn-sm type-filter-btn @(minRating == null && maxRating == null ? "btn-warning" : "btn-outline-warning")">
                            <i class="fas fa-th me-1"></i>All
                        </a>
                        @for (int i = 5; i >= 1; i--)
                        {
                            var isActive = minRating == i;
                            <a asp-action="Index" 
                               asp-route-type="@currentType"
                               asp-route-minRating="@i"
                               class="btn btn-sm type-filter-btn @(isActive ? "btn-warning" : "btn-outline-warning")">
                                @i<i class="fas fa-star ms-1"></i>+
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Grid -->
    @if (Model.Items.Any())
    {
        <div class="row g-4 mb-4">
            @foreach (var review in Model.Items)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card review-card">
                        <div class="card-body d-flex flex-column">
                            <div class="position-relative mb-3">
                                @if (review.IsVerifiedPurchase)
                                {
                                    <span class="badge bg-success verified-badge">
                                        <i class="fas fa-check-circle me-1"></i>Verified
                                    </span>
                                }
                                @if (review.IsRecommended)
                                {
                                    <span class="badge bg-info text-white recommended-badge">
                                        <i class="fas fa-thumbs-up me-1"></i>Recommended
                                    </span>
                                }
                                <span class="badge bg-primary review-type-badge">
                                    @review.TypeName
                                </span>
                            </div>
                            
                            <div class="review-meta mb-2">
                                <i class="fas fa-user me-1"></i>@review.ReviewerName
                                <span class="mx-2">â€¢</span>
                                <i class="fas fa-calendar me-1"></i>@review.CreatedAt.ToString("MMM dd, yyyy")
                            </div>
                            
                            <div class="star-rating mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= review.Rating ? "" : "text-muted")"></i>
                                }
                                <span class="text-dark ms-2 fw-bold">@review.Rating.0/5.0</span>
                            </div>
                            
                            <h5 class="review-title mb-2">
                                <a href="@Url.Action("Details", new { slug = review.Slug })" 
                                   class="text-decoration-none text-dark stretched-link">
                                    @review.Title
                                </a>
                            </h5>
                            <p class="review-content mb-3 flex-grow-1">
                                @(review.Content?.Length > 120 ? review.Content.Substring(0, 120) + "..." : review.Content)
                            </p>
                            
                            @if (!string.IsNullOrEmpty(review.Pros) || !string.IsNullOrEmpty(review.Cons))
                            {
                                <div class="pros-cons mb-3">
                                    @if (!string.IsNullOrEmpty(review.Pros))
                                    {
                                        <div class="text-success mb-1">
                                            <i class="fas fa-plus-circle me-1"></i>
                                            <strong>Pros:</strong> @(review.Pros.Length > 50 ? review.Pros.Substring(0, 50) + "..." : review.Pros)
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(review.Cons))
                                    {
                                        <div class="text-danger">
                                            <i class="fas fa-minus-circle me-1"></i>
                                            <strong>Cons:</strong> @(review.Cons.Length > 50 ? review.Cons.Substring(0, 50) + "..." : review.Cons)
                                        </div>
                                    }
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                <div class="text-muted small">
                                    <i class="fas fa-thumbs-up me-1"></i>
                                    <span>@review.HelpfulCount helpful</span>
                                    @if (review.HelpfulPercentage > 0)
                                    {
                                        <span class="ms-2">(@review.HelpfulPercentage.ToString("F0")%)</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Reviews pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@(Model.PageNumber - 1)"
                           asp-route-type="@currentType"
                           asp-route-minRating="@minRating"
                           asp-route-maxRating="@maxRating">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-type="@currentType"
                               asp-route-minRating="@minRating"
                               asp-route-maxRating="@maxRating">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@(Model.PageNumber + 1)"
                           asp-route-type="@currentType"
                           asp-route-minRating="@minRating"
                           asp-route-maxRating="@maxRating">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-star fa-4x text-muted mb-4"></i>
                <h4 class="text-muted mb-3">No Reviews Found</h4>
                <p class="text-muted mb-4">
                    @if (currentType != null || minRating != null)
                    {
                        <text>No reviews found with the selected filters. Try adjusting your search.</text>
                    }
                    else
                    {
                        <text>Be the first to share your review with the community!</text>
                    }
                </p>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Write First Review
                    </a>
                }
                else
                {
                    <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Login to Write Reviews
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Smooth scroll to top when pagination is clicked
            $('.pagination a').on('click', function() {
                $('html, body').animate({ scrollTop: 0 }, 300);
            });

            // Add animation on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '0';
                        entry.target.style.transform = 'translateY(20px)';
                        setTimeout(() => {
                            entry.target.style.transition = 'all 0.5s ease';
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }, 100);
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.review-card').forEach(card => {
                observer.observe(card);
            });
        });
    </script>
}
