@model CommunityCar.Mvc.ViewModels.Groups.CreateGroupViewModel
@{
    ViewData["Title"] = "Create Group";
}

@section Styles {
    }

<!-- Header -->
<div class="create-group-header">
    <div class="d-flex align-items-center">
        <i class="fas fa-users fa-3x me-3"></i>
        <div>
            <h2 class="mb-1">Create New Group</h2>
            <p class="mb-0 opacity-75">Build your community and connect with like-minded people</p>
        </div>
    </div>
</div>

<!-- Form -->
<div class="form-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        
        <!-- Group Name -->
        <div class="mb-4">
            <label asp-for="Name" class="form-label">
                <i class="fas fa-tag me-2"></i>Group Name
            </label>
            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter a unique group name" maxlength="100" id="groupName" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="char-counter">
                <span id="nameCounter">0</span> / 100 characters
            </div>
        </div>
        
        <!-- Description -->
        <div class="mb-4">
            <label asp-for="Description" class="form-label">
                <i class="fas fa-align-left me-2"></i>Description
            </label>
            <textarea asp-for="Description" class="form-control" rows="6" placeholder="Describe what your group is about, its purpose, and what members can expect..." maxlength="1000" id="groupDescription"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="char-counter">
                <span id="descCounter">0</span> / 1000 characters
            </div>
        </div>
        
        <!-- Privacy Setting -->
        <div class="mb-4">
            <div class="form-check form-switch">
                <input asp-for="IsPrivate" class="form-check-input" type="checkbox" id="isPrivate" />
                <label class="form-check-label" for="isPrivate">
                    <i class="fas fa-lock me-2"></i>Make this group private
                </label>
            </div>
            <div class="privacy-info">
                <small>
                    <strong><i class="fas fa-info-circle me-1"></i>Privacy Settings:</strong><br/>
                    <strong>Public Groups:</strong> Anyone can see the group, its members, and posts. Anyone can join.<br/>
                    <strong>Private Groups:</strong> Only members can see posts. People must request to join.
                </small>
            </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Cancel
            </a>
            <button type="submit" class="btn btn-primary btn-create">
                <i class="fas fa-plus-circle me-2"></i>Create Group
            </button>
        </div>
    </form>
</div>

<!-- Tips Section -->
<div class="card mt-4">
    <div class="card-header bg-light">
        <h6 class="mb-0"><i class="fas fa-lightbulb me-2 text-warning"></i>Tips for Creating a Great Group</h6>
    </div>
    <div class="card-body">
        <ul class="mb-0">
            <li>Choose a clear, descriptive name that reflects your group's purpose</li>
            <li>Write a detailed description to help people understand what your group is about</li>
            <li>Set clear guidelines and expectations for members</li>
            <li>Consider starting as a public group to grow your community faster</li>
            <li>Be active and engage with your members regularly</li>
        </ul>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Character counters
            function updateCounter(inputId, counterId, maxLength) {
                const input = $(`#${inputId}`);
                const counter = $(`#${counterId}`);
                
                function update() {
                    const length = input.val().length;
                    counter.text(length);
                    
                    if (length > maxLength * 0.9) {
                        counter.parent().addClass('text-warning');
                    } else {
                        counter.parent().removeClass('text-warning');
                    }
                }
                
                input.on('input', update);
                update();
            }
            
            updateCounter('groupName', 'nameCounter', 100);
            updateCounter('groupDescription', 'descCounter', 1000);
            
            // Privacy toggle info
            $('#isPrivate').on('change', function() {
                if ($(this).is(':checked')) {
                    $('.privacy-info').addClass('border-warning').removeClass('border-primary');
                } else {
                    $('.privacy-info').addClass('border-primary').removeClass('border-warning');
                }
            });
        });
    </script>
}
