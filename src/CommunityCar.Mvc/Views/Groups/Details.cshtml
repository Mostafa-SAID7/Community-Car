@model CommunityCar.Web.ViewModels.Groups.GroupViewModel
@{
    ViewData["Title"] = Model.Name;
    var members = ViewBag.Members as List<CommunityCar.Web.ViewModels.Groups.GroupMemberViewModel> ?? new List<CommunityCar.Web.ViewModels.Groups.GroupMemberViewModel>();
}

@section RightSidebar {
    <partial name="Sidebars/_RightSidebar_Social" />
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="height: 300px; object-fit: cover;" />
                }
                <div class="card-body">
                    <h2 class="card-title">
                        @Model.Name
                        @if (Model.IsPrivate)
                        {
                            <i class="fas fa-lock text-muted ms-2" title="Private Group"></i>
                        }
                    </h2>
                    <p class="text-muted">
                        <i class="fas fa-user me-1"></i>Created by @Model.CreatorName on @Model.CreatedAt.ToString("MMM dd, yyyy")
                    </p>
                    <p class="card-text">@Model.Description</p>
                    
                    <div class="d-flex gap-2 mt-3">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (Model.IsMember)
                            {
                                <form asp-action="Leave" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to leave this group?')">
                                        <i class="fas fa-sign-out-alt me-2"></i>Leave Group
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Join" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-user-plus me-2"></i>Join Group
                                    </button>
                                </form>
                            }
                            
                            @if (Model.IsAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this group?')">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Members (@Model.MemberCount)</h5>
                </div>
                <div class="card-body">
                    @if (members.Any())
                    {
                        <div class="list-group">
                            @foreach (var member in members)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="@(member.ProfilePictureUrl ?? $"https://ui-avatars.com/api/?name={member.UserName}&background=random")" 
                                             alt="@member.UserName" 
                                             class="rounded-circle me-3" 
                                             style="width: 40px; height: 40px; object-fit: cover;" />
                                        <div>
                                            <strong>@member.UserName</strong>
                                            <br />
                                            <small class="text-muted">@member.RoleName</small>
                                        </div>
                                    </div>
                                    @if (Model.IsAdmin && member.UserId != Model.CreatorId)
                                    {
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form asp-action="RemoveMember" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="groupId" value="@Model.Id" />
                                                        <input type="hidden" name="memberId" value="@member.Id" />
                                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Remove this member?')">
                                                            <i class="fas fa-user-times me-2"></i>Remove
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No members yet</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Group Info</h6>
                </div>
                <div class="card-body">
                    <p><strong>Members:</strong> @Model.MemberCount</p>
                    <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    <p><strong>Type:</strong> @(Model.IsPrivate ? "Private" : "Public")</p>
                </div>
            </div>
        </div>
    </div>
</div>
