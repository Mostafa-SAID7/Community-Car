@model CommunityCar.Domain.DTOs.Community.GuideDto
@using CommunityCar.Domain.Enums.Community.guides
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Model.Title;
    var guide = Model;
    var currentUserId = ViewBag.CurrentUserId as Guid?;
    var friendshipStatus = ViewBag.FriendshipStatus as CommunityCar.Domain.Enums.Community.friends.FriendshipStatus?;
    var isIncoming = ViewBag.IsIncomingRequest as bool? ?? false;
}
@using CommunityCar.Domain.Enums.Community.friends




@{
    ViewData["HeaderTitle"] = guide.Title;
    ViewData["HeaderIcon"] = "fas fa-book-open";
    var actionsHtml = "<div class='d-flex gap-3 align-items-center'>" +
                      "<span><i class='fas fa-clock me-1'></i> " + guide.EstimatedTimeMinutes + " " + Localizer["mins"].Value + "</span>" +
                      "<span><i class='fas fa-signal me-1'></i> " + guide.DifficultyName + "</span>" +
                      "</div>";
    ViewData["HeaderActions"] = Html.Raw(actionsHtml);
}

<partial name="_InnerPageHeader" />

@Html.AntiForgeryToken()

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Hero Card -->
            <div class="card guide-header-card border-0 mb-4 shadow-sm">
                @if (!string.IsNullOrEmpty(guide.ImageUrl))
                {
                    <img src="@guide.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover; opacity: 0.8;" alt="@guide.Title">
                }
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex flex-wrap gap-2 mb-4">
                        <span class="difficulty-badge difficulty-@guide.DifficultyName">@guide.DifficultyName</span>
                        <span class="badge bg-light text-dark px-3 rounded-pill d-flex align-items-center">
                            <i class="fas fa-folder me-2 text-primary"></i>@guide.Category
                        </span>
                    </div>

                    <h2 class="display-6 fw-bold mb-4">@guide.Title</h2>
                    <p class="lead opacity-75 mb-0">@guide.Summary</p>
                </div>
            </div>

            <!-- Content Area -->
            <div class="card shadow-sm border-0 rounded-4 mb-5">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-5 pb-4 border-bottom">
                        <img src="@(guide.AuthorAvatar ?? "/images/default-avatar.svg")" class="rounded-circle me-3" style="width: 50px; height: 50px;">
                        <div>
                            <h6 class="mb-0 fw-bold">@guide.AuthorName</h6>
                            <p class="text-muted small mb-0">@Localizer["Contributor"] â€¢ @guide.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </div>
                        @if (guide.IsAuthor)
                        {
                            <div class="ms-auto">
                                <a asp-action="Edit" asp-route-id="@guide.Id" class="btn btn-outline-primary btn-sm rounded-pill px-4">
                                    <i class="fas fa-edit me-1"></i>@Localizer["Edit Guide"]
                                </a>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(guide.VideoUrl))
                    {
                        <div class="ratio ratio-16x9 mb-5 rounded-4 overflow-hidden shadow-sm">
                            <iframe src="@guide.VideoUrl" allowfullscreen></iframe>
                        </div>
                    }

                    <div class="guide-content mb-5">
                        @Html.Raw(guide.Content)
                    </div>

                    @if (!string.IsNullOrEmpty(guide.Tags))
                    {
                        <div class="pt-4 border-top">
                            <h6 class="fw-bold mb-3 small text-uppercase letter-spacing-1 text-muted">@Localizer["Related Tags"]</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tag in guide.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <a href="/Guides?tag=@tag.Trim()" class="btn btn-sm btn-light rounded-pill px-3">#@tag.Trim()</a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Interactions -->
            <div class="d-flex align-items-center mb-5">
                <button class="btn @(guide.IsLiked ? "btn-danger" : "btn-outline-danger") rounded-pill px-4 me-3" onclick="toggleLike('@guide.Id')">
                    <i class="fas fa-heart me-2"></i>@(guide.IsLiked ? Localizer["Liked"] : Localizer["Like"]) (@guide.LikeCount)
                </button>
                <button class="btn @(guide.IsBookmarked ? "btn-warning" : "btn-outline-warning") rounded-pill px-4 me-3" onclick="toggleBookmark('@guide.Id')">
                    <i class="fas fa-bookmark me-2"></i>@(guide.IsBookmarked ? Localizer["Saved"] : Localizer["Save"])
                </button>
                <button class="btn btn-outline-primary rounded-pill px-4" onclick="shareGuide('@guide.Id', '@guide.Title')">
                    <i class="fas fa-share-alt me-2"></i>@Localizer["Share"]
                </button>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Guide Info Sidebar -->
            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-4">@Localizer["Guide Details"]</h6>
                    
                    <div class="sidebar-stat-card mb-3">
                        <div class="d-flex align-items-center">
                            <div class="p-2  rounded-circle me-3">
                                <i class="fas fa-clock text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">@guide.EstimatedTimeMinutes @Localizer["mins"]</h6>
                                <p class="small text-muted mb-0">@Localizer["Estimated Time"]</p>
                            </div>
                        </div>
                    </div>

                    <div class="sidebar-stat-card mb-3">
                        <div class="d-flex align-items-center">
                            <div class="p-2  rounded-circle me-3">
                                <i class="fas fa-signal text-warning"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">@Localizer[guide.DifficultyName]</h6>
                                <p class="small text-muted mb-0">@Localizer["Difficulty Level"]</p>
                            </div>
                        </div>
                    </div>

                    <div class="sidebar-stat-card mb-0">
                        <div class="d-flex align-items-center">
                            <div class="p-2  rounded-circle me-3">
                                <i class="fas fa-list-ol text-success"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">@guide.StepCount @Localizer["Steps"]</h6>
                                <p class="small text-muted mb-0">@Localizer["Content Breakdown"]</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Author Bio -->
            <div class="card shadow-sm border-0 rounded-4 mb-4 bg-light">
                <div class="card-body p-4 text-center">
                    <img src="@(guide.AuthorAvatar ?? "/images/default-avatar.svg")" class="rounded-circle mb-3 shadow-sm border border-3 border-white" style="width: 80px; height: 80px;">
                    <h6 class="fw-bold mb-1">@Localizer["Written by"] @guide.AuthorName</h6>
                    <p class="small text-muted mb-3">@Localizer["Professional Mechanic & Enthusiast"]</p>
                    
                    <div class="d-flex flex-column gap-2">
                        <a href="@Url.Action("Index", "Profiles", new { area = "Identity", id = guide.AuthorId })" class="btn btn-outline-primary btn-sm rounded-pill w-100">@Localizer["View Profile"]</a>
                        
                        @if (currentUserId.HasValue && !guide.IsAuthor)
                        {
                            @if (friendshipStatus == FriendshipStatus.None)
                            {
                                <form asp-controller="Friends" asp-action="SendRequest" method="post" class="ajax-add-friend-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="friendId" value="@guide.AuthorId" />
                                    <button type="submit" class="btn btn-primary btn-sm rounded-pill w-100">
                                        <i class="fas fa-user-plus me-1"></i> @Localizer["Add Friend"]
                                    </button>
                                </form>
                            }
                            else if (friendshipStatus == FriendshipStatus.Pending)
                            {
                                if (isIncoming)
                                {
                                    <div class="d-flex gap-2">
                                        <form asp-controller="Friends" asp-action="AcceptRequest" method="post" class="ajax-accept-form flex-grow-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="friendId" value="@guide.AuthorId" />
                                            <button type="submit" class="btn btn-success btn-sm rounded-pill w-100">
                                                @Localizer["Accept"]
                                            </button>
                                        </form>
                                        <form asp-controller="Friends" asp-action="RejectRequest" method="post" class="ajax-reject-form flex-grow-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="friendId" value="@guide.AuthorId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill w-100">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm rounded-pill w-100" disabled>
                                        <i class="fas fa-clock me-1"></i> @Localizer["Pending"]
                                    </button>
                                }
                            }
                            else if (friendshipStatus == FriendshipStatus.Accepted)
                            {
                                <button class="btn btn-success btn-sm rounded-pill w-100" disabled>
                                    <i class="fas fa-check-double me-1"></i> @Localizer["Friends"]
                                </button>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Community Sentiment -->
            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3 text-center">@Localizer["Community Rating"]</h6>
                    <div class="text-center">
                        <h2 class="fw-bold text-primary mb-1">@guide.AverageRating.ToString("F1")</h2>
                        <div class="text-warning mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= Math.Round(guide.AverageRating) ? "" : "text-light")"></i>
                            }
                        </div>
                        <p class="small text-muted mb-0">@string.Format(Localizer["Based on {0} ratings"].Value, guide.RatingCount)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/friends.js"></script>
    <script>
        // Helper function to get culture from URL (always present now due to middleware)
        function getCulture() {
            const pathSegments = window.location.pathname.split('/').filter(s => s);
            return pathSegments.length > 0 ? pathSegments[0] : 'en';
        }

        function toggleLike(id) {
            const btn = event.target.closest('button');
            btn.disabled = true;
            
            const url = CultureHelper.addCultureToUrl(`/Guides/ToggleLike/${id}`);
            
            $.ajax({
                url: url,
                type: 'POST',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        alert(res.message || 'Failed to toggle like');
                        btn.disabled = false;
                    }
                },
                error: function(xhr) {
                    console.error('Error:', xhr.status, xhr.responseText);
                    alert('An error occurred while toggling like');
                    btn.disabled = false;
                }
            });
        }

        function toggleBookmark(id) {
            const btn = event.target.closest('button');
            btn.disabled = true;
            
            const url = CultureHelper.addCultureToUrl(`/Guides/ToggleBookmark/${id}`);
            
            $.ajax({
                url: url,
                type: 'POST',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        alert(res.message || 'Failed to toggle bookmark');
                        btn.disabled = false;
                    }
                },
                error: function(xhr) {
                    console.error('Error:', xhr.status, xhr.responseText);
                    alert('An error occurred while toggling bookmark');
                    btn.disabled = false;
                }
            });
        }

        function shareGuide(id, title) {
            if (navigator.share) {
                navigator.share({ 
                    title: title, 
                    url: window.location.href 
                }).catch(err => {
                    if (err.name !== 'AbortError') {
                        console.error('Share failed:', err);
                    }
                });
            } else {
                navigator.clipboard.writeText(window.location.href).then(() => {
                    alert(window.I18n?.translations.guides.copied || 'Guide link copied to clipboard!');
                }).catch(err => {
                    console.error('Copy failed:', err);
                    alert(window.I18n?.translations.guides.copyFailed || 'Failed to copy link');
                });
            }
        }
    </script>
}
