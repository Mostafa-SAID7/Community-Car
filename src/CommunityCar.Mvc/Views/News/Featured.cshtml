@model IEnumerable<CommunityCar.Domain.DTOs.Community.NewsArticleDto>
@{
    ViewData["Title"] = "Featured News";
    ViewData["HeaderTitle"] = "Featured News";
    ViewData["HeaderDescription"] = "Top automotive news stories";
    ViewData["HeaderIcon"] = "fas fa-star";
}

@section RightSidebar {
    <partial name="Sidebars/_RightSidebar_News" />
}

<partial name="_InnerPageHeader" />

<div class="container my-5">
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var article in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden news-card">
                        <div class="position-relative">
                            <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-3">
                                <i class="fas fa-star me-1"></i>Featured
                            </span>
                            <span class="badge bg-primary news-category-badge">
                                @article.Category
                            </span>
                            <img src="@(article.ImageUrl ?? "/images/news-placeholder.svg")" 
                                 alt="@article.Title" 
                                 class="card-img-top news-image" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="news-meta mb-2">
                                <small class="text-muted">
                                    <i class="far fa-calendar me-1"></i>
                                    @article.PublishedAt?.ToString("MMM dd, yyyy") ?? @article.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                                <small class="text-muted ms-3">
                                    <i class="far fa-eye me-1"></i>
                                    @article.ViewCount views
                                </small>
                            </div>
                            <h5 class="card-title mb-2">
                                <a asp-action="Details" asp-route-slug="@article.Slug" class="text-decoration-none text-dark">
                                    @article.Title
                                </a>
                            </h5>
                            <p class="card-text text-muted small mb-3 flex-grow-1">
                                @article.Summary
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div class="news-stats">
                                    <small class="text-muted me-3">
                                        <i class="far fa-thumbs-up me-1"></i>@article.LikeCount
                                    </small>
                                    <small class="text-muted">
                                        <i class="far fa-comment me-1"></i>@article.CommentCount
                                    </small>
                                </div>
                                <a asp-action="Details" asp-route-slug="@article.Slug" class="btn btn-sm btn-outline-primary rounded-pill">
                                    Read More <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info rounded-4 text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h5>No Featured Articles</h5>
                    <p class="mb-0">There are currently no featured news articles available.</p>
                </div>
            </div>
        }
    </div>
</div>
