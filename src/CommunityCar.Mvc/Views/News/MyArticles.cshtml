@model CommunityCar.Domain.Base.PagedResult<CommunityCar.Domain.DTOs.Community.NewsArticleDto>
@{
    ViewData["Title"] = "My Articles";
    ViewData["HeaderTitle"] = "My News Articles";
    ViewData["HeaderDescription"] = "Manage your published automotive news articles";
    ViewData["HeaderIcon"] = "fas fa-user-edit";
    
    var createUrl = Url.Action("Create");
    var allArticlesUrl = Url.Action("Index");
    var actionsHtml = "<div class='d-flex gap-2 flex-wrap'>" +
                      "<a href='" + createUrl + "' class='btn btn-light'>" +
                      "<i class='fas fa-plus-circle me-2'></i>Create Article" +
                      "</a>" +
                      "<a href='" + allArticlesUrl + "' class='btn btn-light'>" +
                      "<i class='fas fa-newspaper me-2'></i>All Articles" +
                      "</a>" +
                      "</div>";
    ViewData["HeaderActions"] = Html.Raw(actionsHtml);
}

<partial name="_InnerPageHeader" />

<div class="container">
    @if (Model.Items.Any())
    {
        <div class="row g-4 mb-4">
            @foreach (var article in Model.Items)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card news-card h-100">
                        <div class="position-relative">
                            @if (article.IsFeatured)
                            {
                                <span class="badge bg-warning text-dark featured-badge">
                                    <i class="fas fa-star me-1"></i>Featured
                                </span>
                            }
                            <span class="badge bg-primary news-category-badge">
                                @article.Category
                            </span>
                            <img src="@(article.ImageUrl ?? "/images/news-placeholder.jpg")" 
                                 alt="@article.Title" 
                                 class="card-img-top news-image" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="news-meta mb-2">
                                <i class="fas fa-calendar me-1"></i>@article.PublishedAt?.ToString("MMM dd, yyyy")
                                <span class="mx-2">â€¢</span>
                                <span class="badge bg-light text-dark">
                                    @article.StatusName
                                </span>
                            </div>
                            <h5 class="news-title mb-2">
                                <a href="@Url.Action("Details", new { slug = article.Slug })" 
                                   class="text-decoration-none text-dark">
                                    @article.Title
                                </a>
                            </h5>
                            <p class="news-summary mb-3 flex-grow-1">
                                @(article.Summary?.Length > 120 ? article.Summary.Substring(0, 120) + "..." : article.Summary)
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                <div class="d-flex gap-3 text-muted small">
                                    <span><i class="fas fa-eye me-1"></i>@article.ViewCount</span>
                                    <span><i class="fas fa-heart me-1"></i>@article.LikeCount</span>
                                    <span><i class="fas fa-comment me-1"></i>@article.CommentCount</span>
                                </div>
                            </div>
                            <div class="d-flex gap-2 mt-3">
                                <a href="@Url.Action("Edit", new { id = article.Id })" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger flex-fill" onclick="deleteArticle('@article.Id', '@article.Title')">
                                    <i class="fas fa-trash-alt me-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="My articles pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" 
                           asp-action="MyArticles" 
                           asp-route-page="@(Model.PageNumber - 1)">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" 
                               asp-action="MyArticles" 
                               asp-route-page="@i">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" 
                           asp-action="MyArticles" 
                           asp-route-page="@(Model.PageNumber + 1)">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-newspaper fa-4x text-muted mb-4"></i>
                <h4 class="text-muted mb-3">No Articles Yet</h4>
                <p class="text-muted mb-4">
                    You haven't published any news articles yet. Start sharing your automotive insights with the community!
                </p>
                <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-5">
                    <i class="fas fa-plus-circle me-2"></i>Create Your First Article
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteArticle(id, title) {
            Swal.fire({
                title: 'Delete Article?',
                text: `Are you sure you want to delete "${title}"? This action cannot be undone.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/News/Delete/' + id,
                        type: 'POST',
                        data: {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'Deleted!',
                                    text: 'Your article has been deleted.',
                                    icon: 'success',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire('Error!', response.message || 'Failed to delete article', 'error');
                            }
                        },
                        error: function() {
                            Swal.fire('Error!', 'Failed to delete article', 'error');
                        }
                    });
                }
            });
        }

        $(document).ready(function() {
            // Smooth scroll to top when pagination is clicked
            $('.pagination a').on('click', function() {
                $('html, body').animate({ scrollTop: 0 }, 300);
            });

            // Add animation on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '0';
                        entry.target.style.transform = 'translateY(20px)';
                        setTimeout(() => {
                            entry.target.style.transition = 'all 0.5s ease';
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }, 100);
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.news-card').forEach(card => {
                observer.observe(card);
            });
        });
    </script>
}
