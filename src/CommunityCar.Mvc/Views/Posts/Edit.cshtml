@model EditPostViewModel
@using CommunityCar.Mvc.ViewModels.Post
@using CommunityCar.Domain.Enums.Community.post

@{
    ViewData["Title"] = "Edit Post";
    var postTypes = ViewBag.PostTypes as PostType[];
    var postStatuses = Enum.GetValues<PostStatus>();

    ViewData["HeaderTitle"] = "Edit Post";
    ViewData["HeaderDescription"] = "Update your post content and settings";
    ViewData["HeaderIcon"] = "fas fa-edit";
}

@section Styles {
    <link rel="stylesheet" href="~/css/components/cards.css" />
    <link rel="stylesheet" href="~/css/pages/posts.css" />
}

<partial name="_InnerPageHeader" />

<div class=" my-5">
    <div class="">
        <div class="">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Posts</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-slug="@Model.Title">@Model.Title</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>

            <div class="card form-card-red shadow-sm border-0 edit-post-card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Post</h3>
                </div>
                <div class="">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-4"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Post Type <span class="text-danger">*</span></label>
                            <div class="post-type-selector">
                                @if (postTypes != null)
                                {
                                    @foreach (var type in postTypes)
                                    {
                                        var icon = type switch {
                                            PostType.Text => "fa-align-left",
                                            PostType.Image => "fa-image",
                                            PostType.Video => "fa-video",
                                            PostType.Link => "fa-link",
                                            PostType.Poll => "fa-poll",
                                            _ => "fa-file"
                                        };
                                        
                                        <div class="post-type-card @(Model.Type == type ? "active" : "")" data-type="@type">
                                            <i class="fas @icon"></i>
                                            <div class="fw-bold small">@type</div>
                                        </div>
                                    }
                                }
                            </div>
                            <input asp-for="Type" type="hidden" id="postTypeInput" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Status <span class="text-danger">*</span></label>
                            <div class="post-status-selector">
                                @foreach (var status in postStatuses)
                                {
                                    var statusIcon = status switch {
                                        PostStatus.Draft => "fa-file-alt",
                                        PostStatus.Published => "fa-check-circle",
                                        PostStatus.Archived => "fa-archive",
                                        PostStatus.Deleted => "fa-trash",
                                        _ => "fa-circle"
                                    };
                                    
                                    var statusColor = status switch {
                                        PostStatus.Draft => "status-draft",
                                        PostStatus.Published => "status-published",
                                        PostStatus.Archived => "status-archived",
                                        PostStatus.Deleted => "status-deleted",
                                        _ => ""
                                    };
                                    
                                    var isActive = status == Model.Status;
                                    
                                    <div class="post-status-card @statusColor @(isActive ? "active" : "")" data-status="@status">
                                        <i class="fas @statusIcon"></i>
                                        <div class="fw-bold">@status</div>
                                    </div>
                                }
                            </div>
                            <input asp-for="Status" type="hidden" id="postStatusInput" value="@Model.Status" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                            <small class="form-text text-muted d-block mt-2">
                                <i class="fas fa-info-circle me-1"></i>Choose Draft to save without publishing
                            </small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control form-control-lg rounded-3" placeholder="Enter an engaging title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-bold">Content <span class="text-danger">*</span></label>
                            <textarea asp-for="Content" class="form-control rounded-3" rows="10" placeholder="Share your thoughts...">@Model.Content</textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-4 post-type-fields" id="imageFields" style="display: @(Model.Type == PostType.Image ? "block" : "none")">
                            <label class="form-label fw-bold">
                                <i class="fas fa-image me-1"></i>Image
                            </label>
                            <div class="mb-3">
                                <label class="form-label small">Upload Image File</label>
                                <input asp-for="ImageFile" type="file" class="form-control rounded-3" accept="image/*" id="imageFileInput" />
                                <small class="form-text text-muted">Max size: 10 MB. Allowed formats: JPG, PNG, GIF, WebP</small>
                                <span asp-validation-for="ImageFile" class="text-danger d-block"></span>
                                <div id="imagePreview" class="preview-container">
                                    <img id="imagePreviewImg" src="" alt="Image preview" />
                                </div>
                            </div>
                            <div class="text-center my-2">
                                <span class="text-muted">OR</span>
                            </div>
                            <div>
                                <label class="form-label small">Image URL</label>
                                <input asp-for="ImageUrl" class="form-control rounded-3" placeholder="https://example.com/image.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4 post-type-fields" id="videoFields" style="display: @(Model.Type == PostType.Video ? "block" : "none")">
                            <label class="form-label fw-bold">
                                <i class="fas fa-video me-1"></i>Video
                            </label>
                            <div class="mb-3">
                                <label class="form-label small">Upload Video File</label>
                                <input asp-for="VideoFile" type="file" class="form-control rounded-3" accept="video/*" id="videoFileInput" />
                                <small class="form-text text-muted">Max size: 50 MB. Allowed formats: MP4, WebM, OGG, MOV</small>
                                <span asp-validation-for="VideoFile" class="text-danger d-block"></span>
                                <div id="videoPreview" class="preview-container">
                                    <video id="videoPreviewPlayer" controls></video>
                                </div>
                            </div>
                            <div class="text-center my-2">
                                <span class="text-muted">OR</span>
                            </div>
                            <div>
                                <label class="form-label small">Video URL</label>
                                <input asp-for="VideoUrl" class="form-control rounded-3" placeholder="https://youtube.com/watch?v=..." />
                                <span asp-validation-for="VideoUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div id="linkFields" class="post-type-fields" style="display: @(Model.Type == PostType.Link ? "block" : "none")">
                            <div class="mb-4">
                                <label asp-for="LinkUrl" class="form-label fw-bold">
                                    <i class="fas fa-link me-1"></i>Link URL
                                </label>
                                <input asp-for="LinkUrl" class="form-control rounded-3" placeholder="https://example.com" />
                                <span asp-validation-for="LinkUrl" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="LinkTitle" class="form-label fw-bold">Link Title</label>
                                <input asp-for="LinkTitle" class="form-control rounded-3" placeholder="Title of the linked content" />
                                <span asp-validation-for="LinkTitle" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="LinkDescription" class="form-label fw-bold">Link Description</label>
                                <textarea asp-for="LinkDescription" class="form-control rounded-3" rows="3" placeholder="Brief description of the link">@Model.LinkDescription</textarea>
                                <span asp-validation-for="LinkDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Tags" class="form-label fw-bold">
                                <i class="fas fa-tags me-1"></i>Tags
                            </label>
                            <input asp-for="Tags" class="form-control rounded-3" placeholder="Separate tags with commas (e.g., cars, maintenance, tips)" />
                            <span asp-validation-for="Tags" class="text-danger"></span>
                            <small class="form-text text-muted">Add relevant tags to help others find your post</small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                            <a asp-action="Index" class="text-muted text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Back to Feed
                            </a>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-outline-danger rounded-pill px-4" onclick="deletePost('@Model.Id')">
                                    <i class="fas fa-trash-alt me-2"></i>Delete
                                </button>
                                <button type="submit" class=" rounded-pill px-5">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pages/posts.js"></script>
}
