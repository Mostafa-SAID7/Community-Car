@model IEnumerable<CommunityCar.Domain.DTOs.Community.PostDto>
@{
    ViewData["Title"] = "Featured Posts";
    ViewData["HeaderTitle"] = "Featured Posts";
    ViewData["HeaderDescription"] = "Top community posts from car enthusiasts";
    ViewData["HeaderIcon"] = "fas fa-star";
}

<partial name="_InnerPageHeader" />

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-star text-warning me-2"></i>Featured Posts
                </h2>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to All Posts
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var post in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden post-card">
                        @if (!string.IsNullOrEmpty(post.ImageUrl) || (post.Type == CommunityCar.Domain.Enums.Community.post.PostType.Video && !string.IsNullOrEmpty(post.VideoUrl)))
                        {
                            <div class="position-relative">
                                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-3">
                                    <i class="fas fa-star me-1"></i>Featured
                                </span>
                                <span class="badge bg-purple post-type-badge text-white">
                                    @post.Type
                                </span>
                                <img src="@post.ImageUrl" 
                                     alt="@post.Title" 
                                     class="card-img-top post-image" />
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <div class="post-meta mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>@post.AuthorName
                                </small>
                                <small class="text-muted ms-3">
                                    <i class="fas fa-calendar me-1"></i>
                                    @post.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                            <h5 class="post-title mb-2">
                                <a asp-action="Details" asp-route-slug="@post.Slug" class="text-decoration-none text-dark">
                                    @post.Title
                                </a>
                            </h5>
                            <p class="post-content text-muted small mb-3 flex-grow-1">
                                @(post.Content?.Length > 120 ? post.Content.Substring(0, 120) + "..." : post.Content)
                            </p>
                            @if (!string.IsNullOrEmpty(post.CategoryName))
                            {
                                <div class="mb-2">
                                    <span class="badge bg-primary">
                                        <i class="fas fa-folder me-1"></i>@post.CategoryName
                                    </span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(post.Tags))
                            {
                                <div class="mb-2">
                                    @foreach (var tag in post.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Take(3))
                                    {
                                        <span class="badge bg-light text-dark me-1">#@tag.Trim()</span>
                                    }
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                <div class="d-flex gap-3 text-muted small">
                                    <span><i class="fas fa-eye me-1"></i>@post.ViewCount</span>
                                    <span><i class="fas fa-heart me-1"></i>@post.LikeCount</span>
                                    <span><i class="fas fa-comment me-1"></i>@post.CommentCount</span>
                                    <span><i class="fas fa-share me-1"></i>@post.ShareCount</span>
                                </div>
                                <a asp-action="Details" asp-route-slug="@post.Slug" class="btn btn-sm btn-outline-primary rounded-pill">
                                    Read <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-star fa-4x text-muted mb-4"></i>
                        <h4 class="text-muted mb-3">No Featured Posts</h4>
                        <p class="text-muted mb-4">There are currently no featured posts available.</p>
                        <a asp-action="Index" class="btn btn-purple text-white">
                            <i class="fas fa-arrow-left me-2"></i>View All Posts
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Animate cards on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '0';
                        entry.target.style.transform = 'translateY(20px)';
                        setTimeout(() => {
                            entry.target.style.transition = 'all 0.5s ease';
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }, 100);
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.post-card').forEach(card => {
                observer.observe(card);
            });
        });
    </script>
}
