@model CreatePostViewModel
@using CommunityCar.Mvc.ViewModels.Post
@using CommunityCar.Domain.Enums.Community.post

@{
    ViewData["Title"] = "Create Post";
    var postTypes = ViewBag.PostTypes as PostType[];
    var postStatuses = Enum.GetValues<PostStatus>();
    var groupId = Context.Request.Query["groupId"].ToString();
    var userGroups = ViewBag.UserGroups as IEnumerable<CommunityCar.Domain.DTOs.Community.GroupDto>;

    ViewData["HeaderTitle"] = "Create Post";
    ViewData["HeaderDescription"] = "Share your story with the community";
    ViewData["HeaderIcon"] = "fas fa-edit";
    
    ViewData["HideRightSidebar"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/components/cards.css" />
    <link rel="stylesheet" href="~/css/pages/posts.css" />
    <link rel="stylesheet" href="~/css/components/tag-input.css" />
}

<div class="container-fluid px-0">
    <nav aria-label="breadcrumb" class="px-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Posts</a></li>
            <li class="breadcrumb-item active">Create Post</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(groupId))
    {
        var selectedGroup = userGroups?.FirstOrDefault(g => g.Id.ToString() == groupId);
        if (selectedGroup != null)
        {
            <div class="px-3 mb-3">
                <div class="alert alert-info d-flex align-items-center">
                    <i class="fas fa-users me-3 fs-4"></i>
                    <div>
                        <strong>Posting in Group:</strong> @selectedGroup.Name
                        <br />
                        <small class="text-muted">This post will be visible to group members</small>
                    </div>
                </div>
            </div>
        }
    }

    <div class="px-3">
        <div class="card form-card-red shadow-sm border-0">
           
            <div class="card-body p-3 p-md-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3 mb-md-4">
                        <label class="form-label fw-bold">Post Type <span class="text-danger">*</span></label>
                        <div class="post-type-selector">
                            @if (postTypes != null)
                            {
                                @foreach (var type in postTypes)
                                {
                                    var icon = type switch {
                                        PostType.Text => "fa-align-left",
                                        PostType.Image => "fa-image",
                                        PostType.Video => "fa-video",
                                        PostType.Link => "fa-link",
                                        PostType.Poll => "fa-poll",
                                        PostType.Event => "fa-calendar-alt",
                                        _ => "fa-file"
                                    };
                                    
                                    <div class="post-type-card" data-type="@type">
                                        <i class="fas @icon"></i>
                                        <div class="fw-bold">@type</div>
                                    </div>
                                }
                            }
                        </div>
                        <input asp-for="Type" type="hidden" id="postTypeInput" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="mb-3 mb-md-4">
                        <label class="form-label fw-bold">Status <span class="text-danger">*</span></label>
                        <div class="post-status-selector">
                            @foreach (var status in postStatuses)
                            {
                                var statusIcon = status switch {
                                    PostStatus.Draft => "fa-file-alt",
                                    PostStatus.Published => "fa-check-circle",
                                    PostStatus.Archived => "fa-archive",
                                    PostStatus.Deleted => "fa-trash",
                                    _ => "fa-circle"
                                };
                                
                                var statusColor = status switch {
                                    PostStatus.Draft => "status-draft",
                                    PostStatus.Published => "status-published",
                                    PostStatus.Archived => "status-archived",
                                    PostStatus.Deleted => "status-deleted",
                                    _ => ""
                                };
                                
                                var isDefault = status == PostStatus.Published;
                                
                                <div class="post-status-card @statusColor @(isDefault ? "active" : "")" data-status="@status">
                                    <i class="fas @statusIcon"></i>
                                    <div class="fw-bold">@status</div>
                                </div>
                            }
                        </div>
                        <input asp-for="Status" type="hidden" id="postStatusInput" value="@PostStatus.Published" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                        <small class="form-text text-muted d-block mt-2">
                            <i class="fas fa-info-circle me-1"></i>Choose Draft to save without publishing
                        </small>
                    </div>

                    <div class="mb-3 mb-md-4">
                        <label asp-for="Title" class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter an engaging title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3 mb-md-4">
                        <label asp-for="Content" class="form-label fw-bold">Content <span class="text-danger">*</span></label>
                        <textarea asp-for="Content" class="form-control" rows="8" placeholder="Share your thoughts..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="mb-3 mb-md-4 post-type-fields" id="imageFields">
                        <label class="form-label fw-bold">
                            <i class="fas fa-image me-1"></i>Image Upload
                        </label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" id="imageFileInput" />
                        <small class="form-text text-muted">Max size: 10 MB. Allowed formats: JPG, PNG, GIF, WebP, BMP</small>
                        <span asp-validation-for="ImageFile" class="text-danger d-block"></span>
                        <div id="imagePreview" class="preview-container">
                            <img id="imagePreviewImg" src="" alt="Image preview" />
                        </div>
                    </div>

                    <div class="mb-3 mb-md-4 post-type-fields" id="videoFields">
                        <label class="form-label fw-bold">
                            <i class="fas fa-video me-1"></i>Video Upload
                        </label>
                        <input asp-for="VideoFile" type="file" class="form-control" accept="video/*" id="videoFileInput" />
                        <small class="form-text text-muted">Max size: 50 MB. Allowed formats: MP4, WebM, OGG, MOV, AVI</small>
                        <span asp-validation-for="VideoFile" class="text-danger d-block"></span>
                        <div id="videoPreview" class="preview-container">
                            <video id="videoPreviewPlayer" controls></video>
                        </div>
                    </div>

                    <div id="linkFields" class="post-type-fields">
                        <div class="mb-3 mb-md-4">
                            <label asp-for="LinkUrl" class="form-label fw-bold">
                                <i class="fas fa-link me-1"></i>Link URL <span class="text-danger">*</span>
                            </label>
                            <input asp-for="LinkUrl" class="form-control" placeholder="https://example.com" required />
                            <span asp-validation-for="LinkUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3 mb-md-4">
                            <label asp-for="LinkTitle" class="form-label fw-bold">Link Title <span class="text-danger">*</span></label>
                            <input asp-for="LinkTitle" class="form-control" placeholder="Title of the linked content" required />
                            <span asp-validation-for="LinkTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3 mb-md-4">
                            <label asp-for="LinkDescription" class="form-label fw-bold">Link Description</label>
                            <textarea asp-for="LinkDescription" class="form-control" rows="3" placeholder="Brief description of the link"></textarea>
                            <span asp-validation-for="LinkDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 mb-md-4">
                        <label asp-for="Category" class="form-label fw-bold">
                            <i class="fas fa-folder me-1"></i>Category
                        </label>
                        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<PostCategory>()">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                        <small class="form-text text-muted">Choose a category for better organization</small>
                    </div>

                    @if (userGroups != null && userGroups.Any())
                    {
                        <div class="mb-3 mb-md-4">
                            <label asp-for="GroupId" class="form-label fw-bold">
                                <i class="fas fa-users me-1"></i>Post to Group (Optional)
                            </label>
                            <select asp-for="GroupId" class="form-control" id="groupSelect">
                                <option value="">-- Post to your timeline --</option>
                                @foreach (var group in userGroups)
                                {
                                    <option value="@group.Id" selected="@(group.Id.ToString() == groupId)">@group.Name</option>
                                }
                            </select>
                            <span asp-validation-for="GroupId" class="text-danger"></span>
                            <small class="form-text text-muted">Select a group to share this post with group members</small>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(groupId))
                    {
                        <input type="hidden" asp-for="GroupId" value="@groupId" />
                    }

                    <div class="mb-3 mb-md-4">
                        <label asp-for="Tags" class="form-label fw-bold">
                            <i class="fas fa-tags me-1"></i>Tags
                        </label>
                        <input asp-for="Tags" class="form-control" placeholder="Type to add tags (max 3)" data-tag-input="true" data-max-tags="3" />
                        <span asp-validation-for="Tags" class="text-danger"></span>
                        <small class="form-text text-muted">Press Enter to add a tag. Maximum 3 tags allowed.</small>
                    </div>

                    <div class="mb-3 mb-md-4">
                        <div class="form-check">
                            <input asp-for="PublishImmediately" class="form-check-input" type="checkbox" checked />
                            <label asp-for="PublishImmediately" class="form-check-label">
                                <i class="fas fa-rocket me-1"></i>Publish immediately
                            </label>
                        </div>
                        <small class="form-text text-muted">Uncheck to save as draft</small>
                    </div>

                    <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Create Post
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/components/tag-input.js"></script>
    <script src="~/js/pages/posts.js"></script>
    <script src="~/js/pages/posts-validation.js"></script>
}
