@model CommunityCar.Domain.Base.PagedResult<CommunityCar.Domain.DTOs.Community.PostDto>
@{
    ViewData["Title"] = "Community Posts";
    var currentType = ViewBag.CurrentType as CommunityCar.Domain.Enums.Community.post.PostType?;
    var groupId = ViewBag.GroupId as Guid?;
    var postTypes = ViewBag.PostTypes as Array;
}

@section Styles {
    }

@{
    ViewData["HeaderTitle"] = "Community Posts";
    ViewData["HeaderDescription"] = "Share your thoughts, stories, and experiences with fellow car enthusiasts";
    ViewData["HeaderIcon"] = "fas fa-edit";
    
    if (User.Identity?.IsAuthenticated ?? false)
    {
        ViewData["HeaderActions"] = Html.Raw($@"
            <div class='d-flex gap-2 flex-wrap'>
                <a href='{Url.Action("Create")}' class='btn btn-light'>
                    <i class='fas fa-plus-circle me-2'></i>Create Post
                </a>
                <a href='{Url.Action("MyPosts")}' class='btn btn-light'>
                    <i class='fas fa-user-edit me-2'></i>My Posts
                </a>
            </div>");
    }
}

<partial name="_InnerPageHeader" />

<div class="container">
    <!-- Filters -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <span class="fw-bold me-2">
                    <i class="fas fa-filter me-1"></i>Post Type:
                </span>
                <a asp-action="Index" 
                   class="btn btn-sm filter-btn @(currentType == null ? "btn-purple" : "btn-outline-purple")">
                    <i class="fas fa-th me-1"></i>All Types
                </a>
                @if (postTypes != null)
                {
                    @foreach (var type in postTypes)
                    {
                        var typeValue = (CommunityCar.Domain.Enums.Community.post.PostType)type;
                        <a asp-action="Index" 
                           asp-route-type="@typeValue" 
                           class="btn btn-sm filter-btn @(currentType == typeValue ? "btn-purple" : "btn-outline-purple")">
                            @typeValue.ToString()
                        </a>
                    }
                }
                <div class="ms-auto">
                    <a asp-action="Featured" 
                       class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-star me-1"></i>Featured
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Posts Grid -->
    @if (Model.Items.Any())
    {
        <div class="row g-4 mb-4">
            @foreach (var post in Model.Items)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card post-card">
                        <div class="position-relative">
                            @if (post.IsPinned)
                            {
                                <span class="badge bg-warning text-dark pinned-badge">
                                    <i class="fas fa-thumbtack me-1"></i>Pinned
                                </span>
                            }
                            <span class="badge bg-purple post-type-badge text-white">
                                @post.Type
                            </span>
                            <img src="@(post.ImageUrl ?? "/images/post-placeholder.jpg")" 
                                 alt="@post.Title" 
                                 class="card-img-top post-image" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="post-meta mb-2">
                                <i class="fas fa-user me-1"></i>@post.AuthorName
                                <span class="mx-2">â€¢</span>
                                <i class="fas fa-calendar me-1"></i>@post.CreatedAt.ToString("MMM dd, yyyy")
                            </div>
                            <h5 class="post-title mb-2">
                                <a href="@Url.Action("Details", "Posts", new { slug = post.Slug })" 
                                   class="text-decoration-none text-dark">
                                    @post.Title
                                </a>
                            </h5>
                            <p class="post-content mb-3 flex-grow-1">
                                @(post.Content?.Length > 120 ? post.Content.Substring(0, 120) + "..." : post.Content)
                            </p>
                            @if (!string.IsNullOrEmpty(post.Tags))
                            {
                                <div class="mb-2">
                                    @foreach (var tag in post.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Take(3))
                                    {
                                        <span class="badge bg-light text-dark me-1">#@tag.Trim()</span>
                                    }
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                <div class="d-flex gap-3 text-muted small">
                                    <span><i class="fas fa-eye me-1"></i>@post.ViewCount</span>
                                    <span><i class="fas fa-heart me-1"></i>@post.LikeCount</span>
                                    <span><i class="fas fa-comment me-1"></i>@post.CommentCount</span>
                                    <span><i class="fas fa-share me-1"></i>@post.ShareCount</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Posts pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Posts", new { page = Model.PageNumber - 1, type = currentType, groupId = groupId })">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", "Posts", new { page = i, type = currentType, groupId = groupId })">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@(Model.PageNumber + 1)"
                           asp-route-type="@currentType"
                           asp-route-groupId="@groupId">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-edit fa-4x text-muted mb-4"></i>
                <h4 class="text-muted mb-3">No Posts Found</h4>
                <p class="text-muted mb-4">
                    @if (currentType != null)
                    {
                        <text>No posts found with the selected type.</text>
                    }
                    else
                    {
                        <text>Be the first to share your story with the community!</text>
                    }
                </p>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-action="Create" class="btn btn-purple text-white">
                        <i class="fas fa-plus-circle me-2"></i>Create First Post
                    </a>
                }
                else
                {
                    <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-purple text-white">
                        <i class="fas fa-sign-in-alt me-2"></i>Login to Create Posts
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.pagination a').on('click', function() {
                $('html, body').animate({ scrollTop: 0 }, 300);
            });

            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '0';
                        entry.target.style.transform = 'translateY(20px)';
                        setTimeout(() => {
                            entry.target.style.transition = 'all 0.5s ease';
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }, 100);
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.post-card').forEach(card => {
                observer.observe(card);
            });
        });
    </script>
}
