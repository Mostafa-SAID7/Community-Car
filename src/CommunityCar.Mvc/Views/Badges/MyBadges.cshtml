@model List<CommunityCar.Mvc.ViewModels.Gamification.BadgeViewModel>
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "My Badges";
}

@section Styles {
    }

<div class="badges-hero">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">My Achievements</h1>
        <p class="lead">A collection of the badges you've earned in the CommunityCar community.</p>
        <div class="mt-4">
            <a href="@Url.Action("Index")" class="btn btn-outline-light">
                <i class="fas fa-th-large me-2"></i>Browse All Badges
            </a>
        </div>
    </div>
</div>

<div class="container mb-5">
    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-award"></i>
            <h3>No badges yet</h3>
            <p class="text-muted">Start contributing to the community to earn your first badge!</p>
            <a href="@Url.Action("Index", "Feed")" class="btn btn-primary mt-3">Start Exploring</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var badge in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card badge-card h-100">
                        <div class="card-body text-center p-4">
                            <div class="badge-icon-container">
                                <i class="fas @badge.IconUrl"></i>
                            </div>
                            <span class="category-badge mb-2 d-inline-block">@badge.Category</span>
                            <h5 class="card-title fw-bold">@badge.Name</h5>
                            <p class="card-text text-muted small">@badge.Description</p>
                            <div class="mt-3">
                                <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2">
                                    <i class="fas fa-check-circle me-1"></i> Earned
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
