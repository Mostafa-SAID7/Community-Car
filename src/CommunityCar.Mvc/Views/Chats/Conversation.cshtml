@model List<CommunityCar.Domain.DTOs.Communications.ChatMessageDto>
@{
    ViewData["Title"] = "Chat";
    var otherUserId = ViewBag.OtherUserId as Guid?;
    var conversations = ViewBag.Conversations as List<CommunityCar.Domain.DTOs.Communications.ChatConversationDto>;
    var otherUser = conversations?.FirstOrDefault(c => c.UserId == otherUserId);
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="chat-page-container">
    <div class="chat-container has-sidebar">
        <!-- Sidebar -->
        <div class="chat-sidebar">
            <div class="chat-sidebar-header">
                <h5 class="mb-0 fw-bold"><i class="fas fa-comments me-2"></i>Chats</h5>
            </div>
            
            <div class="chat-search-wrapper">
                <i class="fas fa-search position-absolute text-muted" style="left: 2rem; top: 50%; transform: translateY(-50%);"></i>
                <input type="text" class="chat-search-input" placeholder="Search...">
            </div>

            <div class="conversations-list custom-scrollbar">
                @if (conversations != null)
                {
                    foreach (var conv in conversations)
                    {
                        <a href="@Url.Action("Conversation", "Chats", new { area = "Communications", id = conv.UserId })" 
                           class="conv-item @(conv.UserId == otherUserId ? "active" : "")"
                           data-user-id="@conv.UserId">
                            <div class="d-flex align-items-center">
                                <div class="user-avatar-wrapper me-3">
                                    @if (!string.IsNullOrEmpty(conv.ProfilePicture))
                                    {
                                        <img src="@conv.ProfilePicture" class="user-avatar-sm">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center fw-bold user-avatar-sm" style="width: 40px; height: 40px;">
                                            @conv.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                    }
                                    @if (conv.IsOnline)
                                    {
                                        <div class="status-indicator status-online"></div>
                                    }
                                </div>
                                <div class="flex-grow-1 text-truncate">
                                    <div class="fw-bold text-white small">@conv.UserName</div>
                                    <div class="text-muted small text-truncate">@(conv.LastMessage ?? "No messages")</div>
                                </div>
                                @if (conv.UnreadCount > 0)
                                {
                                    <span class="badge bg-danger rounded-pill ms-2">@conv.UnreadCount</span>
                                }
                            </div>
                        </a>
                    }
                }
            </div>
        </div>

        <!-- Chat Main Area -->
        <div class="chat-main">
            @if (otherUser != null)
            {
                <div class="chat-header">
                    <div class="user-info">
                        <div class="user-avatar-wrapper">
                            @if (!string.IsNullOrEmpty(otherUser.ProfilePicture))
                            {
                                <img src="@otherUser.ProfilePicture" class="user-avatar-sm">
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center fw-bold user-avatar-sm">
                                    @otherUser.UserName.Substring(0, 1).ToUpper()
                                </div>
                            }
                            <div id="statusDot" class="status-indicator @(otherUser.IsOnline ? "status-online" : "status-offline")"></div>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">@otherUser.UserName</h6>
                            <small id="statusText" class="text-muted">@(otherUser.IsOnline ? "Online" : "Offline")</small>
                        </div>
                    </div>
                    <div class="header-actions">
                        <div class="dropdown">
                            <button class="btn btn-icon btn-light" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4">
                                <li><a class="dropdown-item p-3" href="@Url.Action("Index", "Profiles", new { area = "Identity", id = otherUser.UserId })"><i class="fas fa-user me-2"></i>View Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger p-3" href="javascript:void(0)" onclick="confirmBlock('@otherUser.UserId')"><i class="fas fa-ban me-2"></i>Block User</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="chat-messages custom-scrollbar" id="chatMessages">
                    @foreach (var message in Model.OrderBy(m => m.CreatedAt))
                    {
                        var isSent = message.SenderId.ToString() == currentUserId;
                        <div class="message @(isSent ? "user" : "received")">
                            <div class="message-bubble">
                                @message.Content
                            </div>
                            <div class="message-time">
                                @message.CreatedAt.ToString("HH:mm")
                                @if(isSent) {
                                    <i class="fas @(message.IsRead ? "fa-check-double text-primary" : "fa-check") ms-1"></i>
                                }
                            </div>
                        </div>
                    }
                </div>

                <div class="chat-input-area">
                    <div id="typingIndicator" class="typing-indicator mb-2 small text-muted"></div>
                    <form id="sendMessageForm" class="d-flex gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ReceiverId" value="@otherUserId" />
                        <div class="input-wrapper flex-grow-1">
                            <input type="text" name="Content" id="messageInput" class="form-control" 
                                   placeholder="Type your message..." required maxlength="2000" autocomplete="off">
                        </div>
                        <button type="submit" class="btn btn-primary btn-send shadow-sm flex-shrink-0">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="d-flex flex-column align-items-center justify-content-center h-100 text-center p-5">
                    <div class="opacity-10 mb-4">
                        <i class="fas fa-comments fa-6x"></i>
                    </div>
                    <h4 class="fw-bold text-muted">Select a conversation</h4>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const receiverId = '@otherUserId';
            const currentUserId = '@currentUserId';
            const chatMessages = document.getElementById('chatMessages');
            let typingTimeout;

            if (!receiverId) return;

            // Initialize SignalR
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            // Receive message
            connection.on("ReceiveMessage", function(senderId, content, timestamp) {
                if (senderId === receiverId) {
                    appendMessage(content, timestamp, false);
                    markAsRead();
                } else {
                    // Update unread count in sidebar or show toast
                    const badge = $('[data-user-id="' + senderId + '"] .badge');
                    if (badge.length) {
                        const count = parseInt(badge.text() || "0") + 1;
                        badge.text(count).show();
                    }
                }
            });

            // Message confirmation
            connection.on("MessageSent", function(receiverId, content, timestamp) {
                // We handle this via AJAX success for better UX
            });

            // Status updates
            connection.on("UserOnline", function(userId) {
                updateUserStatus(userId, true);
            });
            connection.on("UserOffline", function(userId) {
                updateUserStatus(userId, false);
            });

            // Typing indicators
            connection.on("UserTyping", function(userId) {
                if (userId === receiverId) {
                    $('#typingIndicator').text('@(otherUser?.UserName) is typing...');
                }
            });
            connection.on("UserStoppedTyping", function(userId) {
                if (userId === receiverId) {
                    $('#typingIndicator').text('');
                }
            });

            connection.start()
                .then(() => console.log("ChatHub Connected"))
                .catch(err => console.error(err));

            // UI Helpers
            function scrollToBottom() {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
            scrollToBottom();

            function appendMessage(content, timestamp, isSent) {
                const date = new Date(timestamp);
                const timeStr = date.getHours().toString().padStart(2, '0') + ':' + date.getMinutes().toString().padStart(2, '0');
                
                const html = `
                    <div class="message ${isSent ? 'user' : 'received'}">
                        <div class="message-bubble">
                            ${content}
                        </div>
                        <div class="message-time">
                            ${timeStr} ${isSent ? '<i class="fas fa-check ms-1"></i>' : ''}
                        </div>
                    </div>`;
                
                $(chatMessages).append(html);
                scrollToBottom();
            }

            function updateUserStatus(userId, isOnline) {
                const indicator = $('[data-user-id="' + userId + '"] .bg-success, [data-user-id="' + userId + '"] .bg-secondary');
                if (isOnline) {
                    indicator.removeClass('bg-secondary').addClass('bg-success');
                } else {
                    indicator.removeClass('bg-success').addClass('bg-secondary');
                }

                if (userId === receiverId) {
                    $('#statusDot').removeClass('bg-secondary bg-success').addClass(isOnline ? 'bg-success' : 'bg-secondary');
                    $('#statusText').text(isOnline ? 'Online' : 'Offline');
                }
            }

            function markAsRead() {
                const url = CultureHelper.addCultureToUrl('/Chats/MarkConversationAsRead/' + receiverId);
                $.post(url, {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                });
            }

            // Forms & Inputs
            $('#sendMessageForm').on('submit', function(e) {
                e.preventDefault();
                const content = $('#messageInput').val().trim();
                if (!content) return;

                const formData = $(this).serialize();
                const url = CultureHelper.addCultureToUrl('/Chats/SendMessage');
                $.post(url, formData, function(response) {
                    if (response.success) {
                        appendMessage(content, new Date(), true);
                        $('#messageInput').val('');
                        if (connection.state === signalR.HubConnectionState.Connected) {
                            connection.invoke("SendMessage", receiverId, content);
                        }
                    }
                });
            });

            $('#messageInput').on('input', function() {
                if (connection.state === signalR.HubConnectionState.Connected) {
                    connection.invoke("Typing", receiverId);
                    clearTimeout(typingTimeout);
                    typingTimeout = setTimeout(() => {
                        connection.invoke("StopTyping", receiverId);
                    }, 1000);
                }
            });

            markAsRead();
        });
    </script>
}
