@model List<CommunityCar.Domain.DTOs.Communications.ChatConversationDto>
@{
    ViewData["Title"] = "Messages";
    var unreadCount = ViewBag.UnreadCount ?? 0;
}

@section Styles {
    }

<!-- Hero Section -->
