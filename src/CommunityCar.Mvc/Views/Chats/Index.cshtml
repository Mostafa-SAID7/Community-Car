@model List<CommunityCar.Domain.DTOs.Communications.ChatConversationDto>
@{
    ViewData["Title"] = "Messages";
    var unreadCount = ViewBag.UnreadCount ?? 0;
    var friends = ViewBag.Friends as List<CommunityCar.Domain.DTOs.Community.FriendshipDto> ?? new List<CommunityCar.Domain.DTOs.Community.FriendshipDto>();
}

<div class="chat-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-2">My Messages</h1>
                <p class="lead mb-0 opacity-75">Chat with fellow automotive enthusiasts</p>
            </div>
            <div class="col-lg-4 text-end d-none d-lg-block">
                <i class="fas fa-comments fa-6x opacity-25"></i>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row g-4">
        <!-- Main Chat Area -->
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
                <h4 class="fw-bold mb-0">
                    <i class="fas fa-comments me-2 text-primary"></i>Recent Conversations
                </h4>
                @if (unreadCount > 0)
                {
                    <span class="badge bg-danger rounded-pill px-3 py-2">@unreadCount Unread</span>
                }
            </div>

            <div class="mb-3">
                <div class="input-group shadow-sm rounded-pill overflow-hidden">
                    <span class="input-group-text bg-white border-0 ps-4">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" id="searchConversations" class="form-control border-0 py-3" placeholder="Search conversations...">
                </div>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 p-5 text-center">
                    <div class="py-4">
                        <div class="mb-4 opacity-25">
                            <i class="fas fa-comment-slash fa-4x"></i>
                        </div>
                        <h5 class="fw-bold">No Conversations Yet</h5>
                        <p class="text-muted mb-4">Start chatting with your friends from the list on the right!</p>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-3" id="conversationsContainer">
                    @foreach (var conv in Model)
                    {
                        <div class="col-12 conversation-wrapper" data-username="@conv.UserName.ToLower()">
                            <a href="@Url.Action("Conversation", new { id = conv.UserId })" class="text-decoration-none">
                                <div class="card conversation-card rounded-4 shadow-sm border-0 @(conv.UnreadCount > 0 ? "bg-light" : "")">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="position-relative me-3">
                                                @if (!string.IsNullOrEmpty(conv.ProfilePicture))
                                                {
                                                    <img src="@conv.ProfilePicture" alt="@conv.UserName" class="rounded-circle user-avatar">
                                                }
                                                else
                                                {
                                                    <div class="user-initial">
                                                        @conv.UserName.Substring(0, 1).ToUpper()
                                                    </div>
                                                }
                                                @if (conv.IsOnline)
                                                {
                                                    <div class="online-indicator"></div>
                                                }
                                            </div>
                                            <div class="flex-grow-1 min-width-0">
                                                <div class="d-flex justify-content-between align-items-center mb-1">
                                                    <h6 class="mb-0 fw-bold text-dark text-truncate">@conv.UserName</h6>
                                                    @if (conv.LastMessageTime.HasValue)
                                                    {
                                                        <small class="text-muted" style="font-size: 0.75rem;">
                                                            @conv.LastMessageTime.Value.ToString("MMM dd")
                                                        </small>
                                                    }
                                                </div>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <p class="mb-0 text-muted small message-preview @(conv.UnreadCount > 0 ? "fw-bold text-dark" : "")">
                                                        @(conv.LastMessage ?? "No messages yet")
                                                    </p>
                                                    @if (conv.UnreadCount > 0)
                                                    {
                                                        <span class="badge bg-primary rounded-pill ms-2">@conv.UnreadCount</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Friends List Sidebar -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px;">
                <div class="card-header bg-white border-0 pt-4 pb-3">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-user-friends me-2 text-primary"></i>Friends
                    </h5>
                    <p class="text-muted small mb-0">Start a new conversation</p>
                </div>
                <div class="card-body p-0">
                    @if (friends != null && friends.Any())
                    {
                        <div class="list-group list-group-flush" style="max-height: 500px; overflow-y: auto;">
                            @foreach (var friend in friends.Take(20))
                            {
                                <a href="@Url.Action("Conversation", new { id = friend.FriendId })" 
                                   class="list-group-item list-group-item-action border-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="position-relative me-3">
                                            @if (!string.IsNullOrEmpty(friend.ProfilePictureUrl))
                                            {
                                                <img src="@friend.ProfilePictureUrl" alt="@friend.FriendName" 
                                                     class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center fw-bold" 
                                                     style="width: 40px; height: 40px; font-size: 1rem;">
                                                    @friend.FriendName.Substring(0, 1).ToUpper()
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold text-dark">@friend.FriendName</div>
                                            <small class="text-muted">
                                                Friends since @friend.Since.ToString("MMM yyyy")
                                            </small>
                                        </div>
                                        <i class="fas fa-comment-dots text-muted"></i>
                                    </div>
                                </a>
                            }
                        </div>
                        @if (friends.Count > 20)
                        {
                            <div class="card-footer bg-white border-0 text-center py-3">
                                <a asp-controller="Friends" asp-action="Index" class="btn btn-sm btn-outline-primary rounded-pill">
                                    View All Friends (@friends.Count)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <i class="fas fa-user-plus fa-3x text-muted opacity-25 mb-3"></i>
                            <p class="text-muted mb-3">No friends yet</p>
                            <a asp-controller="Friends" asp-action="Index" class="btn btn-sm btn-primary rounded-pill">
                                <i class="fas fa-user-plus me-2"></i>Find Friends
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#searchConversations').on('input', function() {
                var term = $(this).val().toLowerCase();
                $('.conversation-wrapper').each(function() {
                    var name = $(this).data('username');
                    if (name.includes(term)) {
                        $(this).fadeIn(200);
                    } else {
                        $(this).fadeOut(200);
                    }
                });
            });

            // Refresh unread counts periodically
            setInterval(function() {
                const url = CultureHelper.addCultureToUrl('/Chats/GetUnreadCount');
                $.get(url, function(data) {
                    if (data.success && data.count > 0) {
                        // Optional: update UI without reload
                    }
                }).fail(function(xhr, status, error) {
                    // Silently handle errors to avoid console spam
                    console.debug('Failed to fetch unread count:', status);
                });
            }, 30000);
        });
    </script>
}
