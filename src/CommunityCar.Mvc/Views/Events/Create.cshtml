@model CreateEventViewModel
@using CommunityCar.Mvc.ViewModels.Events
@using CommunityCar.Domain.Enums.Community.events

@{
    ViewData["Title"] = "Create Event";
    var categories = ViewBag.Categories as EventCategory[];
}

@{
    ViewData["HeaderTitle"] = "Host an Event";
    ViewData["HeaderDescription"] = "Organize a meetup, car show, or adventure for the community";
    ViewData["HeaderIcon"] = "fas fa-calendar-plus";
}

<partial name="_InnerPageHeader" />

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-calendar-plus"></i> Create New Event</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter event title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe your event"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartTime" class="form-label"></label>
                                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndTime" class="form-label"></label>
                                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Select a category</option>
                                @if (categories != null)
                                {
                                    @foreach (var cat in categories)
                                    {
                                        <option value="@cat">@cat</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsOnline" class="form-check-input" type="checkbox" id="isOnlineCheck" />
                                <label asp-for="IsOnline" class="form-check-label" for="isOnlineCheck">
                                    This is an online event
                                </label>
                            </div>
                        </div>

                        <div class="mb-3" id="locationField">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" placeholder="Event location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="addressField">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" placeholder="Full address (optional)" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="onlineUrlField" class="d-none">
                            <label asp-for="OnlineUrl" class="form-label"></label>
                            <input asp-for="OnlineUrl" class="form-control" placeholder="https://zoom.us/..." />
                            <span asp-validation-for="OnlineUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxAttendees" class="form-label"></label>
                            <input asp-for="MaxAttendees" type="number" class="form-control" placeholder="0 for unlimited" />
                            <span asp-validation-for="MaxAttendees" class="text-danger"></span>
                            <small class="form-text text-muted">Leave as 0 for unlimited attendees</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Event
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('isOnlineCheck').addEventListener('change', function() {
            const locationField = document.getElementById('locationField');
            const addressField = document.getElementById('addressField');
            const onlineUrlField = document.getElementById('onlineUrlField');
            
            if (this.checked) {
                locationField.style.display = 'none';
                addressField.style.display = 'none';
                onlineUrlField.style.display = 'block';
            } else {
                locationField.style.display = 'block';
                addressField.style.display = 'block';
                onlineUrlField.style.display = 'none';
            }
        });
    </script>
}
