@model PagedResult<EventDto>
@using CommunityCar.Domain.Base
@using CommunityCar.Domain.DTOs.Community

@{
    ViewData["Title"] = "My Events";
    var asOrganizer = ViewBag.AsOrganizer as bool? ?? false;
}

@{
    ViewData["HeaderTitle"] = "My Events";
    ViewData["HeaderDescription"] = "Manage events you're hosting or attending";
    ViewData["HeaderIcon"] = "fas fa-briefcase";
    
    var createUrl = Url.Action("Create");
    var actionsHtml = "<a href='" + createUrl + "' class='btn btn-light'>" +
                      "<i class='fas fa-plus-circle me-2'></i>Host New Event" +
                      "</a>";
    ViewData["HeaderActions"] = Html.Raw(actionsHtml);
}

<partial name="_InnerPageHeader" />

    <!-- Toggle between attending and organizing -->
    <div class="btn-group mb-4" role="group">
        <a asp-action="MyEvents" asp-route-asOrganizer="false" 
           class="btn @(!asOrganizer ? "btn-primary" : "btn-outline-primary")">
            <i class="bi bi-calendar-check"></i> Events I'm Attending
        </a>
        <a asp-action="MyEvents" asp-route-asOrganizer="true" 
           class="btn @(asOrganizer ? "btn-primary" : "btn-outline-primary")">
            <i class="bi bi-calendar-event"></i> Events I'm Organizing
        </a>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var evt in Model.Items)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(evt.ImageUrl))
                        {
                            <img src="@evt.ImageUrl" class="card-img-top" alt="@evt.Title" class="img-cover-200">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" class="h-200">
                                <i class="bi bi-calendar-event" class="icon-placeholder"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@evt.CategoryName</span>
                                <span class="badge bg-@(evt.Status.ToString() == "Published" ? "success" : evt.Status.ToString() == "Cancelled" ? "danger" : "secondary")">
                                    @evt.StatusName
                                </span>
                            </div>
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-slug="@evt.Slug" class="text-decoration-none text-dark">
                                    @evt.Title
                                </a>
                            </h5>
                            <p class="card-text text-muted small">
                                @evt.Description.Substring(0, Math.Min(100, evt.Description.Length))@(evt.Description.Length > 100 ? "..." : "")
                            </p>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @evt.StartTime.ToString("MMM dd, yyyy")
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> @evt.StartTime.ToString("hh:mm tt")
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> @evt.Location
                                </small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-people"></i> @evt.AttendeeCount going
                                </small>
                                @if (evt.IsOrganizer)
                                {
                                    <a asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-slug="@evt.Slug" class="btn btn-sm btn-outline-primary">
                                        View Details
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="MyEvents" asp-route-page="@(Model.PageNumber - 1)" asp-route-asOrganizer="@asOrganizer">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="MyEvents" asp-route-page="@i" asp-route-asOrganizer="@asOrganizer">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="MyEvents" asp-route-page="@(Model.PageNumber + 1)" asp-route-asOrganizer="@asOrganizer">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            @if (asOrganizer)
            {
                <text>You haven't organized any events yet. <a asp-action="Create">Create your first event!</a></text>
            }
            else
            {
                <text>You're not attending any events yet. <a asp-action="Index">Browse events to join!</a></text>
            }
        </div>
    }
</div>
