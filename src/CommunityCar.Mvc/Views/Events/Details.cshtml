@model EventDetailsViewModel
@using CommunityCar.Mvc.ViewModels.Events
@using CommunityCar.Domain.Enums.Community.events

@{
    ViewData["Title"] = Model.Event.Title;
    var evt = Model.Event;
}

@{
    ViewData["HeaderTitle"] = evt.Title;
    ViewData["HeaderDescription"] = evt.Description?.Length > 150 ? evt.Description.Substring(0, 150) + "..." : evt.Description;
    ViewData["HeaderIcon"] = "fas fa-calendar-alt";

    ViewData["HeaderActions"] = Html.Raw($@"
        <div class='d-flex gap-2 flex-wrap'>
            <div class='event-calendar-badge bg-white text-primary rounded px-3 py-2 text-center shadow-sm'>
                <div class='small fw-bold text-uppercase'>{evt.StartTime:MMM}</div>
                <div class='h4 fw-bold mb-0'>{evt.StartTime.Day}</div>
            </div>
        </div>");
}

<partial name="_InnerPageHeader" />

            <!-- Attendees Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Attendees (@evt.AttendeeCount)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Attendees.Items.Any())
                    {
                        <div class="row g-3">
                            @foreach (var attendee in Model.Attendees.Items)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(attendee.UserAvatar))
                                        {
                                            <img src="@attendee.UserAvatar" alt="@attendee.UserName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" class="size-40">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        }
                                        <div>
                                            <strong>@attendee.UserName</strong>
                                            <br>
                                            <small class="text-muted">
                                                <span class="badge bg-@(attendee.Status == AttendeeStatus.Going ? "success" : "info")">
                                                    @attendee.StatusName
                                                </span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No attendees yet. Be the first to join!</p>
                    }
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Comments (@Model.Comments.TotalCount)</h5>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form id="commentForm" class="mb-4">
                            <div class="mb-3">
                                <textarea id="commentContent" class="form-control" rows="3" placeholder="Add a comment..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Post Comment
                            </button>
                        </form>
                    }

                    <div id="commentsList">
                        @if (Model.Comments.Items.Any())
                        {
                            @foreach (var comment in Model.Comments.Items)
                            {
                                <div class="d-flex mb-3">
                                    @if (!string.IsNullOrEmpty(comment.UserAvatar))
                                    {
                                        <img src="@comment.UserAvatar" alt="@comment.UserName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" class="size-40">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <div class="bg-light p-3 rounded">
                                            <strong>@comment.UserName</strong>
                                            <small class="text-muted ms-2">@comment.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</small>
                                            <p class="mb-0 mt-2">@comment.Content</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No comments yet. Be the first to comment!</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Event Details Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Event Details</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-calendar text-primary"></i>
                        <strong>Date</strong>
                        <p class="mb-0">@evt.StartTime.ToString("dddd, MMMM dd, yyyy")</p>
                    </div>
                    <div class="mb-3">
                        <i class="bi bi-clock text-primary"></i>
                        <strong>Time</strong>
                        <p class="mb-0">@evt.StartTime.ToString("hh:mm tt") - @evt.EndTime.ToString("hh:mm tt")</p>
                    </div>
                    <div class="mb-3">
                        <i class="bi bi-@(evt.IsOnline ? "camera-video" : "geo-alt") text-primary"></i>
                        <strong>Location</strong>
                        <p class="mb-0">@evt.Location</p>
                        @if (!string.IsNullOrEmpty(evt.Address))
                        {
                            <small class="text-muted">@evt.Address</small>
                        }
                        @if (evt.IsOnline && !string.IsNullOrEmpty(evt.OnlineUrl))
                        {
                            <br>
                            <a href="@evt.OnlineUrl" target="_blank" class="btn btn-sm btn-outline-primary mt-2">
                                <i class="bi bi-box-arrow-up-right"></i> Join Online
                            </a>
                        }
                    </div>
                    <div class="mb-3">
                        <i class="bi bi-people text-primary"></i>
                        <strong>Attendees</strong>
                        <p class="mb-0">
                            @evt.AttendeeCount @(evt.MaxAttendees > 0 ? $"/ {evt.MaxAttendees}" : "") going
                            @if (evt.InterestedCount > 0)
                            {
                                <br>
                                <small class="text-muted">@evt.InterestedCount interested</small>
                            }
                        </p>
                    </div>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @if (!evt.IsOrganizer)
                        {
                            @if (evt.CanJoin)
                            {
                                <button type="button" class="btn btn-success w-100 mb-2" onclick="joinEvent('@evt.Id', '@((int)AttendeeStatus.Going)')">
                                    <i class="bi bi-check-circle"></i> Join Event
                                </button>
                                <button type="button" class="btn btn-outline-primary w-100" onclick="joinEvent('@evt.Id', '@((int)AttendeeStatus.Interested)')">
                                    <i class="bi bi-star"></i> Interested
                                </button>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="bi bi-exclamation-triangle"></i> Event is full
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <a href="/Identity/Account/Login" class="btn btn-primary w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Login to Join
                        </a>
                    }
                </div>
            </div>

            <!-- Related Events -->
            @if (Model.RelatedEvents.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Related Events</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var relatedEvent in Model.RelatedEvents)
                        {
                            <div class="mb-3">
                                <a asp-action="Details" asp-route-slug="@relatedEvent.Slug" class="text-decoration-none">
                                    <strong>@relatedEvent.Title</strong>
                                </a>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @relatedEvent.StartTime.ToString("MMM dd")
                                </small>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Join Event
        function joinEvent(eventId, status) {
            fetch(`/Events/Join/${eventId}?status=${status}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to join event');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Leave Event
        function leaveEvent(eventId) {
            if (!confirm('Are you sure you want to leave this event?')) return;

            fetch(`/Events/Leave/${eventId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to leave event');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Publish Event
        function publishEvent(eventId) {
            if (!confirm('Are you sure you want to publish this event?')) return;

            fetch(`/Events/Publish/${eventId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to publish event');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Cancel Event
        function cancelEvent(eventId) {
            if (!confirm('Are you sure you want to cancel this event? This will notify all attendees.')) return;

            fetch(`/Events/Cancel/${eventId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to cancel event');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Delete Event
        function deleteEvent(eventId) {
            if (!confirm('Are you sure you want to delete this event? This action cannot be undone.')) return;

            fetch(`/Events/Delete/${eventId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/Events';
                } else {
                    alert(data.message || 'Failed to delete event');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        }

        // Add Comment
        document.getElementById('commentForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const content = document.getElementById('commentContent').value.trim();
            if (!content) {
                alert('Please enter a comment');
                return;
            }

            const formData = new FormData();
            formData.append('eventId', '@evt.Id');
            formData.append('content', content);

            fetch('/Events/AddComment', {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Failed to add comment');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred');
            });
        });
    </script>
}
