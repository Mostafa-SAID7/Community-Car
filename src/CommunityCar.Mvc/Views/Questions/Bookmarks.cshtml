@model CommunityCar.Domain.Base.PagedResult<CommunityCar.Domain.DTOs.Community.QuestionDto>
@{
    ViewData["Title"] = "Bookmarks";
}

@section RightSidebar {
    <partial name="Sidebars/_RightSidebar_QA" />
}

@{
    ViewData["HeaderTitle"] = "Bookmarks";
    ViewData["HeaderDescription"] = "Questions you've saved for later";
    ViewData["HeaderIcon"] = "fas fa-bookmark";
    ViewData["HeaderActions"] = Html.Raw($@"
        <div class='d-flex gap-2 flex-wrap'>
            <a href='{Url.Action("Create")}' class='btn btn-light'>
                <i class='fas fa-plus-circle me-2'></i>Ask Question
            </a>
            <a href='{Url.Action("Index")}' class='btn btn-outline-light'>
                <i class='fas fa-arrow-left me-2'></i>All Questions
            </a>
        </div>");
}

<partial name="_InnerPageHeader" />

@Html.AntiForgeryToken()

<!-- Alert Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-4 shadow-sm" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Questions List -->
@if (!Model.Items.Any())
{
    <div class="empty-state">
        <i class="fas fa-bookmark"></i>
        <h3 class="mt-3 mb-2 fw-bold">No Bookmarks Yet</h3>
        <p class="text-muted mb-4 fs-5">You haven't bookmarked any questions. Save interesting questions to find them here later!</p>
        <a asp-action="Index" class="btn btn-gradient btn-lg">
            <i class="fas fa-search me-2"></i>Browse Questions
        </a>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var question in Model.Items)
        {
            <div class="col-12">
                <div class="card question-card">
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-auto">
                                <div class="stats-box">
                                    <div class="stat-item">
                                        <span class="stat-value">@question.VoteCount</span>
                                        <span class="stat-label">Votes</span>
                                    </div>
                                    <hr class="my-2">
                                    <div class="stat-item">
                                        <span class="stat-value @(question.IsResolved ? "resolved" : "")">@question.AnswerCount</span>
                                        <span class="stat-label">Answers</span>
                                    </div>
                                    <hr class="my-2">
                                    <div class="stat-item">
                                        <span class="stat-value">@question.ViewCount</span>
                                        <span class="stat-label">Views</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0 flex-grow-1">
                                        <a asp-action="Details" asp-route-slug="@question.Slug" class="text-decoration-none text-dark fw-bold">
                                            @question.Title
                                        </a>
                                    </h5>
                                    @if (question.IsResolved)
                                    {
                                        <span class="badge bg-success rounded-pill px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i>Resolved
                                        </span>
                                    }
                                </div>
                                
                                <p class="card-text text-muted mb-3">
                                    @(question.Content.Length > 250 ? question.Content.Substring(0, 250) + "..." : question.Content)
                                </p>

                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                    <div class="author-info d-flex align-items-center">
                                        <i class="fas fa-user-circle me-2 text-primary"></i>
                                        <small class="text-muted">Asked by <strong>@question.AuthorName</strong> â€¢ @question.CreatedAt.ToTimeAgo()</small>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-slug="@question.Slug" class="btn btn-sm btn-gradient">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="removeBookmark('@question.Id')">
                                            <i class="fas fa-bookmark me-1"></i>Unsave
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Bookmarks pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Bookmarks" asp-route-page="@(Model.PageNumber - 1)">
                        <i class="fas fa-chevron-left me-1"></i>Previous
                    </a>
                </li>
                
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Bookmarks" asp-route-page="@i">@i</a>
                    </li>
                }
                
                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Bookmarks" asp-route-page="@(Model.PageNumber + 1)">
                        Next<i class="fas fa-chevron-right ms-1"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function removeBookmark(id) {
            $.post('/Questions/Bookmark/' + id, {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    Swal.fire('Error', response.message || 'Failed to update bookmark', 'error');
                }
            });
        }
    </script>
}
