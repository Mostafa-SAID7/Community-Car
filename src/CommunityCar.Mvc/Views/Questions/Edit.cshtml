@using CommunityCar.Domain.DTOs.Community
@model CommunityCar.Mvc.ViewModels.Qa.EditQuestionViewModel
@{
    ViewData["Title"] = "Edit Question";
}

@section Styles {
    }

@{
    ViewData["HeaderTitle"] = "Edit Question";
    ViewData["HeaderDescription"] = "Update your question details";
    ViewData["HeaderIcon"] = "fas fa-edit";
}

<partial name="_InnerPageHeader" />

<!-- Edit Form -->
<div class="card edit-card">
    <div class="card-body p-4 p-md-5">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-4"></div>
            
            <div class="mb-4">
                <label asp-for="Title" class="form-label fw-bold">
                    <i class="fas fa-heading me-2 text-primary"></i>Question Title
                </label>
                <input asp-for="Title" class="form-control form-control-lg" placeholder="What is your question? Be specific and clear." />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CategoryId" class="form-label fw-bold">
                    <i class="fas fa-folder me-2 text-primary"></i>Category
                </label>
                @if (Model?.Categories != null && Model.Categories.Any())
                {
                    <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="Model.Categories">
                        <option value="">-- Select a Category --</option>
                    </select>
                }
                else
                {
                    <select name="CategoryId" class="form-select form-select-lg">
                        <option value="">-- Select a Category --</option>
                    </select>
                }
                <span asp-validation-for="CategoryId" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Content" class="form-label fw-bold">
                    <i class="fas fa-align-left me-2 text-primary"></i>Question Details
                </label>
                <textarea asp-for="Content" class="form-control" rows="10" placeholder="Provide more context and details about your question..."></textarea>
                <span asp-validation-for="Content" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Tags" class="form-label fw-bold">
                    <i class="fas fa-tags me-2 text-primary"></i>Tags
                </label>
                <input asp-for="Tags" class="form-control" placeholder="e.g. engine, maintenance, bmw, oil-change">
                <span asp-validation-for="Tags" class="text-danger small"></span>
                <div class="form-text small text-muted mt-2">
                    <i class="fas fa-info-circle me-1"></i>
                    Separate tags with commas (up to 5 tags)
                </div>
            </div>

            <div class="alert alert-info rounded-4 mb-4">
                <h6 class="alert-heading mb-2">
                    <i class="fas fa-lightbulb me-2"></i>Editing Tips
                </h6>
                <ul class="mb-0 small">
                    <li>Make sure your title is clear and descriptive</li>
                    <li>Add any new information or clarifications</li>
                    <li>Update tags to better categorize your question</li>
                    <li>Fix any typos or formatting issues</li>
                </ul>
            </div>

            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light-custom btn-lg px-4">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-gradient btn-lg px-5">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        window.tagSuggestions = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TagSuggestions ?? new List<TagDto>()));
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Character counter for title
        const titleInput = document.querySelector('input[name="Title"]');
        if (titleInput) {
            titleInput.addEventListener('input', function() {
                const length = this.value.length;
                const color = length > 100 ? 'text-danger' : length > 50 ? 'text-warning' : 'text-muted';
                let counter = this.parentElement.querySelector('.char-counter');
                if (!counter) {
                    counter = document.createElement('small');
                    counter.className = 'char-counter d-block mt-1';
                    this.parentElement.appendChild(counter);
                }
                counter.className = `char-counter d-block mt-1 ${color}`;
                counter.textContent = `${length} characters`;
            });
        }
    </script>
}
