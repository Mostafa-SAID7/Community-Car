@using CommunityCar.Domain.DTOs.Community
@model CommunityCar.Web.ViewModels.Community.Qa.CreateQuestionViewModel
@{
    ViewData["Title"] = "Ask a Question";
}

<link rel="stylesheet" href="~/css/pages/qa.css" />

<div class="container" style="max-width: 900px; margin: 40px auto;">
    <div class="card qa-create-card">
        <div class="card-header">
            <h1 class="card-title">Ask a Question</h1>
            <p class="text-white-50 mb-0">Get help from the community</p>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="What is your question? Be specific." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                    <select asp-for="CategoryId" class="form-select form-select-lg" required asp-items="@(new SelectList(Model.Categories ?? Enumerable.Empty<CategoryDto>(), "Id", "Name"))">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger smallest"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Content" class="form-label fw-bold">Details</label>
                    <textarea asp-for="Content" class="form-control" rows="10" placeholder="Provide more context and details..."></textarea>
                    <span asp-validation-for="Content" class="text-danger smallest"></span>
                </div>
                <div class="mb-4">
                    <label class="form-label fw-bold small text-secondary">Tags</label>
                    <input type="text" name="Tags" class="form-control" data-tag-input="true" data-max-tags="5" value="@Model.Tags" placeholder="e.g. battery, maintenance, car">
                    <div class="form-text smallest text-muted mt-1">Press Enter or comma to add a tag. Max 5 tags.</div>
                </div>
                <div class="d-flex justify-content-end gap-2 pt-3">
                    <a asp-action="Index" class="btn btn-light px-4 fw-600">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4 fw-700 shadow-sm">Post Your Question</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.tagSuggestions = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TagSuggestions ?? new List<TagDto>()));
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}