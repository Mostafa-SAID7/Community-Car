@model CommunityCar.Domain.DTOs.Community.AnswerDto
@{
    var currentUserId = ViewBag.CurrentUserId as Guid?;
    var isQuestionAuthor = ViewBag.IsQuestionAuthor as bool? ?? false;
    var questionId = ViewBag.QuestionId as Guid?;
}

<div class="card answer-card @(Model.IsAccepted ? "accepted-answer border-success" : "") mb-4" data-answer-id="@Model.Id">
    <div class="card-body p-4">
        <div class="row">
            <div class="col-auto">
                <div class="vote-section d-flex flex-column align-items-center">
                    <button class="vote-btn upvote @(Model.CurrentUserVote == 1 ? "active" : "")" 
                            data-type="answer" data-id="@Model.Id" data-vote="up">
                        <i class="fas fa-arrow-up"></i>
                    </button>
                    <span class="vote-count fw-bold my-2">@Model.VoteCount</span>
                    <button class="vote-btn downvote @(Model.CurrentUserVote == -1 ? "active" : "")" 
                            data-type="answer" data-id="@Model.Id" data-vote="down">
                        <i class="fas fa-arrow-down"></i>
                    </button>
                    
                    @if (isQuestionAuthor && !Model.IsAccepted)
                    {
                        <button class="btn btn-outline-success rounded-circle mt-3 p-0 d-flex align-items-center justify-content-center" 
                                style="width: 40px; height: 40px;"
                                onclick="acceptAnswer('@questionId', '@Model.Id')" 
                                title="Accept this answer">
                            <i class="fas fa-check"></i>
                        </button>
                    }
                    else if (Model.IsAccepted)
                    {
                        <div class="text-success mt-3" title="Accepted Answer">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    }
                </div>
            </div>
            <div class="col">
                @if (Model.IsAccepted)
                {
                    <div class="accepted-badge mb-3 bg-success text-white px-3 py-1 rounded-pill d-inline-block small">
                        <i class="fas fa-check-circle me-1"></i>Accepted Answer
                    </div>
                }
                
                <div class="answer-content mb-4 content-readable">
                    @Html.Raw(Model.Content.Replace("\n", "<br/>"))
                </div>

                <div class="d-flex justify-content-between align-items-center pt-3 border-top mt-4">
                    <div class="author-info d-flex align-items-center">
                        <img src="@(Model.AuthorProfilePicture ?? "/images/default-avatar.png")" 
                             class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;" />
                        <div>
                            <strong class="d-block">@Model.AuthorName</strong>
                            <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</small>
                        </div>
                    </div>
                    
                    <div class="answer-actions">
                        <button class="btn btn-sm btn-link text-muted text-decoration-none me-2" onclick="toggleCommentForm('@Model.Id')">
                            <i class="fas fa-comment me-1"></i>Comment
                        </button>
                        @if (currentUserId.HasValue && Model.AuthorId == currentUserId.Value)
                        {
                            <a asp-controller="Answers" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <button class="btn btn-sm btn-outline-danger rounded-pill px-3" onclick="deleteAnswer('@Model.Id', '@questionId')">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        }
                    </div>
                </div>

                <!-- Comments Section -->
                <div class="comments-section mt-4 bg-light rounded-3 p-3">
                    <div id="comments-list-@Model.Id">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            <partial name="_CommentList" model="Model.Comments" />
                        }
                    </div>

                    <!-- Add Comment Form (Hidden by default) -->
                    <div id="comment-form-@Model.Id" class="mt-3" style="display: none;">
                        <div class="d-flex gap-2">
                            <textarea class="form-control form-control-sm" rows="2" placeholder="Write a comment..."></textarea>
                            <button class="btn btn-primary btn-sm align-self-end" onclick="submitComment('@Model.Id')">Post</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
