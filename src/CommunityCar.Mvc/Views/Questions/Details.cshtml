@model CommunityCar.Domain.DTOs.Community.QuestionDto
@{
    ViewData["Title"] = Model.Title;
    var answers = ViewBag.Answers as IEnumerable<CommunityCar.Domain.DTOs.Community.AnswerDto> ?? Enumerable.Empty<CommunityCar.Domain.DTOs.Community.AnswerDto>();
    var currentUserId = ViewBag.CurrentUserId as Guid?;
    var isAuthor = currentUserId.HasValue && Model.AuthorId == currentUserId.Value;
}

@section RightSidebar {
    <partial name="Sidebars/_RightSidebar_QA" />
}

@section Styles {
    }

@{
    ViewData["HeaderTitle"] = Model.Title;
    ViewData["HeaderIcon"] = "fas fa-question-circle";
    var resolvedBadge = Model.IsResolved ? "<span class='badge bg-success px-3 py-2'><i class='fas fa-check-circle me-1'></i> Resolved</span>" : "";
    var actionsHtml = "<div class='d-flex flex-wrap gap-2 align-items-center'>" +
                      "<span class='stats-badge'>" +
                      "<i class='fas fa-eye me-1'></i> " + Model.ViewCount + " views" +
                      "</span>" +
                      "<span class='stats-badge'>" +
                      "<i class='fas fa-comment me-1'></i> " + Model.AnswerCount + " answers" +
                      "</span>" +
                      "<span class='stats-badge'>" +
                      "<i class='fas fa-arrow-up me-1'></i> " + Model.VoteCount + " votes" +
                      "</span>" +
                      resolvedBadge +
                      "</div>";
    ViewData["HeaderActions"] = Html.Raw(actionsHtml);
}

<partial name="_InnerPageHeader" />

<!-- Question Card -->
<div class="card question-card" data-question-id="@Model.Id">
    <div class="card-body p-4">
        <div class="row">
            <div class="col-auto">
                <div class="vote-section">
                    <button class="vote-btn upvote" data-type="question" data-id="@Model.Id" data-vote="up">
                        <i class="fas fa-arrow-up"></i>
                    </button>
                    <span class="vote-count">@Model.VoteCount</span>
                    <button class="vote-btn downvote" data-type="question" data-id="@Model.Id" data-vote="down">
                        <i class="fas fa-arrow-down"></i>
                    </button>
                </div>
            </div>
            <div class="col">
                <div class="author-info mb-3">
                    <i class="fas fa-user-circle me-2 text-primary"></i>
                    <strong>@Model.AuthorName</strong>
                    <span class="text-muted ms-2">
                        • @Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                    </span>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <span class="text-muted">
                            • <i class="fas fa-edit"></i> Updated @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")
                        </span>
                    }
                </div>

                <div class="question-content mb-4" class="content-readable">
                    @Html.Raw(Model.Content.Replace("\n", "<br/>"))
                </div>

                @if (!string.IsNullOrEmpty(Model.Tags))
                {
                    <div class="mb-3">
                        @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                        {
                            <a asp-action="Index" asp-route-tag="@tag.Trim()" class="tag-badge">
                                <i class="fas fa-tag me-1"></i>@tag.Trim()
                            </a>
                        }
                    </div>
                }

                @if (isAuthor)
                {
                    <div class="mt-4 pt-3 border-top">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill px-4">
                            <i class="fas fa-edit me-2"></i>Edit Question
                        </a>
                        <button class="btn btn-outline-danger rounded-pill px-4" onclick="deleteQuestion('@Model.Id')">
                            <i class="fas fa-trash me-2"></i>Delete
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Answers Section -->
<div class="mb-4">
    <h3 class="mb-4 fw-bold">
        <i class="fas fa-comments me-2 text-primary"></i>
        @answers.Count() Answer@(answers.Count() != 1 ? "s" : "")
    </h3>

    @if (answers.Any())
    {
        foreach (var answer in answers.OrderByDescending(a => a.IsAccepted).ThenByDescending(a => a.VoteCount))
        {
            ViewBag.IsQuestionAuthor = isAuthor;
            ViewBag.QuestionId = Model.Id;
            <partial name="_AnswerItem" model="answer" />
        }
    }
    else
    {
        <div class="alert alert-info rounded-4 p-4">
            <div class="text-center">
                <i class="fas fa-info-circle fa-3x mb-3 text-info"></i>
                <h5>No answers yet</h5>
                <p class="mb-0">Be the first to help by posting an answer!</p>
            </div>
        </div>
    }
</div>

<!-- Add Answer Form -->
@if (User.Identity?.IsAuthenticated == true)
{
    <div class="card answer-form-card">
        <div class="card-header bg-transparent border-0 pt-4 px-4">
            <h4 class="mb-0 fw-bold">
                <i class="fas fa-pen me-2 text-primary"></i>Your Answer
            </h4>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Answers" asp-action="Create" method="post">
                <input type="hidden" name="QuestionId" value="@Model.Id" />
                <div class="mb-3">
                    <textarea name="Content" class="form-control" rows="8" 
                              class="form-control-rounded form-control-readable"
                              placeholder="Write your answer here...&#10;&#10;• Be clear and concise&#10;• Provide examples if possible&#10;• Explain your reasoning" 
                              required></textarea>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Please be respectful and constructive in your answer
                    </small>
                    <button type="submit" class="btn btn-gradient px-5">
                        <i class="fas fa-paper-plane me-2"></i>Post Answer
                    </button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning rounded-4 p-4">
        <div class="text-center">
            <i class="fas fa-lock fa-2x mb-3"></i>
            <h5>Login Required</h5>
            <p class="mb-3">Please login to post an answer and help the community</p>
            <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-gradient px-4">
                <i class="fas fa-sign-in-alt me-2"></i>Login Now
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            $('.vote-btn').click(function() {
                if (!@(User.Identity?.IsAuthenticated == true ? "true" : "false")) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Login Required',
                        text: 'Please login to vote',
                        confirmButtonColor: '#667eea'
                    });
                    return;
                }

                const type = $(this).data('type');
                const id = $(this).data('id');
                const isUpvote = $(this).data('vote') === 'up';
                const controller = type === 'question' ? 'Questions' : 'Answers';
                const url = CultureHelper.addCultureToUrl(`/${controller}/Vote/${id}`);
                
                $.post(url, 
                    { isUpvote: isUpvote },
                    function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message,
                                confirmButtonColor: '#ea6666ff'
                            });
                        }
                    }
                );
            });

            // SignalR Real-time Updates
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/questionHub")
                .withAutomaticReconnect()
                .build();

            connection.on("ReceiveAnswer", (answer) => {
                if (answer.questionId === '@Model.Id') {
                     toastr.info('New answer posted! Click to refresh.', 'Update', {
                        timeOut: 5000,
                        onclick: function() { location.reload(); }
                     });
                     
                     // Auto-reload if user is not typing
                     if (!$('textarea').is(':focus') && !$('textarea').val()) {
                         setTimeout(() => location.reload(), 3000);
                     }
                }
            });

            connection.on("QuestionScoreUpdated", ({ questionId, newScore }) => {
                if (questionId === '@Model.Id') {
                    const $count = $('.question-card .vote-count');
                    const currentScore = parseInt($count.text());
                    $count.text(newScore);
                    
                    if (newScore !== currentScore) {
                        $count.addClass('text-primary fw-bold scale-up'); // scale-up needs css or just use std classes
                        setTimeout(() => $count.removeClass('text-primary fw-bold scale-up'), 1000);
                    }
                }
            });

            connection.on("AnswerScoreUpdated", ({ answerId, newScore }) => {
                const $card = $(`.answer-card[data-answer-id="${answerId}"]`);
                if ($card.length) {
                    const $count = $card.find('.vote-count');
                    $count.text(newScore);
                    $count.addClass('text-primary fw-bold');
                    setTimeout(() => $count.removeClass('text-primary fw-bold'), 1000);
                }
            });
            
            connection.on("QuestionMarkedResolved", ({ questionId, isResolved }) => {
                 if (questionId === '@Model.Id') {
                     toastr.success(`Question marked as ${isResolved ? 'Resolved' : 'Unresolved'}!`);
                     setTimeout(() => location.reload(), 1500);
                 }
            });

            connection.start().catch(err => console.error("SignalR: ", err));
        });

        function acceptAnswer(questionId, answerId) {
            Swal.fire({
                title: 'Accept Answer?',
                text: 'Mark this answer as the solution to your question?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, accept it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    const url = CultureHelper.addCultureToUrl('/Questions/AcceptAnswer');
                    $.post(url, 
                        { questionId: questionId, answerId: answerId },
                        function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Answer Accepted!',
                                    text: 'This answer has been marked as the solution',
                                    confirmButtonColor: '#667eea'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                    confirmButtonColor: '#667eea'
                                });
                            }
                        }
                    );
                }
            });
        }

        function deleteQuestion(id) {
            Swal.fire({
                title: 'Delete Question?',
                text: 'This action cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    const url = CultureHelper.addCultureToUrl(`/Questions/Delete/${id}`);
                    $.post(url, 
                        { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                        function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Deleted!',
                                    text: 'Question has been deleted',
                                    confirmButtonColor: '#667eea'
                                }).then(() => {
                                    window.location.href = CultureHelper.addCultureToUrl('/Questions');
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                    confirmButtonColor: '#667eea'
                                });
                            }
                        }
                    );
                }
            });
        }

        function deleteAnswer(id, questionId) {
            Swal.fire({
                title: 'Delete Answer?',
                text: 'This action cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    const url = CultureHelper.addCultureToUrl(`/Answers/Delete/${id}`);
                    $.post(url, 
                        { 
                            questionId: questionId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() 
                        },
                        function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Deleted!',
                                    text: 'Answer has been deleted',
                                    confirmButtonColor: '#667eea'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                    confirmButtonColor: '#667eea'
                                });
                            }
                        }
                    );
                }
            });
        }

        function toggleCommentForm(answerId) {
            $(`#comment-form-${answerId}`).toggle();
            $(`#comment-form-${answerId} textarea`).focus();
        }

        function submitComment(answerId) {
            const content = $(`#comment-form-${answerId} textarea`).val();
            if (!content) return;

            const url = CultureHelper.addCultureToUrl('/Answers/AddComment');
            $.post(url, { answerId: answerId, content: content }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message,
                        confirmButtonColor: '#667eea'
                    });
                }
            });
        }
    </script>
}
