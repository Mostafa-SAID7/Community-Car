@model CommunityCar.Domain.DTOs.Community.QuestionDto
@{
    ViewData["Title"] = Model.Title;
    var answers = ViewBag.Answers as IEnumerable<CommunityCar.Domain.DTOs.Community.AnswerDto> ?? Enumerable.Empty<CommunityCar.Domain.DTOs.Community.AnswerDto>();
    var currentUserId = ViewBag.CurrentUserId as Guid?;
    var isAuthor = currentUserId.HasValue && Model.AuthorId == currentUserId.Value;
}

@section RightSidebar {
    <partial name="Sidebars/_RightSidebar_QA" />
}

@section Styles {
    <style>
        .question-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            padding: 30px;
            color: white;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        .question-card, .answer-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }
        .question-card:hover, .answer-card:hover {
            box-shadow: 0 6px 30px rgba(0,0,0,0.12);
        }
        .vote-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 12px;
            padding: 15px;
            text-align: center;
            min-width: 80px;
        }
        .vote-btn {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            border: 2px solid;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            transition: all 0.3s ease;
            font-size: 1.2rem;
        }
        .vote-btn:hover {
            transform: scale(1.1);
        }
        .vote-btn.upvote {
            border-color: #28a745;
            color: #28a745;
        }
        .vote-btn.upvote:hover {
            background: #28a745;
            color: white;
        }
        .vote-btn.downvote {
            border-color: #dc3545;
            color: #dc3545;
        }
        .vote-btn.downvote:hover {
            background: #dc3545;
            color: white;
        }
        .vote-count {
            font-size: 1.5rem;
            font-weight: 700;
            color: #495057;
            display: block;
            margin: 12px 0;
        }
        .tag-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.85rem;
            text-decoration: none;
            display: inline-block;
            margin: 4px;
            transition: all 0.3s ease;
        }
        .tag-badge:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }
        .accepted-answer {
            border: 3px solid #28a745 !important;
            background: linear-gradient(to right, rgba(40, 167, 69, 0.05), transparent);
        }
        .accepted-badge {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 8px 16px;
            border-radius: 10px;
            display: inline-block;
            margin-bottom: 15px;
            font-weight: 600;
        }
        .answer-form-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            background: linear-gradient(to bottom, white, #f8f9fa);
        }
        .btn-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 12px 32px;
            border-radius: 10px;
            transition: all 0.3s;
        }
        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }
        .author-info {
            background: #f8f9fa;
            padding: 12px 16px;
            border-radius: 10px;
            display: inline-block;
        }
        .stats-badge {
            background: white;
            padding: 8px 16px;
            border-radius: 10px;
            display: inline-block;
            margin-right: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
    </style>
}

<!-- Question Header -->
<div class="question-header">
    <div class="d-flex justify-content-between align-items-start">
        <div class="flex-grow-1">
            <h1 class="mb-3 fw-bold">
                @Model.Title
            </h1>
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <span class="stats-badge">
                    <i class="fas fa-eye me-1"></i> @Model.ViewCount views
                </span>
                <span class="stats-badge">
                    <i class="fas fa-comment me-1"></i> @Model.AnswerCount answers
                </span>
                <span class="stats-badge">
                    <i class="fas fa-arrow-up me-1"></i> @Model.VoteCount votes
                </span>
                @if (Model.IsResolved)
                {
                    <span class="badge bg-success px-3 py-2">
                        <i class="fas fa-check-circle me-1"></i> Resolved
                    </span>
                }
            </div>
        </div>
    </div>
</div>

<!-- Question Card -->
<div class="card question-card">
    <div class="card-body p-4">
        <div class="row">
            <div class="col-auto">
                <div class="vote-section">
                    <button class="vote-btn upvote" data-type="question" data-id="@Model.Id" data-vote="up">
                        <i class="fas fa-arrow-up"></i>
                    </button>
                    <span class="vote-count">@Model.VoteCount</span>
                    <button class="vote-btn downvote" data-type="question" data-id="@Model.Id" data-vote="down">
                        <i class="fas fa-arrow-down"></i>
                    </button>
                </div>
            </div>
            <div class="col">
                <div class="author-info mb-3">
                    <i class="fas fa-user-circle me-2 text-primary"></i>
                    <strong>@Model.AuthorName</strong>
                    <span class="text-muted ms-2">
                        • @Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                    </span>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <span class="text-muted">
                            • <i class="fas fa-edit"></i> Updated @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")
                        </span>
                    }
                </div>

                <div class="question-content mb-4" style="font-size: 1.05rem; line-height: 1.7;">
                    @Html.Raw(Model.Content.Replace("\n", "<br/>"))
                </div>

                @if (!string.IsNullOrEmpty(Model.Tags))
                {
                    <div class="mb-3">
                        @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                        {
                            <a asp-action="Index" asp-route-tag="@tag.Trim()" class="tag-badge">
                                <i class="fas fa-tag me-1"></i>@tag.Trim()
                            </a>
                        }
                    </div>
                }

                @if (isAuthor)
                {
                    <div class="mt-4 pt-3 border-top">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill px-4">
                            <i class="fas fa-edit me-2"></i>Edit Question
                        </a>
                        <button class="btn btn-outline-danger rounded-pill px-4" onclick="deleteQuestion('@Model.Id')">
                            <i class="fas fa-trash me-2"></i>Delete
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Answers Section -->
<div class="mb-4">
    <h3 class="mb-4 fw-bold">
        <i class="fas fa-comments me-2 text-primary"></i>
        @answers.Count() Answer@(answers.Count() != 1 ? "s" : "")
    </h3>

    @if (answers.Any())
    {
        foreach (var answer in answers.OrderByDescending(a => a.IsAccepted).ThenByDescending(a => a.VoteCount))
        {
            <div class="card answer-card @(answer.IsAccepted ? "accepted-answer" : "")">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-auto">
                            <div class="vote-section">
                                <button class="vote-btn upvote" data-type="answer" data-id="@answer.Id" data-vote="up">
                                    <i class="fas fa-arrow-up"></i>
                                </button>
                                <span class="vote-count">@answer.VoteCount</span>
                                <button class="vote-btn downvote" data-type="answer" data-id="@answer.Id" data-vote="down">
                                    <i class="fas fa-arrow-down"></i>
                                </button>
                                @if (isAuthor && !Model.IsResolved)
                                {
                                    <button class="btn btn-success rounded-circle mt-3" style="width: 45px; height: 45px;" 
                                            onclick="acceptAnswer('@Model.Id', '@answer.Id')" 
                                            title="Accept this answer">
                                        <i class="fas fa-check"></i>
                                    </button>
                                }
                            </div>
                        </div>
                        <div class="col">
                            @if (answer.IsAccepted)
                            {
                                <div class="accepted-badge">
                                    <i class="fas fa-check-circle me-2"></i>Accepted Answer
                                </div>
                            }
                            
                            <div class="answer-content mb-3" style="font-size: 1.05rem; line-height: 1.7;">
                                @Html.Raw(answer.Content.Replace("\n", "<br/>"))
                            </div>

                            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                <div class="author-info">
                                    <i class="fas fa-user-circle me-2 text-primary"></i>
                                    <strong>@answer.AuthorName</strong>
                                    <span class="text-muted ms-2">
                                        • @answer.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                    </span>
                                </div>
                                @if (currentUserId.HasValue && answer.AuthorId == currentUserId.Value)
                                {
                                    <div>
                                        <button class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info rounded-4 p-4">
            <div class="text-center">
                <i class="fas fa-info-circle fa-3x mb-3 text-info"></i>
                <h5>No answers yet</h5>
                <p class="mb-0">Be the first to help by posting an answer!</p>
            </div>
        </div>
    }
</div>

<!-- Add Answer Form -->
@if (User.Identity?.IsAuthenticated == true)
{
    <div class="card answer-form-card">
        <div class="card-header bg-transparent border-0 pt-4 px-4">
            <h4 class="mb-0 fw-bold">
                <i class="fas fa-pen me-2 text-primary"></i>Your Answer
            </h4>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Answers" asp-action="Create" method="post">
                <input type="hidden" name="QuestionId" value="@Model.Id" />
                <div class="mb-3">
                    <textarea name="Content" class="form-control" rows="8" 
                              style="border-radius: 12px; border: 2px solid #e9ecef; font-size: 1.05rem;"
                              placeholder="Write your answer here...&#10;&#10;• Be clear and concise&#10;• Provide examples if possible&#10;• Explain your reasoning" 
                              required></textarea>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Please be respectful and constructive in your answer
                    </small>
                    <button type="submit" class="btn btn-gradient px-5">
                        <i class="fas fa-paper-plane me-2"></i>Post Answer
                    </button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning rounded-4 p-4">
        <div class="text-center">
            <i class="fas fa-lock fa-2x mb-3"></i>
            <h5>Login Required</h5>
            <p class="mb-3">Please login to post an answer and help the community</p>
            <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-gradient px-4">
                <i class="fas fa-sign-in-alt me-2"></i>Login Now
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            $('.vote-btn').click(function() {
                if (!@(User.Identity?.IsAuthenticated == true ? "true" : "false")) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Login Required',
                        text: 'Please login to vote',
                        confirmButtonColor: '#667eea'
                    });
                    return;
                }

                const type = $(this).data('type');
                const id = $(this).data('id');
                const isUpvote = $(this).data('vote') === 'up';
                
                $.post(`/${type === 'question' ? 'Questions' : 'Answers'}/Vote/${id}`, 
                    { isUpvote: isUpvote },
                    function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message,
                                confirmButtonColor: '#667eea'
                            });
                        }
                    }
                );
            });
        });

        function acceptAnswer(questionId, answerId) {
            Swal.fire({
                title: 'Accept Answer?',
                text: 'Mark this answer as the solution to your question?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, accept it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Questions/AcceptAnswer', 
                        { questionId: questionId, answerId: answerId },
                        function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Answer Accepted!',
                                    text: 'This answer has been marked as the solution',
                                    confirmButtonColor: '#667eea'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                    confirmButtonColor: '#667eea'
                                });
                            }
                        }
                    );
                }
            });
        }

        function deleteQuestion(id) {
            Swal.fire({
                title: 'Delete Question?',
                text: 'This action cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post(`/Questions/Delete/${id}`, 
                        { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                        function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Deleted!',
                                    text: 'Question has been deleted',
                                    confirmButtonColor: '#667eea'
                                }).then(() => {
                                    window.location.href = '/Questions';
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                    confirmButtonColor: '#667eea'
                                });
                            }
                        }
                    );
                }
            });
        }
    </script>
}
