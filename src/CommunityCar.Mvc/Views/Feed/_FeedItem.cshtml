@model CommunityCar.Mvc.ViewModels.Feed.FeedItemViewModel
@using CommunityCar.Mvc.ViewModels.Feed

<div class="card mb-3 feed-item" data-type="@Model.Type">
    <div class="card-body">
        <!-- Header -->
        <div class="d-flex align-items-start mb-3">
            <img src="@(Model.AuthorAvatar ?? "/images/default-avatar.png")" 
                 alt="@Model.AuthorName" 
                 class="rounded-circle me-3" 
                 style="width: 48px; height: 48px; object-fit: cover;" />
            <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="mb-0">@Model.AuthorName</h6>
                        <small class="text-muted">
                            <span class="badge bg-@Model.TypeColor me-1">
                                <i class="fas @Model.TypeIcon"></i> @Model.TypeName
                            </span>
                            @Model.TimeAgo
                            @if (!string.IsNullOrEmpty(Model.Category))
                            {
                                <span class="mx-1">â€¢</span>
                                <span class="badge bg-secondary">@Model.Category</span>
                            }
                        </small>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-link text-muted" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-bookmark me-2"></i>Save</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-share me-2"></i>Share</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-flag me-2"></i>Report</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="feed-content">
            <h5 class="card-title mb-2">
                <a href="@Model.ActionUrl" class="text-decoration-none text-dark">
                    @Model.Title
                </a>
            </h5>
            <p class="card-text text-muted">@Model.Content</p>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height: 400px; width: 100%; object-fit: cover;" />
            }

            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <div class="mb-2">
                    @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                    {
                        <span class="badge bg-light text-dark me-1">#@tag.Trim()</span>
                    }
                </div>
            }

            <!-- Type-specific info -->
            @if (Model.Type == FeedItemType.Question && Model.IsResolved.HasValue)
            {
                <div class="mb-2">
                    @if (Model.IsResolved.Value)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle"></i> Resolved
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-question-circle"></i> Open
                        </span>
                    }
                    @if (Model.AnswerCount.HasValue && Model.AnswerCount.Value > 0)
                    {
                        <span class="ms-2 text-muted">
                            <i class="fas fa-comments"></i> @Model.AnswerCount answers
                        </span>
                    }
                </div>
            }

            @if (Model.Type == FeedItemType.Event && Model.EventStartTime.HasValue)
            {
                <div class="alert alert-info mb-2 py-2">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <strong>@Model.EventStartTime.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</strong>
                    @if (!string.IsNullOrEmpty(Model.EventLocation))
                    {
                        <span class="ms-3">
                            <i class="fas fa-map-marker-alt me-1"></i>@Model.EventLocation
                        </span>
                    }
                </div>
            }

            @if (Model.Type == FeedItemType.Review && Model.Rating.HasValue)
            {
                <div class="mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas fa-star @(i <= Model.Rating.Value ? "text-warning" : "text-muted")"></i>
                    }
                    @if (Model.IsRecommended.HasValue && Model.IsRecommended.Value)
                    {
                        <span class="badge bg-success ms-2">
                            <i class="fas fa-thumbs-up"></i> Recommended
                        </span>
                    }
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
            <div class="d-flex gap-3">
                <span class="text-muted">
                    <i class="fas fa-eye me-1"></i> @Model.ViewCount
                </span>
                <span class="text-muted">
                    <i class="fas fa-heart me-1"></i> @Model.LikeCount
                </span>
                <span class="text-muted">
                    <i class="fas fa-comment me-1"></i> @Model.CommentCount
                </span>
            </div>
            <a href="@Model.ActionUrl" class="btn btn-sm btn-outline-primary">
                @Model.ActionText <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</div>
