@model CommunityCar.Mvc.ViewModels.Feed.FeedViewModel
@{
    ViewData["Title"] = "Popular Content";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-fire text-danger"></i> Popular Content
                    </h2>
                    <p class="text-muted mb-0">Most liked and commented content</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Feed
                </a>
            </div>
        </div>
    </div>
    
    <!-- Use the same feed layout -->
    <partial name="Index" model="Model" />
</div>
