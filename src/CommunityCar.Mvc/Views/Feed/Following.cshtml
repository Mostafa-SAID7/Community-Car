@model CommunityCar.Mvc.ViewModels.Feed.FeedViewModel
@{
    ViewData["Title"] = "Following Feed";
}

@section RightSidebar {
    <partial name="Sidebars/_RightSidebar_Feed" />
}

@section Styles {
    <link rel="stylesheet" href="~/css/feed.css" />
}

@{
    ViewData["HeaderTitle"] = "Following";
    ViewData["HeaderDescription"] = "Content from people you follow";
    ViewData["HeaderIcon"] = "fas fa-user-friends";
}

<partial name="_InnerPageHeader" />

<!-- Filters -->
<partial name="_FeedFilters" model="Model.Filters" />

<!-- Feed Items -->
@if (Model.Items.Any())
{
    <div class="feed-items">
        @foreach (var item in Model.Items)
        {
            <partial name="_FeedItem" model="item" />
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Feed pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Following" 
                       asp-route-page="@(Model.CurrentPage - 1)">
                        <i class="fas fa-chevron-left"></i> Previous
                    </a>
                </li>

                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" 
                           asp-action="Following" 
                           asp-route-page="@i">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Following" 
                       asp-route-page="@(Model.CurrentPage + 1)">
                        Next <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-user-friends fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No content from people you follow</h5>
            <p class="text-muted">Start following people to see their content here.</p>
            <a asp-controller="Friends" asp-action="Suggestions" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Find People to Follow
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/feed.js"></script>
}
