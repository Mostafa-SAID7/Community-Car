@model CommunityCar.Mvc.Controllers.Support.ContactFormModel
@{
    ViewData["Title"] = "Contact Support";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <i class="fas fa-envelope fa-4x text-primary mb-3"></i>
                        <h1 class="display-5 fw-bold">Contact Support</h1>
                        <p class="text-muted">Fill out the form below and we'll get back to you as soon as possible</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Contact" method="post">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Your full name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="your.email@example.com" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Subject" class="form-label fw-bold">Subject</label>
                            <select asp-for="Subject" class="form-select form-select-lg" required>
                                <option value="">Select a topic...</option>
                                <option value="Technical Issue">Technical Issue</option>
                                <option value="Account Problem">Account Problem</option>
                                <option value="Feature Request">Feature Request</option>
                                <option value="Bug Report">Bug Report</option>
                                <option value="General Inquiry">General Inquiry</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Message" class="form-label fw-bold">Message</label>
                            <textarea asp-for="Message" class="form-control" rows="6" placeholder="Please describe your issue or question in detail..." required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                            <small class="text-muted">Please provide as much detail as possible to help us assist you better.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Send Message
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Support Center
                            </a>
                        </div>
                    </form>

                    <hr class="my-5">

                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                            <h6 class="fw-bold">Response Time</h6>
                            <p class="text-muted small mb-0">Within 24 hours</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-calendar fa-2x text-success mb-2"></i>
                            <h6 class="fw-bold">Availability</h6>
                            <p class="text-muted small mb-0">Mon-Fri, 9 AM - 6 PM EST</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-phone fa-2x text-warning mb-2"></i>
                            <h6 class="fw-bold">Phone Support</h6>
                            <p class="text-muted small mb-0">+1 (555) 123-4567</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
