@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.ContentReportsViewModel
@{
    ViewData["Title"] = "Content Reports";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-file-chart-line me-2"></i>Content Reports</h2>
            <p class="text-muted mb-0">Comprehensive content performance and activity reports</p>
        </div>
        <div class="btn-group">
            <a asp-action="ExportCsv" asp-route-startDate="@Model.StartDate" asp-route-endDate="@Model.EndDate" class="btn btn-sm bte.ToString("yyyy-MM-dd")" class="btn btn-success">
                <i class="fas fa-file-csv me-2"></i>Export CSV
            </a>
            <a asp-action="ExportJson" asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")" class="btn btn-info">
                <i class="fas fa-file-code me-2"></i>Export JSON
            </a>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Generate Report
                    </button>
                </div>
            </form>
            <div class="mt-3">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Report Period: <strong>@Model.StartDate.ToString("MMM dd, yyyy")</strong> to <strong>@Model.EndDate.ToString("MMM dd, yyyy")</strong>
                    (@((Model.EndDate - Model.StartDate).Days + 1) days)
                </small>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-2">
                        <i class="fas fa-file-alt fa-3x opacity-25"></i>
                    </div>
                    <h3 class="mb-1">@Model.TotalContent</h3>
                    <p class="text-muted mb-0">Total Content</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-info mb-2">
                        <i class="fas fa-eye fa-3x opacity-25"></i>
                    </div>
                    <h3 class="mb-1">@Model.TotalViews.ToString("N0")</h3>
                    <p class="text-muted mb-0">Total Views</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="fas fa-comments fa-3x opacity-25"></i>
                    </div>
                    <h3 class="mb-1">@Model.TotalEngagement.ToString("N0")</h3>
                    <p class="text-muted mb-0">Total Engagement</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-2">
                        <i class="fas fa-chart-line fa-3x opacity-25"></i>
                    </div>
                    <h3 class="mb-1">@Model.AverageViewsPerContent.ToString("F1")</h3>
                    <p class="text-muted mb-0">Avg Views/Content</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Breakdown -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-layer-group me-2"></i>Content by Type</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-question-circle text-primary me-2"></i>
                                    <span>Questions</span>
                                </div>
                                <strong class="text-primary">@Model.QuestionCount</strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-edit text-success me-2"></i>
                                    <span>Posts</span>
                                </div>
                                <strong class="text-success">@Model.PostCount</strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-calendar text-info me-2"></i>
                                    <span>Events</span>
                                </div>
                                <strong class="text-info">@Model.EventCount</strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-newspaper text-warning me-2"></i>
                                    <span>News</span>
                                </div>
                                <strong class="text-warning">@Model.NewsCount</strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-book text-secondary me-2"></i>
                                    <span>Guides</span>
                                </div>
                                <strong class="text-secondary">@Model.GuideCount</strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-star text-danger me-2"></i>
                                    <span>Reviews</span>
                                </div>
                                <strong class="text-danger">@Model.ReviewCount</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Quality Metrics</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Resolved Questions</span>
                            <strong class="text-success">@Model.ResolvedQuestions</strong>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 style="width: @((Model.QuestionCount > 0 ? (Model.ResolvedQuestions * 100.0 / Model.QuestionCount) : 0).ToString("F1"))%"></div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Unresolved Questions</span>
                            <strong class="text-warning">@Model.UnresolvedQuestions</strong>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" 
                                 style="width: @((Model.QuestionCount > 0 ? (Model.UnresolvedQuestions * 100.0 / Model.QuestionCount) : 0).ToString("F1"))%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Average Review Rating</span>
                            <strong class="text-warning">
                                @Model.AverageReviewRating.ToString("F1")
                                <i class="fas fa-star"></i>
                            </strong>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" 
                                 style="width: @((Model.AverageReviewRating / 5.0 * 100).ToString("F1"))%"></div>
                        </div>
                    </div>

                    <div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Avg Engagement per Content</span>
                            <strong class="text-info">@Model.AverageEngagementPerContent.ToString("F1")</strong>
                        </div>
                        <small class="text-muted">Comments, answers, and interactions</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Authors -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-trophy text-warning me-2"></i>Top Authors</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopAuthors.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Author</th>
                                        <th class="text-center">Content</th>
                                        <th class="text-center">Views</th>
                                        <th class="text-center">Engagement</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.TopAuthors.Count; i++)
                                    {
                                        var author = Model.TopAuthors[i];
                                        <tr>
                                            <td>
                                                @if (i == 0)
                                                {
                                                    <i class="fas fa-medal text-warning"></i>
                                                }
                                                else if (i == 1)
                                                {
                                                    <i class="fas fa-medal text-secondary"></i>
                                                }
                                                else if (i == 2)
                                                {
                                                    <i class="fas fa-medal" style="color: #cd7f32;"></i>
                                                }
                                                else
                                                {
                                                    <span>@(i + 1)</span>
                                                }
                                            </td>
                                            <td><strong>@author.AuthorName</strong></td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@author.ContentCount</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@author.TotalViews.ToString("N0")</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-success">@author.TotalEngagement.ToString("N0")</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p class="mb-0">No authors found in this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Popular Tags</h5>
                </div>
                <div class="card-body">
                    @if (Model.PopularTags.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tag in Model.PopularTags)
                            {
                                <span class="badge bg-secondary" style="font-size: @(12 + (tag.UsageCount / (Model.PopularTags.Max(t => t.UsageCount) / 8.0)))px;">
                                    @tag.TagName
                                    <span class="badge bg-light text-dark ms-1">@tag.UsageCount</span>
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p class="mb-0">No tags found in this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Daily Breakdown Chart -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Daily Content Breakdown</h5>
        </div>
        <div class="card-body">
            <canvas id="dailyBreakdownChart" height="80"></canvas>
        </div>
    </div>
</div>

@@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Daily Breakdown Chart
        const dailyData = @Html.Raw(Json.Serialize(Model.DailyBreakdown));
        
        const labels = dailyData.map(d => {
            const date = new Date(d.date);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        });

        const ctx = document.getElementById('dailyBreakdownChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Questions',
                        data: dailyData.map(d => d.questionCount),
                        backgroundColor: 'rgba(13, 110, 253, 0.7)',
                        borderColor: '#0d6efd',
                        borderWidth: 1
                    },
                    {
                        label: 'Posts',
                        data: dailyData.map(d => d.postCount),
                        backgroundColor: 'rgba(25, 135, 84, 0.7)',
                        borderColor: '#198754',
                        borderWidth: 1
                    },
                    {
                        label: 'Events',
                        data: dailyData.map(d => d.eventCount),
                        backgroundColor: 'rgba(13, 202, 240, 0.7)',
                        borderColor: '#0dcaf0',
                        borderWidth: 1
                    },
                    {
                        label: 'News',
                        data: dailyData.map(d => d.newsCount),
                        backgroundColor: 'rgba(255, 193, 7, 0.7)',
                        borderColor: '#ffc107',
                        borderWidth: 1
                    },
                    {
                        label: 'Guides',
                        data: dailyData.map(d => d.guideCount),
                        backgroundColor: 'rgba(108, 117, 125, 0.7)',
                        borderColor: '#6c757d',
                        borderWidth: 1
                    },
                    {
                        label: 'Reviews',
                        data: dailyData.map(d => d.reviewCount),
                        backgroundColor: 'rgba(220, 53, 69, 0.7)',
                        borderColor: '#dc3545',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false
                    }
                },
                scales: {
                    x: {
                        stacked: true
                    },
                    y: {
                        stacked: true,
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
    </script>
}
