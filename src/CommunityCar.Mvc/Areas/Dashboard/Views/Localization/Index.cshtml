@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.LocalizationIndexViewModel
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-language me-2"></i>
                    @Localizer["PageTitle"]
                </h2>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> @Localizer["AddTranslation"]
                    </a>
                    <a asp-action="BulkImport" class="btn btn-info">
                        <i class="fas fa-file-import me-1"></i> @Localizer["BulkImport"]
                    </a>
                    <a asp-action="Export" class="btn btn-success">
                        <i class="fas fa-file-export me-1"></i> @Localizer["Export"]
                    </a>
                    <form asp-action="SyncToFiles" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-sync me-1"></i> @Localizer["SyncToFiles"]
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["TotalKeys"]</h5>
                    <h2>@Model.Statistics.TotalKeys</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["TotalTranslations"]</h5>
                    <h2>@Model.Statistics.TotalTranslations</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["Missing"]</h5>
                    <h2>@Model.Statistics.MissingTranslations</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["Completion"]</h5>
                    <h2>@Model.Statistics.CompletionPercentage%</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">@Localizer["Key"]</label>
                        <input type="text" name="key" class="form-control" value="@Model.Filter.Key" placeholder="Search by key..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select">
                            <option value="">@Localizer["AllCategories"]</option>
                            @foreach (var cat in Model.AvailableCategories)
                            {
                                <option value="@cat" selected="@(Model.Filter.Category == cat)">@cat</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Culture</label>
                        <select name="cultureCode" class="form-select">
                            <option value="">@Localizer["AllCultures"]</option>
                            @foreach (var culture in Model.AvailableCultures)
                            {
                                <option value="@culture" selected="@(Model.Filter.CultureCode == culture)">@culture</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select name="isActive" class="form-select">
                            <option value="">All</option>
                            <option value="true" selected="@(Model.Filter.IsActive == true)">@Localizer["Active"]</option>
                            <option value="false" selected="@(Model.Filter.IsActive == false)">@Localizer["Inactive"]</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="searchTerm" class="form-control" value="@Model.Filter.SearchTerm" placeholder="Search..." />
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i> @Localizer["Filter"]
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i> @Localizer["Clear"]
                        </a>
                        <a asp-action="Statistics" class="btn btn-info">
                            <i class="fas fa-chart-bar me-1"></i> @Localizer["Statistics"]
                        </a>
                        <a asp-action="MissingTranslations" class="btn btn-warning">
                            <i class="fas fa-exclamation-triangle me-1"></i> @Localizer["MissingTranslations"]
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Resources Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Key"]</th>
                            <th>@Localizer["Category"]</th>
                            <th>@Localizer["Culture"]</th>
                            <th>@Localizer["Value"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["LastModified"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Resources.Any())
                        {
                            @foreach (var resource in Model.Resources)
                            {
                                <tr>
                                    <td><code>@resource.Key</code></td>
                                    <td><span class="badge bg-secondary">@resource.Category</span></td>
                                    <td><span class="badge bg-primary">@resource.CultureCode</span></td>
                                    <td>
                                        <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                            @resource.Value
                                        </div>
                                    </td>
                                    <td>
                                        @if (resource.IsActive)
                                        {
                                            <span class="badge bg-success">@Localizer["Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@Localizer["Inactive"]</span>
                                        }
                                    </td>
                                    <td>
                                        @if (resource.LastModifiedAt.HasValue)
                                        {
                                            <small>@resource.LastModifiedAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">@Localizer["Never"]</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@resource.Id" class="btn btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@resource.Id" class="btn btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@resource.Id" method="post" class="d-inline" 
                                                  onsubmit="return confirm('@Localizer["ConfirmDelete"]');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>@Localizer["NoResourcesFound"]</p>
                                    <a asp-action="Create" class="btn btn-primary">@Localizer["AddFirstTranslation"]</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.Pagination.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(!Model.Pagination.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.Pagination.CurrentPage - 1)"
                               asp-route-key="@Model.Filter.Key"
                               asp-route-category="@Model.Filter.Category"
                               asp-route-cultureCode="@Model.Filter.CultureCode"
                               asp-route-searchTerm="@Model.Filter.SearchTerm"
                               asp-route-isActive="@Model.Filter.IsActive">
                                @Localizer["Previous"]
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@i"
                                   asp-route-key="@Model.Filter.Key"
                                   asp-route-category="@Model.Filter.Category"
                                   asp-route-cultureCode="@Model.Filter.CultureCode"
                                   asp-route-searchTerm="@Model.Filter.SearchTerm"
                                   asp-route-isActive="@Model.Filter.IsActive">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(!Model.Pagination.HasNextPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.Pagination.CurrentPage + 1)"
                               asp-route-key="@Model.Filter.Key"
                               asp-route-category="@Model.Filter.Category"
                               asp-route-cultureCode="@Model.Filter.CultureCode"
                               asp-route-searchTerm="@Model.Filter.SearchTerm"
                               asp-route-isActive="@Model.Filter.IsActive">
                                @Localizer["Next"]
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
