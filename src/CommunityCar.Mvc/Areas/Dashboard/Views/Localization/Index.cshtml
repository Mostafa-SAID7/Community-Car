@{
    var currentPart = ViewBag.CurrentPart as string ?? "Main";
    ViewData["Title"] = $"Localization Management - {currentPart}";
}

<div class="container-fluid py-4">
    <partial name="_LocalizationNav" />
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Localization Manager</h1>
            <p class="text-muted small">Manage translations, find missing keys, and sync resource files for the <strong>@currentPart</strong> area.</p>
        </div>
        <div>
            <button class="btn btn-primary btn-sm shadow-sm">
                <i class="fas fa-sync-alt me-2"></i>Scan Resources
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 border-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 small">Total Keys</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">142</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-key fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 border-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1 small">Translated (AR)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">92%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 border-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1 small">Missing Keys</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-white py-3 border-0">
            <h6 class="m-0 font-weight-bold text-primary">Translation Status: @currentPart</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 px-4">Key Name</th>
                            <th class="border-0">Source (EN)</th>
                            <th class="border-0">Translation (AR)</th>
                            <th class="border-0 text-end px-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="px-4 font-monospace small">WelcomeMessage</td>
                            <td>Welcome to Community Car</td>
                            <td>أهلاً بك في كوميونيتي كار</td>
                            <td class="text-end px-4">
                                <button class="btn btn-outline-primary btn-sm rounded-pill px-3"><i class="fas fa-edit"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-4 font-monospace small text-danger font-weight-bold">LogoutConfirm</td>
                            <td>Are you sure you want to logout?</td>
                            <td class="text-muted italic small"><i class="fas fa-times me-1"></i> Missing</td>
                            <td class="text-end px-4">
                                <button class="btn btn-primary btn-sm rounded-pill px-3"><i class="fas fa-plus"></i> Translate</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
