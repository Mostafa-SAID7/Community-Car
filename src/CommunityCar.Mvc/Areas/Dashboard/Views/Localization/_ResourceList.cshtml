@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.LocalizationIndexViewModel

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Key</th>
                <th>Category</th>
                <th>Culture</th>
                <th>Value</th>
                <th>Status</th>
                <th>Last Modified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Resources.Any())
            {
                @foreach (var resource in Model.Resources)
                {
                    <tr>
                        <td><code>@resource.Key</code></td>
                        <td><span class="badge bg-secondary">@resource.Category</span></td>
                        <td><span class="badge bg-primary">@resource.CultureCode</span></td>
                        <td>
                            <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="@resource.Value">
                                @resource.Value
                            </div>
                        </td>
                        <td>
                            @if (resource.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            @if (resource.LastModifiedAt.HasValue)
                            {
                                <small>@resource.LastModifiedAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                            }
                            else
                            {
                                <small class="text-muted">Never</small>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@resource.Id" class="btn btn-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@resource.Id" class="btn btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@resource.Id" method="post" class="d-inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this resource?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>No localization resources found.</p>
                        <a asp-action="Create" class="btn btn-primary">Add First Translation</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.Pagination.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.Pagination.HasPreviousPage ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.Pagination.CurrentPage - 1))">Previous</a>
            </li>

            @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                </li>
            }

            <li class="page-item @(!Model.Pagination.HasNextPage ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.Pagination.CurrentPage + 1))">Next</a>
            </li>
        </ul>
    </nav>
}
