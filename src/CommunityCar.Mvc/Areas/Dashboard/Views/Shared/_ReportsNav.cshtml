@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var isUsers = currentController?.Equals("UserReports", StringComparison.OrdinalIgnoreCase) == true;
    var isContent = currentController?.Equals("ContentReports", StringComparison.OrdinalIgnoreCase) == true;
}

<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link @(isUsers ? "active fw-bold border-bottom-0" : "text-secondary")" asp-area="Dashboard" asp-controller="UserReports" asp-action="Index">
            <i class="fas fa-users me-2"></i>Users
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(isContent ? "active fw-bold border-bottom-0" : "text-secondary")" asp-area="Dashboard" asp-controller="ContentReports" asp-action="Index">
            <i class="fas fa-layer-group me-2"></i>Content
        </a>
    </li>
</ul>
