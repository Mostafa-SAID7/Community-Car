@{
    var currentPart = ViewBag.CurrentPart as string ?? "Main";
    string GetActiveClass(string part) => currentPart.Equals(part, StringComparison.OrdinalIgnoreCase) ? "active fw-bold border-bottom-0" : "text-secondary";
}

<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link @GetActiveClass("Main")" asp-area="Dashboard" asp-controller="Localization" asp-action="Index" asp-route-part="Main">
            <i class="fas fa-home me-2"></i>Main Site
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @GetActiveClass("Dashboard")" asp-area="Dashboard" asp-controller="Localization" asp-action="Index" asp-route-part="Dashboard">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @GetActiveClass("Identity")" asp-area="Dashboard" asp-controller="Localization" asp-action="Index" asp-route-part="Identity">
            <i class="fas fa-user-lock me-2"></i>Identity
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @GetActiveClass("Communication")" asp-area="Dashboard" asp-controller="Localization" asp-action="Index" asp-route-part="Communication">
            <i class="fas fa-comments me-2"></i>Communication
        </a>
    </li>
</ul>
