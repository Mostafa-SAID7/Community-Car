@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="dashboard-sidebar">
    <!-- Overview -->
    <a asp-area="Dashboard" asp-controller="Dashboard" asp-action="Index" class="dashboard-sidebar-item @(ViewContext.RouteData.Values["area"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
        <i class="fas fa-gauge-high"></i>
        <span>@Localizer["Dashboard.Overview"]</span>
    </a>

    <!-- Analytics -->
    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Analytics" class="dashboard-sidebar-item @(ViewContext.RouteData.Values["area"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["controller"]?.ToString() == "Analytics" ? "active" : "")">
        <i class="fas fa-chart-line"></i>
        <span>@Localizer["Dashboard.Analytics"]</span>
    </a>

    <!-- Monitoring -->
    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring" class="dashboard-sidebar-item @(ViewContext.RouteData.Values["area"]?.ToString() == "Dashboard" && (ViewContext.RouteData.Values["controller"]?.ToString() == "Health" || ViewContext.RouteData.Values["controller"]?.ToString() == "System" || ViewContext.RouteData.Values["controller"]?.ToString() == "AuditLogs") ? "active" : "")">
        <i class="fas fa-heart-pulse"></i>
        <span>@Localizer["Dashboard.Monitoring"]</span>
    </a>

    <!-- Administration -->
    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration" class="dashboard-sidebar-item @(ViewContext.RouteData.Values["area"]?.ToString() == "Dashboard" && (ViewContext.RouteData.Values["controller"]?.ToString() == "UserManagement" || ViewContext.RouteData.Values["controller"]?.ToString() == "ContentManagement" || ViewContext.RouteData.Values["controller"]?.ToString() == "Security" || ViewContext.RouteData.Values["controller"]?.ToString() == "Localization") ? "active" : "")">
        <i class="fas fa-sliders"></i>
        <span>@Localizer["Dashboard.Administration"]</span>
    </a>

    <!-- Settings -->
    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Settings" class="dashboard-sidebar-item @(ViewContext.RouteData.Values["area"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
        <i class="fas fa-gear"></i>
        <span>@Localizer["Dashboard.Settings"]</span>
    </a>

    <!-- Back to Main Site -->
    <div class="mt-4 pt-4 border-top">
        <a asp-area="" asp-controller="Feed" asp-action="Index" class="dashboard-sidebar-item">
            <i class="fas fa-arrow-left"></i>
            <span>@Localizer["Dashboard.BackToMainSite"]</span>
        </a>
    </div>
</div>
