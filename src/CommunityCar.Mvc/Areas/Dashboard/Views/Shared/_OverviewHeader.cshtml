@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using CommunityCar.Web.Areas.Dashboard.Controllers
@inject IViewLocalizer Localizer
@inject IStringLocalizerFactory LocalizerFactory
@{
    var dashboardLocalizer = LocalizerFactory.Create(typeof(DashboardController));
    var title = ViewData["PageTitle"]?.ToString() ?? dashboardLocalizer["Dashboard"].Value;
    var subtitle = ViewData["PageSubtitle"]?.ToString() ?? dashboardLocalizer["Monitor your metrics"].Value;
}

<!-- Page Header -->
<div class="dashboard-page-header">
    <div class="dashboard-header-content">
        <div class="dashboard-header-text">
            <h1 class="dashboard-title">@title</h1>
            <p class="dashboard-subtitle">@subtitle</p>
        </div>
        <div class="dashboard-header-actions">
            <button class="dashboard-btn dashboard-btn-secondary" onclick="location.reload()">
                <i class="fas fa-sync-alt"></i>
                <span>@dashboardLocalizer["Refresh"]</span>
            </button>
        </div>
    </div>
</div>
