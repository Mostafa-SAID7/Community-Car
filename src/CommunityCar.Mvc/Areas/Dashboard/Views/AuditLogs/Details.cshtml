@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.AuditLogDetailsViewModel
@{
    ViewData["Title"] = "Audit Log Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "AuditLogs")">Audit Logs</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">
                <i class="bi bi-
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Main Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Log ID</label>
                            <p class="mb-0"><code>@Model.AuditLog.Id</code></p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Timestamp</label>
                            <p class="mb-0">
                                <i class="bi bi-clock me-1"></i>
                                @Model.AuditLog.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">User</label>
                            <p class="mb-0">
                                <i class="bi bi-person me-1"></i>
                                @(Model.AuditLog.UserName ?? "System")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">User ID</label>
                            <p class="mb-0">
                                @if (Model.AuditLog.UserId.HasValue)
                                {
                                    <code>@Model.AuditLog.UserId</code>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Entity Name</label>
                            <p class="mb-0">
                                <span class="badge bg-info">@Model.AuditLog.EntityName</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Entity ID</label>
                            <p class="mb-0"><code>@Model.AuditLog.EntityId</code></p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Action</label>
                            <p class="mb-0">
                                <span class="badge @GetActionBadgeClass(Model.AuditLog.Action)">
                                    <i class="@GetActionIcon(Model.AuditLog.Action) me-1"></i>
                                    @Model.AuditLog.Action
                                </span>
                            </p>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small">Description</label>
                            <p class="mb-0">@(Model.AuditLog.Description ?? "-")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Changes Details -->
            @if (Model.OldValuesDict != null || Model.NewValuesDict != null)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Changes</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 30%">Field</th>
                                        <th style="width: 35%">Old Value</th>
                                        <th style="width: 35%">New Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var allKeys = new HashSet<string>();
                                        if (Model.OldValuesDict != null) allKeys.UnionWith(Model.OldValuesDict.Keys);
                                        if (Model.NewValuesDict != null) allKeys.UnionWith(Model.NewValuesDict.Keys);
                                    }
                                    @foreach (var key in allKeys.OrderBy(k => k))
                                    {
                                        var oldValue = Model.OldValuesDict?.GetValueOrDefault(key, "-") ?? "-";
                                        var newValue = Model.NewValuesDict?.GetValueOrDefault(key, "-") ?? "-";
                                        var hasChanged = oldValue != newValue;

                                        <tr class="@(hasChanged ? "table-warning" : "")">
                                            <td><strong>@key</strong></td>
                                            <td>
                                                @if (oldValue != "-")
                                                {
                                                    <span class="text-danger">@oldValue</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (newValue != "-")
                                                {
                                                    <span class="text-success">@newValue</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else if (!string.IsNullOrWhiteSpace(Model.AuditLog.OldValues) || !string.IsNullOrWhiteSpace(Model.AuditLog.NewValues))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Raw Changes</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrWhiteSpace(Model.AuditLog.OldValues))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Old Values</label>
                                <pre class="bg-light p-3 rounded"><code>@Model.AuditLog.OldValues</code></pre>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.AuditLog.NewValues))
                        {
                            <div>
                                <label class="text-muted small">New Values</label>
                                <pre class="bg-light p-3 rounded"><code>@Model.AuditLog.NewValues</code></pre>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Affected Columns -->
            @if (Model.AffectedColumnsList != null && Model.AffectedColumnsList.Any())
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Affected Columns</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var column in Model.AffectedColumnsList)
                            {
                                <span class="badge bg-secondary">@column</span>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Actions -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                        <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                            <i class="bi bi-printer me-1"></i>Print
                        </button>
                    </div>
                </div>
            </div>

            <!-- Timeline Context -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Timeline</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <small class="text-muted">@Model.AuditLog.CreatedAt.ToString("HH:mm:ss")</small>
                                <p class="mb-0">@Model.AuditLog.Action performed</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetActionBadgeClass(string action)
    {
        return action?.ToLower() switch
        {
            "create" => "bg-success",
            "update" => "bg-warning",
            "delete" => "bg-danger",
            "login" => "bg-primary",
            "logout" => "bg-secondary",
            _ => "bg-info"
        };
    }

    string GetActionIcon(string action)
    {
        return action?.ToLower() switch
        {
            "create" => "bi bi-plus-circle",
            "update" => "bi bi-pencil-square",
            "delete" => "bi bi-trash",
            "login" => "bi bi-box-arrow-in-right",
            "logout" => "bi bi-box-arrow-right",
            _ => "bi bi-activity"
        };
    }
}

