@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.DashboardSummaryViewModel
@{
    ViewData["Title"] = Localizer["Dashboard.Title"];
    var activityData = System.Text.Json.JsonSerializer.Serialize(ViewBag.ActivityData);
    var activityLabels = System.Text.Json.JsonSerializer.Serialize(ViewBag.ActivityLabels);
}

<div class="dashboard-header mb-4">
    <div>
        <h1 class="h3 mb-1">@Localizer["Dashboard.Welcome"], Admin</h1>
        <p class="text-muted mb-0">@Localizer["Dashboard.HappeningToday"]</p>
    </div>
    <div class="d-flex gap-2 align-items-center">
        <div class="dropdown me-2">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-globe me-1"></i> @Localizer["Dashboard.Language"]
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                <li><a class="dropdown-item" href="?culture=en">English</a></li>
                <li><a class="dropdown-item" href="?culture=ar">العربية</a></li>
            </ul>
        </div>
        <div class="dropdown">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-download me-2"></i>@Localizer["Dashboard.ExportReport"]
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="exportDropdown">
                <li><a class="dropdown-item" asp-action="ExportReport" asp-route-format="csv"><i class="bi bi-filetype-csv me-2"></i>Export as CSV</a></li>
                <li><a class="dropdown-item" asp-action="ExportReport" asp-route-format="json"><i class="bi bi-filetype-json me-2"></i>Export as JSON</a></li>
            </ul>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#quickActionsModal">
            <i class="fas fa-plus me-2"></i>@Localizer["Dashboard.NewAction"]
        </button>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card stat-card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="stat-icon bg-primary-light text-primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <span class="badge bg-success-light text-success">+12% <i class="fas fa-arrow-up small ms-1"></i></span>
                </div>
                <h6 class="text-muted mb-1">@Localizer["Dashboard.TotalUsers"]</h6>
                <h3 class="fw-bold">@Model.TotalUsers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="stat-icon bg-info-light text-info">
                        <i class="fas fa-user-friends"></i>
                    </div>
                    <span class="badge bg-success-light text-success">+5% <i class="fas fa-arrow-up small ms-1"></i></span>
                </div>
                <h6 class="text-muted mb-1">@Localizer["Dashboard.Friendships"]</h6>
                <h3 class="fw-bold">@Model.TotalFriendships</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="stat-icon bg-warning-light text-warning">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <span class="badge bg-danger-light text-danger">-2% <i class="fas fa-arrow-down small ms-1"></i></span>
                </div>
                <h6 class="text-muted mb-1">@Localizer["Dashboard.ActiveEvents"]</h6>
                <h3 class="fw-bold">@Model.ActiveEvents</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="stat-icon bg-success-light text-success">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <span class="badge bg-success-light text-success">Optimal</span>
                </div>
                <h6 class="text-muted mb-1">@Localizer["Dashboard.SystemHealth"]</h6>
                <h3 class="fw-bold">@Model.SystemHealth%</h3>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">@Localizer["Dashboard.WeeklyActivity"]</h5>
                <select class="form-select form-select-sm w-auto">
                    <option>@Localizer["Dashboard.Last7Days"]</option>
                    <option>@Localizer["Dashboard.Last30Days"]</option>
                </select>
            </div>
            <div class="card-body">
                <div style="height: 300px; width: 100%;">
                    <canvas id="activityChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">@Localizer["Dashboard.RecentNotifications"]</h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 border-bottom d-flex gap-3 py-3 px-4">
                        <div class="activity-dot bg-primary"></div>
                        <div>
                            <p class="mb-1 fw-bold">New user registered</p>
                            <p class="small text-muted mb-0">John Doe joined the community</p>
                            <span class="small text-muted">2 mins ago</span>
                        </div>
                    </div>
                    <div class="list-group-item border-0 border-bottom d-flex gap-3 py-3 px-4">
                        <div class="activity-dot bg-success"></div>
                        <div>
                            <p class="mb-1 fw-bold">Event created</p>
                            <p class="small text-muted mb-0">Saturday Car Meet in Downtown</p>
                            <span class="small text-muted">1 hour ago</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white text-center border-0 py-3">
                <a href="#" class="btn btn-link btn-sm text-decoration-none fw-bold">@Localizer["Dashboard.ViewAllActivity"] <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Modal -->
<div class="modal fade" id="quickActionsModal" tabindex="-1" aria-labelledby="quickActionsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quickActionsModalLabel">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Create", "Posts", new { area = "" })" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="me-3">
                            <div class="icon-circle bg-primary-subtle">
                                <i class="bi bi-file-earmark-text text-primary"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0">Create New Post</h6>
                            <small class="text-muted">Share content with the community</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Create", "Events", new { area = "" })" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="me-3">
                            <div class="icon-circle bg-success-subtle">
                                <i class="bi bi-calendar-event text-success"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0">Create New Event</h6>
                            <small class="text-muted">Organize a community event</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Create", "Groups", new { area = "" })" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="me-3">
                            <div class="icon-circle bg-info-subtle">
                                <i class="bi bi-people text-info"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0">Create New Group</h6>
                            <small class="text-muted">Start a new community group</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Create", "News", new { area = "" })" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="me-3">
                            <div class="icon-circle bg-warning-subtle">
                                <i class="bi bi-newspaper text-warning"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0">Create News Article</h6>
                            <small class="text-muted">Publish news to the community</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Create", "Guides", new { area = "" })" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="me-3">
                            <div class="icon-circle bg-danger-subtle">
                                <i class="bi bi-book text-danger"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0">Create New Guide</h6>
                            <small class="text-muted">Write a helpful guide</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Create", "Localization", new { area = "Dashboard" })" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="me-3">
                            <div class="icon-circle bg-secondary-subtle">
                                <i class="bi bi-translate text-secondary"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0">Add Translation</h6>
                            <small class="text-muted">Add new localization key</small>
                        </div>
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const ctx = document.getElementById('activityChart').getContext('2d');
        const activityData = @Html.Raw(activityData);
        const activityLabels = @Html.Raw(activityLabels);
        
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: activityLabels,
                datasets: [{
                    label: 'Registrations',
                    data: activityData,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointBackgroundColor: '#fff',
                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [5, 5] } },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
}
