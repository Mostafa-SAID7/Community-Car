@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.SystemInfoViewModel
@{
    ViewData["Title"] = "System Information - Dashboard";
}

<link rel="stylesheet" href="~/css/pages/system.css" />

<div class="container-fluid system-info-container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">System</a></li>
            <li class="breadcrumb-item active">Information</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="system-info-header mb-4">
        <h1 class="h2 mb-2 fw-bold">System Information</h1>
        <p class="mb-0 opacity-90">Detailed information about your application and environment</p>
    </div>

    <!-- Main Content -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Application Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-server me-2"></i>Application Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Application Name:</div>
                        <div class="col-md-8">@Model.SystemInfo.ApplicationName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Version:</div>
                        <div class="col-md-8"><code>@Model.SystemInfo.Version</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Environment:</div>
                        <div class="col-md-8">
                            <span class="badge bg-@(Model.SystemInfo.Environment == "Production" ? "danger" : "warning")">
                                @Model.SystemInfo.Environment
                            </span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Framework:</div>
                        <div class="col-md-8">@Model.SystemInfo.FrameworkVersion</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Start Time:</div>
                        <div class="col-md-8">@Model.SystemInfo.StartTime.ToString("MMM dd, yyyy HH:mm:ss")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Uptime:</div>
                        <div class="col-md-8">
                            @Model.SystemInfo.Uptime.Days days, @Model.SystemInfo.Uptime.Hours hours, @Model.SystemInfo.Uptime.Minutes minutes
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Environment -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-desktop me-2"></i>System Environment</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Operating System:</div>
                        <div class="col-md-8">@Model.SystemInfo.OperatingSystem</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Machine Name:</div>
                        <div class="col-md-8">@Model.SystemInfo.MachineName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Processor Count:</div>
                        <div class="col-md-8">@Model.SystemInfo.ProcessorCount cores</div>
                    </div>
                    @if (Model.EnvironmentInfo.ContainsKey("Is64BitOperatingSystem"))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold text-muted">Architecture:</div>
                            <div class="col-md-8">@(Convert.ToBoolean(Model.EnvironmentInfo["Is64BitOperatingSystem"]) ? "64-bit" : "32-bit")</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Database & Services -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-database me-2"></i>Database & Services</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Database Provider:</div>
                        <div class="col-md-8">@Model.SystemInfo.DatabaseProvider</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-muted">Cache Provider:</div>
                        <div class="col-md-8">@Model.SystemInfo.CacheProvider</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Assembly Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-code me-2"></i>Assembly Info</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.AssemblyInfo)
                    {
                        <div class="info-item mb-3">
                            <small class="text-muted">@item.Key</small>
                            <div class="fw-bold small">@item.Value</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Environment Variables -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Environment</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.EnvironmentInfo.Take(10))
                    {
                        <div class="info-item mb-2">
                            <small class="text-muted">@item.Key</small>
                            <div class="small">@item.Value</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
