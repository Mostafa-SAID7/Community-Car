@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="monitoring-tab-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">
                        <i class="fas fa-clipboard-list me-2"></i>
                        @Localizer["Audit Logs"]
                    </h3>
                    <p class="text-muted">@Localizer["Track and review system activity and user actions"]</p>
                </div>
                <div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit" 
                       class="btn btn-primary">
                        <i class="fas fa-list me-1"></i>
                        @Localizer["View All Logs"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 text-primary rounded p-3">
                                <i class="fas fa-list fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Total Logs"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 text-info rounded p-3">
                                <i class="fas fa-calendar-day fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Today"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 text-warning rounded p-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Failed Actions"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 text-success rounded p-3">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Active Users"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Categories -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-user-shield text-primary me-2"></i>
                        @Localizer["User Activity"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Track user logins, logouts, and actions"]</p>
                    <div class="mb-3">
                        <small class="text-muted">@Localizer["Recent activity"]: - @Localizer["actions"]</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit?type=UserActivity" 
                       class="btn btn-outline-primary">
                        @Localizer["View Activity"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-database text-info me-2"></i>
                        @Localizer["Data Changes"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Monitor database modifications and updates"]</p>
                    <div class="mb-3">
                        <small class="text-muted">@Localizer["Recent changes"]: - @Localizer["records"]</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit?type=DataChanges" 
                       class="btn btn-outline-info">
                        @Localizer["View Changes"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-shield-alt text-success me-2"></i>
                        @Localizer["Security Events"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Review security-related events and alerts"]</p>
                    <div class="mb-3">
                        <small class="text-muted">@Localizer["Recent events"]: - @Localizer["events"]</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit?type=Security" 
                       class="btn btn-outline-success">
                        @Localizer["View Events"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-cog text-warning me-2"></i>
                        @Localizer["System Changes"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Track configuration and system modifications"]</p>
                    <div class="mb-3">
                        <small class="text-muted">@Localizer["Recent changes"]: - @Localizer["changes"]</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit?type=SystemChanges" 
                       class="btn btn-outline-warning">
                        @Localizer["View Changes"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["Quick Actions"]</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit" 
                           class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>
                            @Localizer["Search Logs"]
                        </a>
                        <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit?export=true" 
                           class="btn btn-outline-success">
                            <i class="fas fa-download me-1"></i>
                            @Localizer["Export Logs"]
                        </a>
                        <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Audit?filter=today" 
                           class="btn btn-outline-info">
                            <i class="fas fa-calendar-day me-1"></i>
                            @Localizer["Today's Logs"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
