@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.Monitoring.System.SystemConfigurationViewModel
@{
    ViewData["Title"] = "System Configuration";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">System Configuration</h2>
            <p class="text-muted mb-0">View application settings and configuration</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Overview
            </a>
        </div>
    </div>

    <!-- Security Warning -->
    <div class="alert alert-warning mb-4">
        <i class="bi bi-shield-exclamation"></i>
        <strong>Security Notice:</strong> Sensitive configuration values (passwords, secrets, keys) are automatically hidden for security purposes.
    </div>

    <!-- App Settings -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Application Settings</h5>
        </div>
        <div class="card-body">
            @if (Model.Configuration.AppSettings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th style="width: 40%;">Key</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in Model.Configuration.AppSettings.OrderBy(s => s.Key))
                            {
                                <tr>
                                    <td><code>@setting.Key</code></td>
                                    <td>
                                        @if (string.IsNullOrEmpty(setting.Value))
                                        {
                                            <span class="text-muted fst-italic">empty</span>
                                        }
                                        else
                                        {
                                            <span>@setting.Value</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No application settings found.</p>
            }
        </div>
    </div>

    <!-- Connection Strings -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Connection Strings</h5>
        </div>
        <div class="card-body">
            @if (Model.Configuration.ConnectionStrings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th style="width: 30%;">Name</th>
                                <th>Connection String</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var conn in Model.Configuration.ConnectionStrings)
                            {
                                <tr>
                                    <td><strong>@conn.Key</strong></td>
                                    <td>
                                        <code class="text-muted">@MaskConnectionString(conn.Value)</code>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No connection strings configured.</p>
            }
        </div>
    </div>

    <!-- Environment Variables -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Environment Variables</h5>
        </div>
        <div class="card-body">
            @if (Model.Configuration.EnvironmentVariables.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th style="width: 40%;">Variable</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var env in Model.Configuration.EnvironmentVariables.OrderBy(e => e.Key))
                            {
                                <tr>
                                    <td><code>@env.Key</code></td>
                                    <td>
                                        @if (string.IsNullOrEmpty(env.Value))
                                        {
                                            <span class="text-muted fst-italic">empty</span>
                                        }
                                        else
                                        {
                                            <span>@env.Value</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No environment variables found.</p>
            }
        </div>
    </div>
</div>

@functions {
    private string MaskConnectionString(string connectionString)
    {
        if (string.IsNullOrEmpty(connectionString))
            return string.Empty;

        // Mask password in connection string
        var parts = connectionString.Split(';');
        var maskedParts = parts.Select(part =>
        {
            if (part.Trim().StartsWith("Password=", StringComparison.OrdinalIgnoreCase) ||
                part.Trim().StartsWith("Pwd=", StringComparison.OrdinalIgnoreCase))
            {
                var keyValue = part.Split('=');
                return keyValue.Length > 0 ? $"{keyValue[0]}=********" : part;
            }
            return part;
        });

        return string.Join("; ", maskedParts);
    }
}
