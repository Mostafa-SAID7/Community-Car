@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="monitoring-tab-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">
                        <i class="fas fa-heartbeat me-2"></i>
                        @Localizer["System Health"]
                    </h3>
                    <p class="text-muted">@Localizer["Monitor system health and performance metrics"]</p>
                </div>
                <div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Health" 
                       class="btn btn-primary">
                        <i class="fas fa-chart-line me-1"></i>
                        @Localizer["View Details"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Health Status Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 text-success rounded p-3">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Overall Status"]</h6>
                            <h3 class="mb-0 text-success">@Localizer["Healthy"]</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 text-info rounded p-3">
                                <i class="fas fa-database fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Database"]</h6>
                            <h3 class="mb-0 text-success">@Localizer["Online"]</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 text-warning rounded p-3">
                                <i class="fas fa-memory fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Memory Usage"]</h6>
                            <h3 class="mb-0">-%</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 text-primary rounded p-3">
                                <i class="fas fa-microchip fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["CPU Usage"]</h6>
                            <h3 class="mb-0">-%</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Health Check Categories -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-database text-info me-2"></i>
                        @Localizer["Database Health"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Check database connectivity and performance"]</p>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-success me-2">@Localizer["Connected"]</span>
                        <small class="text-muted">@Localizer["Response time"]: -ms</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Health" 
                       class="btn btn-outline-info btn-sm">
                        @Localizer["Check Now"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-server text-primary me-2"></i>
                        @Localizer["Server Health"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Monitor server resources and performance"]</p>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-success me-2">@Localizer["Running"]</span>
                        <small class="text-muted">@Localizer["Uptime"]: -</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Health" 
                       class="btn btn-outline-primary btn-sm">
                        @Localizer["View Metrics"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-plug text-success me-2"></i>
                        @Localizer["External Services"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Check external API and service connectivity"]</p>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-success me-2">@Localizer["All Online"]</span>
                        <small class="text-muted">- @Localizer["services"]</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Health" 
                       class="btn btn-outline-success btn-sm">
                        @Localizer["Test Services"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-hdd text-warning me-2"></i>
                        @Localizer["Storage Health"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Monitor disk space and storage usage"]</p>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-success me-2">@Localizer["Available"]</span>
                        <small class="text-muted">- GB @Localizer["free"]</small>
                    </div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Monitoring/Health" 
                       class="btn btn-outline-warning btn-sm">
                        @Localizer["Check Storage"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
