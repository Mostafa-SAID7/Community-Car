@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.Administration.Localization.LocalizationDetailsViewModel
@{
    ViewData["Title"] = "Translation Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-info-circle me-2"></i>
                    Translation Details
                </h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Resource.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-1"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resource Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Key</dt>
                        <dd class="col-sm-8"><code>@Model.Resource.Key</code></dd>

                        <dt class="col-sm-4">Culture</dt>
                        <dd class="col-sm-8"><span class="badge bg-primary">@Model.Resource.CultureCode</span></dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Resource.Category</span></dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Resource.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Value</dt>
                        <dd class="col-sm-8 p-3 bg-light rounded border">
                            @Model.Resource.Value
                        </dd>

                        <dt class="col-sm-4 mt-3">Description</dt>
                        <dd class="col-sm-8 mt-3">@(string.IsNullOrEmpty(Model.Resource.Description) ? "No description" : Model.Resource.Description)</dd>

                        <dt class="col-sm-4 mt-3">Last Modified</dt>
                        <dd class="col-sm-8 mt-3">@(Model.Resource.LastModifiedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Other Cultures for "@Model.Resource.Key"</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Culture</th>
                                    <th>Value</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RelatedTranslations.Any())
                                {
                                    @foreach (var related in Model.RelatedTranslations)
                                    {
                                        <tr>
                                            <td><span class="badge bg-primary">@related.CultureCode</span></td>
                                            <td>
                                                <div style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                                    @related.Value
                                                </div>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@related.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-3">No other translations found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
