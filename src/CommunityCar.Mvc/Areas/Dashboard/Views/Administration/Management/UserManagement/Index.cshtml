@model IEnumerable<CommunityCar.Mvc.Areas.Dashboard.ViewModels.Administration.Management.UserViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid py-4">
    <partial name="_ManagementNav" />
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">User Management</h1>
            <p class="text-muted small">Manage system users, roles, and status.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
            <i class="fas fa-user-plus me-1"></i> Add New User
        </a>
    </div>

    <!-- Search Bar -->
    <div class="card border-0 shadow-sm rounded-3 mb-4">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="d-flex gap-2">
                <input type="text" name="searchTerm" class="form-control border-0 bg-light" placeholder="Search by name or email..." value="@ViewData["CurrentFilter"]">
                <button type="submit" class="btn btn-secondary">Search</button>
                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="Index" class="btn btn-light text-secondary">Clear</a>
                }
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th class="px-4 py-3 border-0">User</th>
                            <th class="px-4 py-3 border-0">Role</th>
                            <th class="px-4 py-3 border-0">Status</th>
                            <th class="px-4 py-3 border-0">Joined</th>
                            <th class="px-4 py-3 border-0 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3 bg-light text-primary fw-bold d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                                            @user.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@user.FirstName @user.LastName</div>
                                            <div class="small text-muted">@user.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-soft-primary text-primary rounded-pill me-1">@role</span>
                                    }
                                </td>
                                <td class="px-4 py-3">
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-soft-success text-success rounded-pill">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-secondary text-secondary rounded-pill">Inactive</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-muted small">
                                    @user.CreatedOn.ToString("MMM dd, yyyy")
                                </td>
                                <td class="px-4 py-3 text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-icon btn-sm text-muted" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                            <li>
                                                <a class="dropdown-item small" asp-action="Edit" asp-route-id="@user.Id">
                                                    <i class="fas fa-edit text-info me-2"></i>Edit
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure?');">
                                                    <button type="submit" class="dropdown-item small text-danger">
                                                        <i class="fas fa-trash me-2"></i>Delete
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <i class="fas fa-users-slash fa-2x mb-3 opacity-50"></i>
                    <p class="mb-0">No users found.</p>
                </div>
            }
        </div>
    </div>
</div>
