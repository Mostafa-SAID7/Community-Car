@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.Administration.Settings.StorageViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Storage Settings"];
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-hdd me-2"></i>
                        @Localizer["Storage Settings"]
                    </h2>
                    <p class="text-muted">@Localizer["Manage file storage and upload settings"]</p>
                </div>
                <div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration?tab=settings" 
                       class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        @Localizer["Back to Settings"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Storage Overview -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded p-3 me-3">
                            <i class="fas fa-database fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">@Localizer["Total Storage"]</h6>
                            <h4 class="mb-0">@Model.GetFormattedSize(Model.TotalSize)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 text-success rounded p-3 me-3">
                            <i class="fas fa-folder fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">@Localizer["Uploads Folder"]</h6>
                            <h4 class="mb-0">@Model.GetFormattedSize(Model.UploadsFolderSize)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 text-info rounded p-3 me-3">
                            <i class="fas fa-user-circle fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">@Localizer["Profile Pictures"]</h6>
                            <h4 class="mb-0">@Model.GetFormattedSize(Model.ProfilePicturesSize)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 text-warning rounded p-3 me-3">
                            <i class="fas fa-image fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">@Localizer["Post Images"]</h6>
                            <h4 class="mb-0">@Model.GetFormattedSize(Model.PostImagesSize)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Storage Details -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        @Localizer["Storage Breakdown"]
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@Localizer["Profile Pictures"]</span>
                            <span class="text-muted">@Model.GetFormattedSize(Model.ProfilePicturesSize)</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-info" role="progressbar" 
                                 style="width: @(Model.TotalSize > 0 ? (Model.ProfilePicturesSize * 100.0 / Model.TotalSize).ToString("F1") : "0")%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@Localizer["Post Images"]</span>
                            <span class="text-muted">@Model.GetFormattedSize(Model.PostImagesSize)</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" 
                                 style="width: @(Model.TotalSize > 0 ? (Model.PostImagesSize * 100.0 / Model.TotalSize).ToString("F1") : "0")%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@Localizer["Event Images"]</span>
                            <span class="text-muted">@Model.GetFormattedSize(Model.EventImagesSize)</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 style="width: @(Model.TotalSize > 0 ? (Model.EventImagesSize * 100.0 / Model.TotalSize).ToString("F1") : "0")%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cog me-2"></i>
                        @Localizer["Upload Settings"]
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["Max Upload Size"]</label>
                        <p class="text-muted">@Model.GetFormattedSize(Model.MaxUploadSize)</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["Allowed File Extensions"]</label>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var ext in Model.AllowedExtensions)
                            {
                                <span class="badge bg-secondary">@ext</span>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="d-grid gap-2">
                        <form asp-action="ClearCache" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning w-100" 
                                    onclick="return confirm('@Localizer["Are you sure you want to clear the cache?"]')">
                                <i class="fas fa-trash me-2"></i>
                                @Localizer["Clear Cache"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Storage Folders -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-folder-tree me-2"></i>
                        @Localizer["Storage Folders"]
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Localizer["Folder"]</th>
                                    <th>@Localizer["Purpose"]</th>
                                    <th class="text-end">@Localizer["Size"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><i class="fas fa-folder text-warning me-2"></i>/uploads/profiles</td>
                                    <td>@Localizer["User profile pictures"]</td>
                                    <td class="text-end">@Model.GetFormattedSize(Model.ProfilePicturesSize)</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-folder text-warning me-2"></i>/uploads/posts/images</td>
                                    <td>@Localizer["Post images and attachments"]</td>
                                    <td class="text-end">@Model.GetFormattedSize(Model.PostImagesSize)</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-folder text-warning me-2"></i>/uploads/events</td>
                                    <td>@Localizer["Event images and banners"]</td>
                                    <td class="text-end">@Model.GetFormattedSize(Model.EventImagesSize)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
