@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="administration-tab-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">
                        <i class="fas fa-language me-2"></i>
                        @Localizer["Localization Management"]
                    </h3>
                    <p class="text-muted">@Localizer["Manage translations and localization resources"]</p>
                </div>
                <div>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Localization" 
                       class="btn btn-primary">
                        <i class="fas fa-cog me-1"></i>
                        @Localizer["Manage Translations"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 text-primary rounded p-3">
                                <i class="fas fa-key fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Total Keys"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 text-success rounded p-3">
                                <i class="fas fa-globe fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Languages"]</h6>
                            <h3 class="mb-0">2</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 text-warning rounded p-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Missing"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 text-info rounded p-3">
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Completion"]</h6>
                            <h3 class="mb-0">-%</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-plus-circle text-primary me-2"></i>
                        @Localizer["Add Translation"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Create new translation keys and values"]</p>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Localization/Create" 
                       class="btn btn-outline-primary">
                        @Localizer["Add New"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-file-import text-success me-2"></i>
                        @Localizer["Import/Export"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Import or export translation files"]</p>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Localization/BulkImport" 
                       class="btn btn-outline-success me-2">
                        @Localizer["Import"]
                    </a>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Localization/Export" 
                       class="btn btn-outline-info">
                        @Localizer["Export"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-chart-bar text-info me-2"></i>
                        @Localizer["Statistics"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["View detailed translation statistics"]</p>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Localization/Statistics" 
                       class="btn btn-outline-info">
                        @Localizer["View Stats"]
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                        @Localizer["Missing Translations"]
                    </h5>
                    <p class="card-text text-muted">@Localizer["Find and fix missing translations"]</p>
                    <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Localization/MissingTranslations" 
                       class="btn btn-outline-warning">
                        @Localizer["Check Missing"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
