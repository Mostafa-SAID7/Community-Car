@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.Administration.Security.CreateSecurityAlertViewModel
@using CommunityCar.Domain.Enums.Dashboard.security
@{
    ViewData["Title"] = "Create Security Alert";
}

<link rel="stylesheet" href="~/css/pages/security.css" />

<div class="container-fluid security-container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Security Alerts</a></li>
            <li class="breadcrumb-item active">Create Alert</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="security-create-card">
                <div class="card-header">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Create Security Alert
                    </h2>
                    <p class="mb-0 mt-2 opacity-90">Document a new security incident or threat</p>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Alert Title <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="Brief description of the security alert" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Severity" class="form-label fw-bold">Severity <span class="text-danger">*</span></label>
                                <select asp-for="Severity" class="form-select">
                                    <option value="">Select Severity</option>
                                    <option value="@SecuritySeverity.Low">Low - Minor issue</option>
                                    <option value="@SecuritySeverity.Medium">Medium - Moderate concern</option>
                                    <option value="@SecuritySeverity.High">High - Serious threat</option>
                                    <option value="@SecuritySeverity.Critical">Critical - Immediate action required</option>
                                </select>
                                <span asp-validation-for="Severity" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AlertType" class="form-label fw-bold">Alert Type <span class="text-danger">*</span></label>
                                <select asp-for="AlertType" class="form-select">
                                    <option value="">Select Type</option>
                                    @foreach (SecurityAlertType type in Enum.GetValues(typeof(SecurityAlertType)))
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="AlertType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Description <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="5" 
                                      placeholder="Detailed description of the security alert, including what happened, when, and potential impact..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">Provide as much detail as possible to help with investigation and resolution.</div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Source" class="form-label fw-bold">Source</label>
                                <input asp-for="Source" class="form-control" placeholder="e.g., Firewall, IDS, Application Log" />
                                <span asp-validation-for="Source" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="IpAddress" class="form-label fw-bold">IP Address</label>
                                <input asp-for="IpAddress" class="form-control" placeholder="e.g., 192.168.1.100" />
                                <span asp-validation-for="IpAddress" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserAgent" class="form-label fw-bold">User Agent</label>
                            <input asp-for="UserAgent" class="form-control" placeholder="Browser or client information" />
                            <span asp-validation-for="UserAgent" class="text-danger small"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="AffectedUserId" class="form-label fw-bold">Affected User ID</label>
                                <input asp-for="AffectedUserId" class="form-control" placeholder="User GUID" />
                                <span asp-validation-for="AffectedUserId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AffectedUserName" class="form-label fw-bold">Affected User Name</label>
                                <input asp-for="AffectedUserName" class="form-control" placeholder="Username or email" />
                                <span asp-validation-for="AffectedUserName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="alert alert-info border-0">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> All timestamps will be recorded automatically. The alert will be created with "Unresolved" status.
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Alert
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/security.js"></script>
}
