@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.Administration.Security.SecurityDetailsViewModel
@using CommunityCar.Domain.Enums.Dashboard.security
@{
    ViewData["Title"] = Model.Alert.Title + " - Security Alert";
    var alert = Model.Alert;
    
    var severityClass = alert.Severity switch
    {
        SecuritySeverity.Critical => "severity-critical",
        SecuritySeverity.High => "severity-high",
        SecuritySeverity.Medium => "severity-medium",
        SecuritySeverity.Low => "severity-low",
        _ => "severity-low"
    };

    var severityIcon = alert.Severity switch
    {
        SecuritySeverity.Critical => "fa-fire",
        SecuritySeverity.High => "fa-exclamation-triangle",
        SecuritySeverity.Medium => "fa-exclamation-circle",
        SecuritySeverity.Low => "fa-info-circle",
        _ => "fa-info-circle"
    };

    var alertTypeIcon = alert.AlertType switch
    {
        SecurityAlertType.UnauthorizedAccess => "fa-user-lock",
        SecurityAlertType.SuspiciousActivity => "fa-user-secret",
        SecurityAlertType.DataBreach => "fa-database",
        SecurityAlertType.FailedLogin => "fa-sign-in-alt",
        SecurityAlertType.PasswordChange => "fa-key",
        SecurityAlertType.PermissionChange => "fa-user-shield",
        SecurityAlertType.AccountLockout => "fa-lock",
        SecurityAlertType.MaliciousRequest => "fa-bug",
        _ => "fa-shield-alt"
    };
}

<link rel="stylesheet" href="~/css/pages/security.css" />

<div class="container-fluid security-container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Security Alerts</a></li>
            <li class="breadcrumb-item active">@alert.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <!-- Alert Detail Card -->
            <div class="alert-detail-card @severityClass">
                <div class="alert-detail-header">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <h1 class="h3 mb-2">@alert.Title</h1>
                            <div class="d-flex gap-2 flex-wrap">
                                <span class="badge badge-@severityClass.Replace("severity-", "") fs-6">
                                    <i class="fas @severityIcon me-1"></i>@alert.Severity
                                </span>
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas @alertTypeIcon me-1"></i>@alert.AlertType
                                </span>
                                @if (alert.IsResolved)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-check-circle me-1"></i>Resolved
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">
                                        <i class="fas fa-clock me-1"></i>Pending
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert-detail-body">
                    <h5 class="fw-bold mb-3">Description</h5>
                    <p class="lead">@alert.Description</p>

                    <hr class="my-4">

                    <h5 class="fw-bold mb-3">Alert Information</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-clock text-muted me-2"></i>
                                <strong>Detected At:</strong>
                                <span>@alert.DetectedAt.ToString("MMMM dd, yyyy HH:mm:ss")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-calendar text-muted me-2"></i>
                                <strong>Created At:</strong>
                                <span>@alert.CreatedAt.ToString("MMMM dd, yyyy HH:mm:ss")</span>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(alert.Source))
                        {
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-server text-muted me-2"></i>
                                    <strong>Source:</strong>
                                    <span>@alert.Source</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(alert.IpAddress))
                        {
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-network-wired text-muted me-2"></i>
                                    <strong>IP Address:</strong>
                                    <code>@alert.IpAddress</code>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(alert.AffectedUserName))
                        {
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-user text-muted me-2"></i>
                                    <strong>Affected User:</strong>
                                    <span>@alert.AffectedUserName</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(alert.UserAgent))
                        {
                            <div class="col-12">
                                <div class="info-item">
                                    <i class="fas fa-desktop text-muted me-2"></i>
                                    <strong>User Agent:</strong>
                                    <small class="text-muted">@alert.UserAgent</small>
                                </div>
                            </div>
                        }
                    </div>

                    @if (alert.IsResolved)
                    {
                        <hr class="my-4">
                        <div class="resolution-section">
                            <h5 class="fw-bold mb-3 text-success">
                                <i class="fas fa-check-circle me-2"></i>Resolution Details
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <i class="fas fa-user text-muted me-2"></i>
                                        <strong>Resolved By:</strong>
                                        <span>@alert.ResolvedByName</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <i class="fas fa-calendar-check text-muted me-2"></i>
                                        <strong>Resolved At:</strong>
                                        <span>@alert.ResolvedAt?.ToString("MMMM dd, yyyy HH:mm:ss")</span>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(alert.ResolutionNotes))
                                {
                                    <div class="col-12">
                                        <div class="info-item">
                                            <i class="fas fa-sticky-note text-muted me-2"></i>
                                            <strong>Resolution Notes:</strong>
                                            <p class="mt-2 mb-0">@alert.ResolutionNotes</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <div class="alert-detail-footer">
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        @if (!alert.IsResolved)
                        {
                            <a asp-action="Resolve" asp-route-id="@alert.Id" class="btn btn-success">
                                <i class="fas fa-check me-2"></i>Resolve Alert
                            </a>
                            <a asp-action="Edit" asp-route-id="@alert.Id" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                        }
                        else
                        {
                            <form asp-action="Reopen" asp-route-id="@alert.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-redo me-2"></i>Reopen Alert
                                </button>
                            </form>
                        }
                        <form asp-action="Delete" asp-route-id="@alert.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this alert?')">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!alert.IsResolved)
                        {
                            <a asp-action="Resolve" asp-route-id="@alert.Id" class="btn btn-success">
                                <i class="fas fa-check me-2"></i>Resolve Alert
                            </a>
                            <a asp-action="Edit" asp-route-id="@alert.Id" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-2"></i>Edit Alert
                            </a>
                        }
                        else
                        {
                            <form asp-action="Reopen" asp-route-id="@alert.Id" method="post">
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="fas fa-redo me-2"></i>Reopen Alert
                                </button>
                            </form>
                        }
                        <a asp-action="Index" asp-route-severity="@alert.Severity" class="btn btn-outline-secondary">
                            <i class="fas fa-filter me-2"></i>View Similar Alerts
                        </a>
                    </div>
                </div>
            </div>

            <!-- Related Alerts -->
            @if (Model.RelatedAlerts.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-link me-2"></i>Related Alerts</h6>
                    </div>
                    <div class="list-group">
                        @foreach (var relatedAlert in Model.RelatedAlerts.Take(5))
                        {
                            <a asp-action="Details" asp-route-id="@relatedAlert.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 small">@relatedAlert.Title</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @relatedAlert.DetectedAt.ToString("MMM dd, HH:mm")
                                        </small>
                                    </div>
                                    <span class="badge badge-@(relatedAlert.Severity.ToString().ToLower())">
                                        @relatedAlert.Severity
                                    </span>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/security.js"></script>
}
