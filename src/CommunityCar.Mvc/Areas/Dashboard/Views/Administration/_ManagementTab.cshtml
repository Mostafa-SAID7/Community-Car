@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="administration-tab-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">
                        <i class="fas fa-tasks me-2"></i>
                        @Localizer["Content Management"]
                    </h3>
                    <p class="text-muted">@Localizer["Manage users, content, and system resources"]</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Categories -->
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="card-title text-center">@Localizer["User Management"]</h5>
                    <p class="card-text text-muted text-center">@Localizer["Manage user accounts, roles, and permissions"]</p>
                    <div class="d-grid">
                        <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Management/Users" 
                           class="btn btn-outline-primary">
                            @Localizer["Manage Users"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-success bg-opacity-10 text-success rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="card-title text-center">@Localizer["Content Management"]</h5>
                    <p class="card-text text-muted text-center">@Localizer["Manage posts, articles, and user-generated content"]</p>
                    <div class="d-grid">
                        <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Management/Content" 
                           class="btn btn-outline-success">
                            @Localizer["Manage Content"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-info bg-opacity-10 text-info rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-shield-alt fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="card-title text-center">@Localizer["Role Management"]</h5>
                    <p class="card-text text-muted text-center">@Localizer["Configure roles and access permissions"]</p>
                    <div class="d-grid">
                        <a href="/@ViewContext.RouteData.Values["culture"]/Dashboard/Administration/Management/Roles" 
                           class="btn btn-outline-info">
                            @Localizer["Manage Roles"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-3 mt-2">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 text-primary rounded p-3">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Total Users"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 text-success rounded p-3">
                                <i class="fas fa-file-alt fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Total Content"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 text-warning rounded p-3">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Pending Review"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-danger bg-opacity-10 text-danger rounded p-3">
                                <i class="fas fa-flag fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Reported Items"]</h6>
                            <h3 class="mb-0">-</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
