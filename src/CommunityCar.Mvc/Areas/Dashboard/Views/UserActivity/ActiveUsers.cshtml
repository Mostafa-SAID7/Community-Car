@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.ActiveUsersViewModel
@{
    ViewData["Title"] = "Active Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Dashboard" })">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">User Activity</a></li>
                    <li class="breadcrumb-item active">Active Users</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">
                <i class="bi bi-person-check"></i> Active Users
            </h1>
            <p class="text-muted">Users who have been active in the last @Model.TimeRange hours</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Time Range Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="ActiveUsers">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Time Range (hours)</label>
                        <select class="form-select" name="hours">
                            <option value="1" selected="@(Model.TimeRange == 1)">Last 1 hour</option>
                            <option value="6" selected="@(Model.TimeRange == 6)">Last 6 hours</option>
                            <option value="12" selected="@(Model.TimeRange == 12)">Last 12 hours</option>
                            <option value="24" selected="@(Model.TimeRange == 24)">Last 24 hours</option>
                            <option value="48" selected="@(Model.TimeRange == 48)">Last 48 hours</option>
                            <option value="168" selected="@(Model.TimeRange == 168)">Last 7 days</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Update
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Card -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-people-fill fs-1 text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Active Users</h6>
                            <h2 class="mb-0">@Model.Users.Count.ToString("N0")</h2>
                            <small class="text-muted">in the last @Model.TimeRange hours</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-circle-fill fs-1 text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Online Now</h6>
                            <h2 class="mb-0">@Model.Users.Count(u => u.IsOnline).ToString("N0")</h2>
                            <small class="text-muted">currently active</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-activity fs-1 text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Activities</h6>
                            <h2 class="mb-0">@Model.Users.Sum(u => u.ActivityCount).ToString("N0")</h2>
                            <small class="text-muted">combined activities</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Users List -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Active Users List
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Status</th>
                                <th>User</th>
                                <th>Email</th>
                                <th>Last Activity</th>
                                <th>Activity Count</th>
                                <th>Location</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users.OrderByDescending(u => u.LastActivity))
                            {
                                <tr>
                                    <td>
                                        @if (user.IsOnline)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-circle-fill"></i> Online
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-circle"></i> Offline
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("UserDetails", new { userId = user.UserId })" class="text-decoration-none">
                                            <i class="bi bi-person-circle"></i> @user.UserName
                                        </a>
                                    </td>
                                    <td>
                                        <small class="text-muted">@user.Email</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @user.LastActivity.ToString("yyyy-MM-dd HH:mm:ss")
                                        </small>
                                        <br />
                                        <small class="text-muted">(@GetTimeAgo(user.LastActivity))</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary rounded-pill">@user.ActivityCount</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(user.CurrentLocation ?? "-")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("UserDetails", new { userId = user.UserId })" class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a href="@Url.Action("Timeline", new { userId = user.UserId })" class="btn btn-outline-info">
                                                <i class="bi bi-clock-history"></i> Timeline
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-x fs-1 text-muted"></i>
                    <p class="text-muted mt-3">No active users found in the selected time range.</p>
                </div>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col-12">
            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to Activities
            </a>
        </div>
    </div>
</div>

@functions {
    string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;

        if (timeSpan.TotalMinutes < 1)
            return "Just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} min ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hr ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} days ago";
        return dateTime.ToString("MMM dd");
    }
}
