@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.UserActivityStatisticsViewModel
@{
    ViewData["Title"] = "User Activity Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Dashboard" })">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">User Activity</a></li>
                    <li class="breadcrumb-item active">Statistics</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">
                <i class="bi bi-graph-up"></i> User Activity Statistics
            </h1>
            <p class="text-muted">Analyze user behavior and engagement patterns</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Date Range Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Statistics">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Start Date</label>
                        <input type="date" class="form-control" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">End Date</label>
                        <input type="date" class="form-control" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Update
                        </button>
                        <a href="@Url.Action("Statistics")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Overview Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-activity fs-1 text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Activities</h6>
                            <h2 class="mb-0">@Model.Statistics.TotalActivities.ToString("N0")</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-people fs-1 text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Unique Users</h6>
                            <h2 class="mb-0">@Model.Statistics.UniqueUsers.ToString("N0")</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-box-arrow-in-right fs-1 text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Logins</h6>
                            <h2 class="mb-0">@Model.Statistics.TotalLogins.ToString("N0")</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-eye fs-1 text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Page Views</h6>
                            <h2 class="mb-0">@Model.Statistics.TotalPageViews.ToString("N0")</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pie-chart"></i> Activities by Type
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.ActivitiesByType.Any())
                    {
                        <canvas id="activityTypeChart" height="300"></canvas>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No data available</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock"></i> Activities by Hour
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.ActivitiesByHour.Any())
                    {
                        <canvas id="hourlyChart" height="300"></canvas>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Daily Trend -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up-arrow"></i> Daily Activity Trend
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.DailyActivities.Any())
                    {
                        <canvas id="dailyTrendChart" height="100"></canvas>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Users and Pages -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-trophy"></i> Most Active Users
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.TopActiveUsers.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var user in Model.Statistics.TopActiveUsers)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="@Url.Action("UserDetails", new { userId = user.UserId })" class="text-decoration-none">
                                            <i class="bi bi-person-circle"></i> @user.UserName
                                        </a>
                                        <br />
                                        <small class="text-muted">Last active: @user.LastActivity.ToString("MMM dd, HH:mm")</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@user.ActivityCount</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No data available</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-star"></i> Popular Pages
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.PopularPages.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var page in Model.Statistics.PopularPages)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="text-truncate" style="max-width: 400px;">
                                        <code class="text-primary">@(page.PageUrl)</code>
                                    </div>
                                    <span class="badge bg-success rounded-pill">@(page.ViewCount) views</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to Activities
            </a>
            <a href="@Url.Action("Export", new { startDate = Model.StartDate, endDate = Model.EndDate })" class="btn btn-success">
                <i class="bi bi-download"></i> Export Report
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Activity Type Chart
        @if (Model.Statistics.ActivitiesByType.Any())
        {
            <text>
            const activityTypeCtx = document.getElementById('activityTypeChart').getContext('2d');
            new Chart(activityTypeCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.ActivitiesByType.Keys)),
                    datasets: [{
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.ActivitiesByType.Values)),
                        backgroundColor: ['#0d6efd', '#198754', '#ffc107', '#dc3545', '#6c757d', '#0dcaf0']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            </text>
        }

        // Hourly Chart
        @if (Model.Statistics.ActivitiesByHour.Any())
        {
            <text>
            const hourlyCtx = document.getElementById('hourlyChart').getContext('2d');
            new Chart(hourlyCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.ActivitiesByHour.Keys)),
                    datasets: [{
                        label: 'Activities',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.ActivitiesByHour.Values)),
                        backgroundColor: '#0d6efd'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            </text>
        }

        // Daily Trend Chart
        @if (Model.Statistics.DailyActivities.Any())
        {
            <text>
            const dailyTrendCtx = document.getElementById('dailyTrendChart').getContext('2d');
            new Chart(dailyTrendCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.DailyActivities.Keys)),
                    datasets: [{
                        label: 'Activities',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.DailyActivities.Values)),
                        borderColor: '#0d6efd',
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
