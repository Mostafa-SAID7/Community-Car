@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.UserActivityIndexViewModel
@{
    ViewData["Title"] = Localizer["PageTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-shield-check"></i> @Localizer["PageTitle"]
            </h1>
            <p class="text-muted">@Localizer["TrackDescription"]</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-activity fs-2 text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["TotalActivities"]</h6>
                            <h3 class="mb-0">@Model.Stats.TotalActivities.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-people fs-2 text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["UniqueUsers"]</h6>
                            <h3 class="mb-0">@Model.Stats.UniqueUsers.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-calendar-day fs-2 text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["Today"]</h6>
                            <h3 class="mb-0">@Model.Stats.TodayActivities.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-graph-up fs-2 text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">@Localizer["AvgPerUser"]</h6>
                            <h3 class="mb-0">@((Model.Stats.UniqueUsers > 0 ? Model.Stats.TotalActivities / Model.Stats.UniqueUsers : 0).ToString("N0"))</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> @Localizer["Filters"]
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">@Localizer["SearchUser"]</label>
                        <input type="text" class="form-control" name="searchTerm" value="@Model.Filter.SearchTerm" placeholder="@Localizer["SearchPlaceholder"]" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">@Localizer["ActivityType"]</label>
                        <select class="form-select" name="activityType">
                            <option value="">@Localizer["AllTypes"]</option>
                            @foreach (var type in Model.Filter.AvailableActivityTypes)
                            {
                                <option value="@type" selected="@(Model.Filter.ActivityType == type)">@type</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">@Localizer["StartDate"]</label>
                        <input type="date" class="form-control" name="startDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">@Localizer["EndDate"]</label>
                        <input type="date" class="form-control" name="endDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> @Localizer["FilterButton"]
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> @Localizer["ClearButton"]
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Statistics")" class="btn btn-info">
                <i class="bi bi-graph-up"></i> @Localizer["ViewStatistics"]
            </a>
            <a href="@Url.Action("ActiveUsers")" class="btn btn-success">
                <i class="bi bi-person-check"></i> @Localizer["ActiveUsers"]
            </a>
            <a href="@Url.Action("Export", new { startDate = Model.Filter.StartDate, endDate = Model.Filter.EndDate })" class="btn btn-secondary">
                <i class="bi bi-download"></i> @Localizer["Export"]
            </a>
            <button type="button" class="btn btn-danger" onclick="bulkDelete()">
                <i class="bi bi-trash"></i> @Localizer["DeleteSelected"]
            </button>
        </div>
    </div>

    <!-- Activities Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> @Localizer["ActivityLog"]
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Activities.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll" onclick="toggleSelectAll(this)" />
                                </th>
                                <th>@Localizer["Timestamp"]</th>
                                <th>@Localizer["User"]</th>
                                <th>@Localizer["ActivityType"]</th>
                                <th>@Localizer["Description"]</th>
                                <th>@Localizer["IpAddress"]</th>
                                <th>@Localizer["Location"]</th>
                                <th>@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Activities)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="activity-checkbox" value="@activity.Id" />
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @activity.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
                                        </small>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("UserDetails", new { userId = activity.UserId })" class="text-decoration-none">
                                            <span class="badge bg-info">@activity.UserName</span>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(GetActivityTypeColor(activity.ActivityType))">
                                            <i class="bi bi-@(GetActivityTypeIcon(activity.ActivityType))"></i> @activity.ActivityType
                                        </span>
                                    </td>
                                    <td>
                                        @(activity.Description.Length > 50 ? activity.Description.Substring(0, 50) + "..." : activity.Description)
                                    </td>
                                    <td>
                                        <small class="text-muted font-monospace">@activity.IpAddress</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(activity.Location ?? "-")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", new { id = activity.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> @Localizer["View"]
                                            </a>
                                            <a href="@Url.Action("Timeline", new { userId = activity.UserId })" class="btn btn-outline-info">
                                                <i class="bi bi-clock-history"></i>
                                            </a>
                                            <form method="post" asp-action="Delete" asp-route-id="@activity.Id" class="d-inline" onsubmit="return confirm('@Localizer["ConfirmDelete"]');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Pagination.TotalPages > 1)
                {
                    <div class="card-footer bg-white">
                        <nav>
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(!Model.Pagination.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage - 1, pageSize = Model.Pagination.PageSize, searchTerm = Model.Filter.SearchTerm, activityType = Model.Filter.ActivityType, startDate = Model.Filter.StartDate, endDate = Model.Filter.EndDate })">
                                        @Localizer["Previous"]
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.Pagination.PageSize, searchTerm = Model.Filter.SearchTerm, activityType = Model.Filter.ActivityType, startDate = Model.Filter.StartDate, endDate = Model.Filter.EndDate })">
                                            @i
                                        </a>
                                    </li>
                                }

                                <li class="page-item @(!Model.Pagination.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage + 1, pageSize = Model.Pagination.PageSize, searchTerm = Model.Filter.SearchTerm, activityType = Model.Filter.ActivityType, startDate = Model.Filter.StartDate, endDate = Model.Filter.EndDate })">
                                        @Localizer["Next"]
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <div class="text-center text-muted mt-2">
                            <small>@string.Format(Localizer["ShowingEntries"].Value, (Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize + 1, Math.Min(Model.Pagination.CurrentPage * Model.Pagination.PageSize, Model.Pagination.TotalCount), Model.Pagination.TotalCount)</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <p class="text-muted mt-3">@Localizer["NoActivitiesFound"]</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleSelectAll(checkbox) {
            const checkboxes = document.querySelectorAll('.activity-checkbox');
            checkboxes.forEach(cb => cb.checked = checkbox.checked);
        }

        function bulkDelete() {
            const checkboxes = document.querySelectorAll('.activity-checkbox:checked');
            if (checkboxes.length === 0) {
                alert('@Localizer["SelectAtLeastOne"]');
                return;
            }

            if (!confirm(`@Localizer["ConfirmBulkDelete"]`.replace('{0}', checkboxes.length))) {
                return;
            }

            const ids = Array.from(checkboxes).map(cb => cb.value);
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("BulkDelete")';

            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);
            }

            ids.forEach(id => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'ids';
                input.value = id;
                form.appendChild(input);
            });

            document.body.appendChild(form);
            form.submit();
        }
    </script>
}

@functions {
    string GetActivityTypeIcon(string activityType)
    {
        return activityType.ToLower() switch
        {
            "login" => "box-arrow-in-right",
            "logout" => "box-arrow-right",
            "profileupdate" => "person-gear",
            "passwordchange" => "key",
            "emailverification" => "envelope-check",
            "pageview" => "eye",
            "search" => "search",
            "download" => "download",
            "upload" => "upload",
            "settings" => "gear",
            _ => "circle"
        };
    }

    string GetActivityTypeColor(string activityType)
    {
        return activityType.ToLower() switch
        {
            "login" => "success",
            "logout" => "secondary",
            "profileupdate" => "info",
            "passwordchange" => "warning",
            "emailverification" => "primary",
            "pageview" => "info",
            "search" => "primary",
            "download" => "success",
            "upload" => "warning",
            "settings" => "secondary",
            _ => "secondary"
        };
    }
}
