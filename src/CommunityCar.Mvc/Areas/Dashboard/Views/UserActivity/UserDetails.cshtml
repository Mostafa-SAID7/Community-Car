@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.UserActivityDetailsViewModel
@{
    ViewData["Title"] = $"Activity - {Model.UserName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Dashboard" })">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">User Activity</a></li>
                    <li class="breadcrumb-item active">@Model.UserName</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">
                <i class="bi bi-person-circle"></i> @Model.UserName's Activity
            </h1>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-activity fs-1 text-primary mb-2"></i>
                    <h6 class="text-muted">Total Activities</h6>
                    <h3 class="mb-0">@Model.Summary.TotalActivities.ToString("N0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-box-arrow-in-right fs-1 text-success mb-2"></i>
                    <h6 class="text-muted">Logins</h6>
                    <h3 class="mb-0">@Model.Summary.LoginCount.ToString("N0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-eye fs-1 text-info mb-2"></i>
                    <h6 class="text-muted">Page Views</h6>
                    <h3 class="mb-0">@Model.Summary.PageViewCount.ToString("N0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history fs-1 text-warning mb-2"></i>
                    <h6 class="text-muted">Last Activity</h6>
                    <h6 class="mb-0">@(Model.Summary.LastActivity?.ToString("MMM dd, HH:mm") ?? "N/A")</h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity Breakdown -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pie-chart"></i> Activity Breakdown
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Summary.ActivitiesByType.Any())
                    {
                        @foreach (var item in Model.Summary.ActivitiesByType.OrderByDescending(x => x.Value))
                        {
                            var percentage = Model.Summary.TotalActivities > 0 
                                ? (item.Value * 100.0 / Model.Summary.TotalActivities) 
                                : 0;
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>@item.Key</span>
                                    <span><strong>@item.Value</strong> (@percentage.ToString("F1")%)</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No data available</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt"></i> Most Used IP Addresses
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Summary.MostUsedIpAddresses.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var ip in Model.Summary.MostUsedIpAddresses)
                            {
                                <div class="list-group-item">
                                    <code class="text-primary">@ip</code>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to All Activities
            </a>
            <a href="@Url.Action("Timeline", new { userId = Model.UserId })" class="btn btn-info">
                <i class="bi bi-clock-history"></i> View Timeline
            </a>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Recent Activities
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Activities.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Timestamp</th>
                                <th>Activity Type</th>
                                <th>Description</th>
                                <th>IP Address</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Activities)
                            {
                                <tr>
                                    <td>
                                        <small class="text-muted">
                                            @activity.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@activity.ActivityType</span>
                                    </td>
                                    <td>@activity.Description</td>
                                    <td>
                                        <small class="text-muted font-monospace">@activity.IpAddress</small>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = activity.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Pagination.TotalPages > 1)
                {
                    <div class="card-footer bg-white">
                        <nav>
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(!Model.Pagination.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("UserDetails", new { userId = Model.UserId, page = Model.Pagination.CurrentPage - 1, pageSize = Model.Pagination.PageSize })">
                                        Previous
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("UserDetails", new { userId = Model.UserId, page = i, pageSize = Model.Pagination.PageSize })">
                                            @i
                                        </a>
                                    </li>
                                }

                                <li class="page-item @(!Model.Pagination.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("UserDetails", new { userId = Model.UserId, page = Model.Pagination.CurrentPage + 1, pageSize = Model.Pagination.PageSize })">
                                        Next
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <div class="text-center text-muted mt-2">
                            <small>Showing @((Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize + 1) to @Math.Min(Model.Pagination.CurrentPage * Model.Pagination.PageSize, Model.Pagination.TotalCount) of @Model.Pagination.TotalCount entries</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <p class="text-muted mt-3">No activities found for this user.</p>
                </div>
            }
        </div>
    </div>
</div>
