@model CommunityCar.Domain.DTOs.Dashboard.UserActivityDto
@{
    ViewData["Title"] = "Activity Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Dashboard" })">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">User Activity</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">
                <i class="bi bi-info-circle"></i> Activity Details
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text"></i> Activity Information
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th width="200">Activity ID:</th>
                                <td><code>@Model.Id</code></td>
                            </tr>
                            <tr>
                                <th>User:</th>
                                <td>
                                    <a href="@Url.Action("UserDetails", new { userId = Model.UserId })" class="text-decoration-none">
                                        <span class="badge bg-info">@Model.UserName</span>
                                    </a>
                                    <br />
                                    <small class="text-muted">User ID: @Model.UserId</small>
                                </td>
                            </tr>
                            <tr>
                                <th>Activity Type:</th>
                                <td>
                                    <span class="badge bg-@(GetActivityTypeColor(Model.ActivityType)) fs-6">
                                        <i class="bi bi-@(GetActivityTypeIcon(Model.ActivityType))"></i> @Model.ActivityType
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Description:</th>
                                <td>@Model.Description</td>
                            </tr>
                            <tr>
                                <th>Timestamp:</th>
                                <td>
                                    @Model.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' HH:mm:ss")
                                    <br />
                                    <small class="text-muted">(@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss") UTC)</small>
                                </td>
                            </tr>
                            <tr>
                                <th>IP Address:</th>
                                <td><code>@Model.IpAddress</code></td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.Location))
                            {
                                <tr>
                                    <th>Location:</th>
                                    <td>@Model.Location</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.UserAgent))
                            {
                                <tr>
                                    <th>User Agent:</th>
                                    <td><small class="text-muted font-monospace">@Model.UserAgent</small></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.Metadata != null && Model.Metadata.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-code-square"></i> Additional Data
                        </h5>
                    </div>
                    <div class="card-body">
                        <pre class="bg-light p-3 rounded"><code>@System.Text.Json.JsonSerializer.Serialize(Model.Metadata, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</code></pre>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-gear"></i> Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a href="@Url.Action("UserDetails", new { userId = Model.UserId })" class="btn btn-outline-info">
                            <i class="bi bi-person"></i> View User Activities
                        </a>
                        <a href="@Url.Action("Timeline", new { userId = Model.UserId })" class="btn btn-outline-secondary">
                            <i class="bi bi-clock-history"></i> View Timeline
                        </a>
                        <form method="post" asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('Are you sure you want to delete this activity?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Delete Activity
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Quick Info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Time Ago</small>
                        <strong>@GetTimeAgo(Model.CreatedAt)</strong>
                    </div>
                    <div>
                        <small class="text-muted d-block">Activity Type</small>
                        <strong>@Model.ActivityType</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetActivityTypeIcon(string activityType)
    {
        return activityType.ToLower() switch
        {
            "login" => "box-arrow-in-right",
            "logout" => "box-arrow-right",
            "profileupdate" => "person-gear",
            "passwordchange" => "key",
            "emailverification" => "envelope-check",
            "pageview" => "eye",
            "search" => "search",
            "download" => "download",
            "upload" => "upload",
            "settings" => "gear",
            _ => "circle"
        };
    }

    string GetActivityTypeColor(string activityType)
    {
        return activityType.ToLower() switch
        {
            "login" => "success",
            "logout" => "secondary",
            "profileupdate" => "info",
            "passwordchange" => "warning",
            "emailverification" => "primary",
            "pageview" => "info",
            "search" => "primary",
            "download" => "success",
            "upload" => "warning",
            "settings" => "secondary",
            _ => "secondary"
        };
    }

    string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;

        if (timeSpan.TotalMinutes < 1)
            return "Just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hours ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} days ago";
        if (timeSpan.TotalDays < 30)
            return $"{(int)(timeSpan.TotalDays / 7)} weeks ago";
        if (timeSpan.TotalDays < 365)
            return $"{(int)(timeSpan.TotalDays / 30)} months ago";
        return $"{(int)(timeSpan.TotalDays / 365)} years ago";
    }
}
