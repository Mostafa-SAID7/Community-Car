@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.ActivityTrendsViewModel
@{
    ViewData["Title"] = "Activity Trends";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Activity Trends</h2>
            <p class="text-muted mb-0">User activity and audit log trends</p>
        </div>
        <div>
            <a asp-action="Index" asp-route-days="@Model.SelectedDays" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Overview
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary">@Model.AuditStatistics.Values.Sum()</h3>
                    <p class="text-muted mb-0">Total Activities</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info">@Model.AuditStatistics.Count</h3>
                    <p class="text-muted mb-0">Activity Categories</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success">@(Model.AuditStatistics.Any() ? (Model.AuditStatistics.Values.Sum() / (double)Model.SelectedDays).ToString("F1") : "0")</h3>
                    <p class="text-muted mb-0">Avg Per Day</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Activity by Category</h5>
        </div>
        <div class="card-body">
            @if (Model.AuditStatistics.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th class="text-end">Count</th>
                                <th class="text-end">Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var total = Model.AuditStatistics.Values.Sum();
                            }
                            @foreach (var stat in Model.AuditStatistics.OrderByDescending(x => x.Value))
                            {
                                var percentage = total > 0 ? (stat.Value / (double)total * 100) : 0;
                                <tr>
                                    <td><strong>@stat.Key</strong></td>
                                    <td class="text-end">@stat.Value</td>
                                    <td class="text-end">
                                        <div class="d-flex align-items-center justify-content-end">
                                            <span class="me-2">@percentage.ToString("F1")%</span>
                                            <div class="progress" style="width: 100px; height: 8px;">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: @percentage%"></div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No activity data available for the selected period.</p>
            }
        </div>
    </div>
</div>
