@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.KPITrendsViewModel
@{
    ViewData["Title"] = "KPI Trends";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">KPI Trends</h2>
            <p class="text-muted mb-0">Detailed KPI performance trends</p>
        </div>
        <div>
            <a asp-action="Index" asp-route-days="@Model.SelectedDays" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Overview
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary">@Model.Summary.TotalKPIs</h3>
                    <p class="text-muted mb-0">Total KPIs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success">@Model.Summary.TrendingUp</h3>
                    <p class="text-muted mb-0">Trending Up</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-danger">@Model.Summary.TrendingDown</h3>
                    <p class="text-muted mb-0">Trending Down</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-muted">@Model.Summary.Stable</h3>
                    <p class="text-muted mb-0">Stable</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">All KPIs</h5>
        </div>
        <div class="card-body">
            @if (Model.AllKPIs.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Value</th>
                                <th>Target</th>
                                <th>Trend</th>
                                <th>Change</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kpi in Model.AllKPIs)
                            {
                                <tr>
                                    <td><strong>@kpi.Name</strong></td>
                                    <td>@kpi.Value.ToString("F2")</td>
                                    <td>@(kpi.Target?.ToString("F2") ?? "N/A")</td>
                                    <td>
                                        @if (kpi.Trend == "up")
                                        {
                                            <span class="badge bg-success"><i class="bi bi-arrow-up"></i> Up</span>
                                        }
                                        else if (kpi.Trend == "down")
                                        {
                                            <span class="badge bg-danger"><i class="bi bi-arrow-down"></i> Down</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-arrow-right"></i> Stable</span>
                                        }
                                    </td>
                                    <td>
                                        @if (kpi.ChangePercentage.HasValue)
                                        {
                                            <span class="@(kpi.ChangePercentage > 0 ? "text-success" : kpi.ChangePercentage < 0 ? "text-danger" : "text-muted")">
                                                @kpi.ChangePercentage.Value.ToString("F1")%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No KPI data available.</p>
            }
        </div>
    </div>
</div>
