@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.TrendIndexViewModel
@{
    ViewData["Title"] = "Trends Overview";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Trends Overview</h2>
            <p class="text-muted mb-0">Monitor trends across KPIs, security, and activity</p>
        </div>
        <div>
            <select class="form-select" id="daysFilter" onchange="changeDays(this.value)">
                <option value="7" selected="@(Model.SelectedDays == 7)">Last 7 Days</option>
                <option value="30" selected="@(Model.SelectedDays == 30)">Last 30 Days</option>
                <option value="90" selected="@(Model.SelectedDays == 90)">Last 90 Days</option>
            </select>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="card-title mb-0">Total KPIs</h6>
                        <i class="bi bi-graph-up text-primary fs-4"></i>
                    </div>
                    <h3 class="mb-2">@Model.KPISummary.TotalKPIs</h3>
                    <div class="d-flex justify-content-between">
                        <small class="text-success">↑ @Model.KPISummary.TrendingUp</small>
                        <small class="text-danger">↓ @Model.KPISummary.TrendingDown</small>
                        <small class="text-muted">→ @Model.KPISummary.Stable</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="card-title mb-0">Security Alerts</h6>
                        <i class="bi bi-shield-exclamation text-warning fs-4"></i>
                    </div>
                    <h3 class="mb-2">@Model.SecurityStatistics.TotalAlerts</h3>
                    <small class="text-muted">@Model.SecurityStatistics.UnresolvedAlerts unresolved</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="card-title mb-0">Audit Logs</h6>
                        <i class="bi bi-file-text text-info fs-4"></i>
                    </div>
                    <h3 class="mb-2">@Model.AuditStatistics.Values.Sum()</h3>
                    <small class="text-muted">@Model.AuditStatistics.Count categories</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="card-title mb-0">Resolution Rate</h6>
                        <i class="bi bi-check-circle text-success fs-4"></i>
                    </div>
                    <h3 class="mb-2">@((Model.SecurityStatistics.TotalAlerts > 0 ? (Model.SecurityStatistics.ResolvedAlerts / (double)Model.SecurityStatistics.TotalAlerts * 100) : 0).ToString("F1"))%</h3>
                    <small class="text-muted">@Model.SecurityStatistics.ResolvedAlerts resolved</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">KPI Trends</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="text-center p-3">
                                <h4 class="text-success">@Model.KPISummary.TrendingUp</h4>
                                <small class="text-muted">Trending Up</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center p-3">
                                <h4 class="text-danger">@Model.KPISummary.TrendingDown</h4>
                                <small class="text-muted">Trending Down</small>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="KPIs" asp-route-days="@Model.SelectedDays" class="btn btn-outline-primary w-100">
                            View Detailed KPI Trends
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Security Trends</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="text-center p-3">
                                <h4 class="text-warning">@Model.SecurityStatistics.UnresolvedAlerts</h4>
                                <small class="text-muted">Unresolved</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center p-3">
                                <h4 class="text-success">@Model.SecurityStatistics.ResolvedAlerts</h4>
                                <small class="text-muted">Resolved</small>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Security" asp-route-days="@Model.SelectedDays" class="btn btn-outline-primary w-100">
                            View Security Trends
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Activity Trends</h5>
        </div>
        <div class="card-body">
            @if (Model.AuditStatistics.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th class="text-end">Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in Model.AuditStatistics.OrderByDescending(x => x.Value).Take(10))
                            {
                                <tr>
                                    <td>@stat.Key</td>
                                    <td class="text-end">@stat.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No activity data available for the selected period.</p>
            }
            <div class="mt-3">
                <a asp-action="Activity" asp-route-days="@Model.SelectedDays" class="btn btn-outline-primary w-100">
                    View Detailed Activity Trends
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changeDays(days) {
            window.location.href = '@Url.Action("Index")?days=' + days;
        }
    </script>
}
