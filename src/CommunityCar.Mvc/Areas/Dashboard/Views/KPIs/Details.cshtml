@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.KPIDetailsViewModel
@{
    ViewData["Title"] = $"{Model.KPI.Name} - KPI Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">KPIs</a></li>
                    <li class="breadcrumb-item active">@Model.KPI.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">@Model.KPI.Name</h1>
                <div>
                    <a asp-action="UpdateValue" asp-route-id="@Model.KPI.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Update Value
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.KPI.Id" class="btn btn-warning">
                        <i class="fas fa-cog"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">KPI Information</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Code:</strong>
                            <p><code>@Model.KPI.Code</code></p>
                        </div>
                        <div class="col-md-6">
                            <strong>Category:</strong>
                            <p>
                                @if (!string.IsNullOrEmpty(Model.KPI.Category))
                                {
                                    <span class="badge badge-secondary">@Model.KPI.Category</span>
                                }
                                else
                                {
                                    <span class="text-muted">No category</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Current Value:</strong>
                            <p class="h4 text-primary">@Model.KPI.Value.ToString("N2") @Model.KPI.Unit</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Previous Value:</strong>
                            <p>
                                @if (Model.KPI.PreviousValue.HasValue)
                                {
                                    <span>@Model.KPI.PreviousValue.Value.ToString("N2") @Model.KPI.Unit</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Target:</strong>
                            <p>
                                @if (Model.KPI.Target.HasValue)
                                {
                                    <span>@Model.KPI.Target.Value.ToString("N2") @Model.KPI.Unit</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not set</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Trend:</strong>
                            <p>
                                @if (Model.KPI.TrendDirection == "up")
                                {
                                    <i class="fas fa-arrow-up text-success"></i>
                                    <span class="text-success">Trending Up</span>
                                    @if (Model.KPI.ChangePercentage.HasValue)
                                    {
                                        <small>(@Model.KPI.ChangePercentage.Value.ToString("N1")%)</small>
                                    }
                                }
                                else if (Model.KPI.TrendDirection == "down")
                                {
                                    <i class="fas fa-arrow-down text-danger"></i>
                                    <span class="text-danger">Trending Down</span>
                                    @if (Model.KPI.ChangePercentage.HasValue)
                                    {
                                        <small>(@Model.KPI.ChangePercentage.Value.ToString("N1")%)</small>
                                    }
                                }
                                else
                                {
                                    <i class="fas fa-minus text-secondary"></i>
                                    <span class="text-secondary">Stable</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.KPI.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>Description:</strong>
                                <p>@Model.KPI.Description</p>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <strong>Last Updated:</strong>
                            <p><small>@Model.KPI.LastUpdated.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                        </div>
                        <div class="col-md-6">
                            <strong>Created:</strong>
                            <p><small>@Model.KPI.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.TrendData.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Trend Chart</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="trendChart"></canvas>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            @if (Model.RelatedKPIs.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Related KPIs</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var relatedKPI in Model.RelatedKPIs)
                            {
                                <a asp-action="Details" asp-route-id="@relatedKPI.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@relatedKPI.Name</h6>
                                        @if (relatedKPI.TrendDirection == "up")
                                        {
                                            <small><i class="fas fa-arrow-up text-success"></i></small>
                                        }
                                        else if (relatedKPI.TrendDirection == "down")
                                        {
                                            <small><i class="fas fa-arrow-down text-danger"></i></small>
                                        }
                                        else
                                        {
                                            <small><i class="fas fa-minus text-secondary"></i></small>
                                        }
                                    </div>
                                    <p class="mb-1"><strong>@relatedKPI.Value.ToString("N2")</strong> @relatedKPI.Unit</p>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="UpdateValue" asp-route-id="@Model.KPI.Id" class="btn btn-primary btn-block">
                            <i class="fas fa-edit"></i> Update Value
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.KPI.Id" class="btn btn-warning btn-block">
                            <i class="fas fa-cog"></i> Edit KPI
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.KPI.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this KPI?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-block w-100">
                                <i class="fas fa-trash"></i> Delete KPI
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (Model.TrendData.Any())
    {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            const ctx = document.getElementById('trendChart').getContext('2d');
            const trendData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TrendData));
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Object.keys(trendData),
                    datasets: [{
                        label: '@Model.KPI.Name',
                        data: Object.values(trendData),
                        borderColor: 'rgb(75, 192, 192)',
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false
                        }
                    }
                }
            });
        </script>
    }
}
