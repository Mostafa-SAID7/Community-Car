@model CommunityCar.Web.Areas.Dashboard.ViewModels.KPIIndexViewModel
@{
    ViewData["Title"] = "KPIs - Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Key Performance Indicators</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create KPI
                </a>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total KPIs</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Summary.TotalKPIs</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active KPIs</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Summary.ActiveKPIs</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">On Target</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Summary.KPIsOnTarget</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-bullseye fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Below Target</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Summary.KPIsBelowTarget</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filters</h6>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="searchTerm">Search</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                   value="@Model.Filter.SearchTerm" placeholder="Search by name or code...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="category">Category</label>
                            <select class="form-control" id="category" name="category">
                                <option value="">All Categories</option>
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat" selected="@(cat == Model.Filter.Category)">@cat</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isActive">Status</label>
                            <select class="form-control" id="isActive" name="isActive">
                                <option value="">All</option>
                                <option value="true" selected="@(Model.Filter.IsActive == true)">Active</option>
                                <option value="false" selected="@(Model.Filter.IsActive == false)">Inactive</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Filter
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-redo"></i> Reset
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- KPIs Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">KPI List</h6>
        </div>
        <div class="card-body">
            @if (Model.KPIs.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Category</th>
                                <th>Value</th>
                                <th>Target</th>
                                <th>Achievement</th>
                                <th>Trend</th>
                                <th>Status</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kpi in Model.KPIs)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@kpi.Id" class="font-weight-bold">
                                            @kpi.Name
                                        </a>
                                    </td>
                                    <td><code>@kpi.Code</code></td>
                                    <td><span class="badge badge-secondary">@kpi.Category</span></td>
                                    <td class="text-right">
                                        <strong>@kpi.Value.ToString("N2")</strong> @kpi.Unit
                                    </td>
                                    <td class="text-right">
                                        @if (kpi.Target.HasValue)
                                        {
                                            <span>@kpi.Target.Value.ToString("N2") @kpi.Unit</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not set</span>
                                        }
                                    </td>
                                    <td>
                                        @if (kpi.Target.HasValue && kpi.TargetAchievementPercentage.HasValue)
                                        {
                                            var achievement = kpi.TargetAchievementPercentage.Value;
                                            var progressClass = achievement >= 100 ? "bg-success" : achievement >= 75 ? "bg-info" : achievement >= 50 ? "bg-warning" : "bg-danger";
                                            var displayWidth = Math.Min(achievement, 100.0);
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @progressClass" role="progressbar" 
                                                     style="width: @(displayWidth)%" 
                                                     aria-valuenow="@achievement" aria-valuemin="0" aria-valuemax="100">
                                                    @achievement.ToString("N0")%
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (kpi.TrendDirection == "up")
                                        {
                                            <i class="fas fa-arrow-up text-success"></i>
                                            @if (kpi.ChangePercentage.HasValue)
                                            {
                                                <small>@kpi.ChangePercentage.Value.ToString("N1")%</small>
                                            }
                                        }
                                        else if (kpi.TrendDirection == "down")
                                        {
                                            <i class="fas fa-arrow-down text-danger"></i>
                                            @if (kpi.ChangePercentage.HasValue)
                                            {
                                                <small>@kpi.ChangePercentage.Value.ToString("N1")%</small>
                                            }
                                        }
                                        else
                                        {
                                            <i class="fas fa-minus text-secondary"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (kpi.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@kpi.LastUpdated.ToString("yyyy-MM-dd HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@kpi.Id" 
                                               class="btn btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="UpdateValue" asp-route-id="@kpi.Id" 
                                               class="btn btn-primary" title="Update Value">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@kpi.Id" 
                                               class="btn btn-warning" title="Edit">
                                                <i class="fas fa-cog"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Pagination.TotalPages > 1)
                {
                    <nav aria-label="KPI pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@(Model.Pagination.CurrentPage - 1)"
                                   asp-route-category="@Model.Filter.Category"
                                   asp-route-isActive="@Model.Filter.IsActive"
                                   asp-route-searchTerm="@Model.Filter.SearchTerm">
                                    Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-page="@i"
                                       asp-route-category="@Model.Filter.Category"
                                       asp-route-isActive="@Model.Filter.IsActive"
                                       asp-route-searchTerm="@Model.Filter.SearchTerm">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@(Model.Pagination.CurrentPage + 1)"
                                   asp-route-category="@Model.Filter.Category"
                                   asp-route-isActive="@Model.Filter.IsActive"
                                   asp-route-searchTerm="@Model.Filter.SearchTerm">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No KPIs found. 
                    <a asp-action="Create" class="alert-link">Create your first KPI</a>
                </div>
            }
        </div>
    </div>
</div>
