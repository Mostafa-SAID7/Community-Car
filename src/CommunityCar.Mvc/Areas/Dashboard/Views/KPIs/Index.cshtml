@{
    ViewData["Title"] = "KPIs Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Key Performance Indicators</h1>
            <p class="text-muted small">Monitor core metrics, growth trends, and content health across the entire platform.</p>
        </div>
        <div class="dropdown">
            <button class="btn btn-white shadow-sm border px-3 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="far fa-calendar-alt me-2 text-primary"></i>This Month
            </button>
            <ul class="dropdown-menu border-0 shadow">
                <li><a class="dropdown-item" href="#">Today</a></li>
                <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Custom Range</a></li>
            </ul>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 text-primary me-3">
                        <i class="fas fa-users fa-lg"></i>
                    </div>
                    <div>
                        <div class="text-xs text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">Active Users</div>
                        <div class="h4 mb-0 fw-bold">1,248</div>
                        <div class="text-success small fw-medium mt-1"><i class="fas fa-arrow-up me-1"></i>+12.5%</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-4 text-success me-3">
                        <i class="fas fa-file-alt fa-lg"></i>
                    </div>
                    <div>
                        <div class="text-xs text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">New Content</div>
                        <div class="h4 mb-0 fw-bold">342</div>
                        <div class="text-success small fw-medium mt-1"><i class="fas fa-arrow-up me-1"></i>+8.2%</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-4 text-warning me-3">
                        <i class="fas fa-star fa-lg"></i>
                    </div>
                    <div>
                        <div class="text-xs text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">Engagement</div>
                        <div class="h4 mb-0 fw-bold">4.8k</div>
                        <div class="text-danger small fw-medium mt-1"><i class="fas fa-arrow-down me-1"></i>-2.1%</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 p-3 rounded-4 text-info me-3">
                        <i class="fas fa-clock fa-lg"></i>
                    </div>
                    <div>
                        <div class="text-xs text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">Avg. Session</div>
                        <div class="h4 mb-0 fw-bold">4m 12s</div>
                        <div class="text-success small fw-medium mt-1"><i class="fas fa-arrow-up me-1"></i>+15.3%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">Performance Trends</h6>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-secondary active">Line</button>
                        <button class="btn btn-outline-secondary">Bar</button>
                    </div>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="py-5">
                        <i class="fas fa-chart-line fa-4x text-gray-200 mb-3 opacity-50"></i>
                        <h5 class="text-muted">Interactive growth charts will appear here</h5>
                        <p class="text-muted small">Integrating with Chart.js to visualize daily active users and content volume.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="m-0 fw-bold text-primary">Context Breakdown</h6>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small fw-medium text-muted">User Growth</span>
                            <span class="small fw-bold">75%</span>
                        </div>
                        <div class="progress rounded-pill" style="height: 6px;">
                            <div class="progress-bar bg-primary rounded-pill" role="progressbar" style="width: 75%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small fw-medium text-muted">Content Quality</span>
                            <span class="small fw-bold">92%</span>
                        </div>
                        <div class="progress rounded-pill" style="height: 6px;">
                            <div class="progress-bar bg-success rounded-pill" role="progressbar" style="width: 92%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small fw-medium text-muted">Report Resolution</span>
                            <span class="small fw-bold">48%</span>
                        </div>
                        <div class="progress rounded-pill" style="height: 6px;">
                            <div class="progress-bar bg-warning rounded-pill" role="progressbar" style="width: 48%"></div>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <button class="btn btn-light btn-sm rounded-pill px-4 text-muted">View More Insights</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
