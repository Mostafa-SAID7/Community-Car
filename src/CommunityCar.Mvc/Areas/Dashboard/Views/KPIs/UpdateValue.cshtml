@model CommunityCar.Web.Areas.Dashboard.ViewModels.UpdateKPIValueViewModel
@{
    ViewData["Title"] = "Update KPI Value";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">KPIs</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></li>
                    <li class="breadcrumb-item active">Update Value</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Update KPI Value</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>KPI:</strong> @Model.Name<br />
                        <strong>Current Value:</strong> @Model.CurrentValue.ToString("N2") @Model.Unit
                    </div>

                    <form asp-action="UpdateValue" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Name" />
                        <input type="hidden" asp-for="CurrentValue" />
                        <input type="hidden" asp-for="Unit" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="NewValue" class="form-label">New Value</label>
                            <div class="input-group">
                                <input asp-for="NewValue" class="form-control form-control-lg" type="number" step="0.01" autofocus />
                                <span class="input-group-text">@Model.Unit</span>
                            </div>
                            <span asp-validation-for="NewValue" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-save"></i> Update Value
                            </button>
                        </div>

                        <div class="form-group mt-2">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary w-100">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
