@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.CreateKPIViewModel
@{
    ViewData["Title"] = "Create KPI";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">KPIs</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Create New KPI</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Total Users" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Code" class="form-label"></label>
                            <input asp-for="Code" class="form-control text-uppercase" id="kpiCode" placeholder="e.g., TOTAL_USERS" pattern="[A-Z0-9_]+" />
                            <small class="form-text text-muted">Code must contain only uppercase letters, numbers, and underscores.</small>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Value" class="form-label"></label>
                                    <input asp-for="Value" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Value" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Unit" class="form-label"></label>
                                    <input asp-for="Unit" class="form-control" placeholder="e.g., users, %, $" />
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" list="categoryList" placeholder="Select or type a new category" />
                            <datalist id="categoryList">
                                @foreach (var category in Model.AvailableCategories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </datalist>
                            <small class="form-text text-muted">Select from existing categories or type a new category name.</small>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create KPI
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const codeInput = document.getElementById('kpiCode');
            
            if (codeInput) {
                // Auto-format to uppercase and filter invalid characters
                codeInput.addEventListener('input', function(e) {
                    let value = e.target.value;
                    // Convert to uppercase and remove invalid characters
                    value = value.toUpperCase().replace(/[^A-Z0-9_]/g, '');
                    e.target.value = value;
                });

                // Prevent paste of invalid characters
                codeInput.addEventListener('paste', function(e) {
                    e.preventDefault();
                    const pastedText = (e.clipboardData || window.clipboardData).getData('text');
                    const cleanedText = pastedText.toUpperCase().replace(/[^A-Z0-9_]/g, '');
                    document.execCommand('insertText', false, cleanedText);
                });

                // Validate on form submit
                const form = codeInput.closest('form');
                if (form) {
                    form.addEventListener('submit', function(e) {
                        const codeValue = codeInput.value;
                        const validPattern = /^[A-Z0-9_]+$/;
                        
                        if (codeValue && !validPattern.test(codeValue)) {
                            e.preventDefault();
                            alert('Code must contain only uppercase letters, numbers, and underscores.');
                            codeInput.focus();
                            return false;
                        }
                    });
                }
            }
        });
    </script>
}
