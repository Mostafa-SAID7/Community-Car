@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.Dashboard.DashboardSummaryViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Dashboard"];
}

<div class="container-fluid py-4">
    <!-- Dashboard Header -->
    <div class="dashboard-page-header">
        <div class="dashboard-header-content">
            <div class="dashboard-header-text">
                <h1 class="dashboard-title">@Localizer["Dashboard Overview"]</h1>
                <p class="dashboard-subtitle">@Localizer["Welcome back! Here's what's happening."]</p>
            </div>
            <div class="dashboard-header-actions">
                <button class="btn btn-outline-secondary dashboard-action-btn" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-2"></i>@Localizer["Refresh"]
                </button>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle dashboard-action-btn" data-bs-toggle="dropdown">
                        <i class="fas fa-download me-2"></i>@Localizer["Export"]
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("ExportReport", new { format = "csv" })">
                            <i class="fas fa-file-csv me-2"></i>CSV
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ExportReport", new { format = "json" })">
                            <i class="fas fa-file-code me-2"></i>JSON
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ExportReport", new { format = "pdf" })">
                            <i class="fas fa-file-pdf me-2"></i>PDF
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Navigation Tabs -->
    <div class="dashboard-nav-tabs">
        <div class="dashboard-tabs-container">
            <a href="@Url.Action("Index", "Dashboard", new { area = "Dashboard" })" 
               class="dashboard-tab @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <i class="fas fa-chart-line me-2"></i>
                <span>@Localizer["Overview"]</span>
            </a>
            <a href="@Url.Action("Index", "KPIs", new { area = "Dashboard" })" 
               class="dashboard-tab @(ViewContext.RouteData.Values["controller"]?.ToString() == "KPIs" ? "active" : "")">
                <i class="fas fa-chart-bar me-2"></i>
                <span>@Localizer["KPIs"]</span>
            </a>
            <a href="@Url.Action("Index", "Trends", new { area = "Dashboard" })" 
               class="dashboard-tab @(ViewContext.RouteData.Values["controller"]?.ToString() == "Trends" ? "active" : "")">
                <i class="fas fa-chart-area me-2"></i>
                <span>@Localizer["Trends"]</span>
            </a>
            <a href="@Url.Action("Index", "Widgets", new { area = "Dashboard" })" 
               class="dashboard-tab @(ViewContext.RouteData.Values["controller"]?.ToString() == "Widgets" ? "active" : "")">
                <i class="fas fa-th me-2"></i>
                <span>@Localizer["Widgets"]</span>
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border border-primary shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-icon bg-primary-subtle text-primary rounded-3 p-3">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold">@Localizer["Total Users"]</div>
                            <div class="h3 mb-0 fw-bold">@Model.TotalUsers.ToString("N0")</div>
                            <small class="text-success">
                                <i class="fas fa-arrow-up me-1"></i>@Model.UserGrowthPercentage.ToString("F1")% @Localizer["from last month"]
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border border-success shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-icon bg-success-subtle text-success rounded-3 p-3">
                                <i class="fas fa-user-friends fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold">@Localizer["Friendships"]</div>
                            <div class="h3 mb-0 fw-bold">@Model.TotalFriendships.ToString("N0")</div>
                            <small class="text-success">
                                <i class="fas fa-arrow-up me-1"></i>8% @Localizer["from last month"]
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border border-warning shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-icon bg-warning-subtle text-warning rounded-3 p-3">
                                <i class="fas fa-calendar-alt fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold">@Localizer["Active Events"]</div>
                            <div class="h3 mb-0 fw-bold">@Model.ActiveEvents.ToString("N0")</div>
                            <small class="text-info">
                                <i class="fas fa-calendar me-1"></i>@Localizer["This month"]
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border border-info shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-icon bg-info-subtle text-info rounded-3 p-3">
                                <i class="fas fa-heart-pulse fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small text-uppercase fw-bold">@Localizer["System Health"]</div>
                            <div class="h3 mb-0 fw-bold">@Model.SystemHealth%</div>
                            <small class="text-success">
                                <i class="fas fa-check-circle me-1"></i>@Localizer["All systems operational"]
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Metrics Row -->
    <div class="row g-4 mb-4">
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-primary border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small text-uppercase fw-bold mb-1">@Localizer["Total Posts"]</div>
                    <div class="h4 mb-0 fw-bold text-primary">@Model.TotalPosts.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-info border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small text-uppercase fw-bold mb-1">@Localizer["Questions"]</div>
                    <div class="h4 mb-0 fw-bold text-info">@Model.TotalQuestions.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-success border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small text-uppercase fw-bold mb-1">@Localizer["Groups"]</div>
                    <div class="h4 mb-0 fw-bold text-success">@Model.TotalGroups.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-warning border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small text-uppercase fw-bold mb-1">@Localizer["Reviews"]</div>
                    <div class="h4 mb-0 fw-bold text-warning">@Model.TotalReviews.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-danger border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small text-uppercase fw-bold mb-1">@Localizer["Guides"]</div>
                    <div class="h4 mb-0 fw-bold text-danger">@Model.TotalGuides.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-start border-secondary border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small text-uppercase fw-bold mb-1">@Localizer["News"]</div>
                    <div class="h4 mb-0 fw-bold text-secondary">@Model.TotalNews.ToString("N0")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column: Weekly Activity, User Growth, Recent Activity -->
        <div class="col-xl-8">
            <!-- Weekly Activity Chart -->
            <div class="card border border-primary shadow-sm mb-4">
                <div class="card-header bg-light border-bottom py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">@Localizer["Weekly Activity"]</h5>
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-secondary active">@Localizer["Week"]</button>
                            <button type="button" class="btn btn-outline-secondary">@Localizer["Month"]</button>
                            <button type="button" class="btn btn-outline-secondary">@Localizer["Year"]</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="activityChart" height="80"></canvas>
                </div>
            </div>

            <!-- User Growth Trend Chart -->
            <div class="card border border-success shadow-sm mb-4">
                <div class="card-header bg-light border-bottom py-3">
                    <h5 class="mb-0 fw-bold">@Localizer["User Growth Trend"]</h5>
                </div>
                <div class="card-body">
                    <canvas id="growthChart" height="80"></canvas>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card border border-warning shadow-sm">
                <div class="card-header bg-light border-bottom py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">@Localizer["Recent Activity"]</h5>
                        <a asp-area="Dashboard" asp-controller="AuditLogs" asp-action="Index" class="btn btn-sm btn-outline-danger">
                            @Localizer["View All"]
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Localizer["Time"]</th>
                                    <th>@Localizer["User"]</th>
                                    <th>@Localizer["Action"]</th>
                                    <th>@Localizer["Status"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><small class="text-muted">@DateTime.Now.AddMinutes(-5).ToString("HH:mm")</small></td>
                                    <td>Admin User</td>
                                    <td>Updated system settings</td>
                                    <td><span class="badge bg-success">Success</span></td>
                                </tr>
                                <tr>
                                    <td><small class="text-muted">@DateTime.Now.AddMinutes(-15).ToString("HH:mm")</small></td>
                                    <td>System</td>
                                    <td>Database backup completed</td>
                                    <td><span class="badge bg-info">Info</span></td>
                                </tr>
                                <tr>
                                    <td><small class="text-muted">@DateTime.Now.AddMinutes(-30).ToString("HH:mm")</small></td>
                                    <td>Admin User</td>
                                    <td>Created new user account</td>
                                    <td><span class="badge bg-success">Success</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Content Distribution, Engagement, System Status, Quick Actions -->
        <div class="col-xl-4">
            <!-- Content Distribution Chart -->
            <div class="card border border-primary shadow-sm mb-4">
                <div class="card-header bg-light border-bottom py-3">
                    <h5 class="mb-0 fw-bold">@Localizer["Content Distribution"]</h5>
                </div>
                <div class="card-body">
                    <canvas id="contentChart" height="200"></canvas>
                </div>
            </div>

            <!-- Engagement Metrics Chart -->
            <div class="card border border-warning shadow-sm mb-4">
                <div class="card-header bg-light border-bottom py-3">
                    <h5 class="mb-0 fw-bold">@Localizer["Engagement Metrics"]</h5>
                </div>
                <div class="card-body">
                    <canvas id="engagementChart" height="200"></canvas>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted small">@Localizer["Engagement Rate"]</span>
                            <span class="fw-bold">@Model.EngagementRate.ToString("F1")%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: @Model.EngagementRate%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Status -->
            <div class="card border border-info shadow-sm mb-4">
                <div class="card-header bg-light border-bottom py-3">
                    <h5 class="mb-0 fw-bold">@Localizer["System Status"]</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">@Localizer["Database"]</small>
                            <small class="text-success fw-bold">@Localizer["Online"]</small>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">@Localizer["API Services"]</small>
                            <small class="text-success fw-bold">@Localizer["Running"]</small>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                    </div>
                    <div class="mb-0">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">@Localizer["Cache"]</small>
                            <small class="text-success fw-bold">@Localizer["Active"]</small>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card border border-success shadow-sm">
                <div class="card-header bg-light border-bottom py-3">
                    <h5 class="mb-0 fw-bold">@Localizer["Quick Actions"]</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-area="Dashboard" asp-controller="UserManagement" asp-action="Index" class="btn btn-outline-danger text-start">
                            <i class="fas fa-users me-2"></i>@Localizer["Manage Users"]
                        </a>
                        <a asp-area="Dashboard" asp-controller="ContentManagement" asp-action="Index" class="btn btn-outline-success text-start">
                            <i class="fas fa-layer-group me-2"></i>@Localizer["Manage Content"]
                        </a>
                        <a asp-area="Dashboard" asp-controller="UserReports" asp-action="Index" class="btn btn-outline-info text-start">
                            <i class="fas fa-chart-bar me-2"></i>@Localizer["View Reports"]
                        </a>
                        <a asp-area="Dashboard" asp-controller="Security" asp-action="Index" class="btn btn-outline-warning text-start">
                            <i class="fas fa-shield-halved me-2"></i>@Localizer["Security Alerts"]
                        </a>
                        <a asp-area="Dashboard" asp-controller="Settings" asp-action="Index" class="btn btn-outline-secondary text-start">
                            <i class="fas fa-cog me-2"></i>@Localizer["System Settings"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Activity Chart (Line)
        const activityCtx = document.getElementById('activityChart');
        const activityData = @Html.Raw(Json.Serialize(ViewBag.ActivityData ?? new List<int>()));
        const activityLabels = @Html.Raw(Json.Serialize(ViewBag.ActivityLabels ?? new List<string>()));

        new Chart(activityCtx, {
            type: 'line',
            data: {
                labels: activityLabels,
                datasets: [{
                    label: '@Localizer["User Registrations"]',
                    data: activityData,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });

        // User Growth Trend Chart (Area)
        const growthCtx = document.getElementById('growthChart');
        const growthData = @Html.Raw(Json.Serialize(ViewBag.GrowthData ?? new List<int>()));
        const growthLabels = @Html.Raw(Json.Serialize(ViewBag.GrowthLabels ?? new List<string>()));

        new Chart(growthCtx, {
            type: 'line',
            data: {
                labels: growthLabels,
                datasets: [{
                    label: '@Localizer["Total Users"]',
                    data: growthData,
                    borderColor: 'rgb(34, 197, 94)',
                    backgroundColor: 'rgba(34, 197, 94, 0.2)',
                    tension: 0.4,
                    fill: true,
                    pointRadius: 5,
                    pointHoverRadius: 7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });

        // Content Distribution Chart (Doughnut)
        const contentCtx = document.getElementById('contentChart');
        const contentData = @Html.Raw(Json.Serialize(ViewBag.ContentData ?? new List<int>()));
        const contentLabels = @Html.Raw(Json.Serialize(ViewBag.ContentLabels ?? new List<string>()));

        new Chart(contentCtx, {
            type: 'doughnut',
            data: {
                labels: contentLabels,
                datasets: [{
                    data: contentData,
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(251, 44, 54, 0.8)',
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(34, 197, 94, 0.8)',
                        'rgba(168, 85, 247, 0.8)'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });

        // Engagement Metrics Chart (Bar)
        const engagementCtx = document.getElementById('engagementChart');
        const engagementData = @Html.Raw(Json.Serialize(ViewBag.EngagementData ?? new List<int>()));
        const engagementLabels = @Html.Raw(Json.Serialize(ViewBag.EngagementLabels ?? new List<string>()));

        new Chart(engagementCtx, {
            type: 'bar',
            data: {
                labels: engagementLabels,
                datasets: [{
                    label: '@Localizer["Interactions"]',
                    data: engagementData,
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(34, 197, 94, 0.8)',
                        'rgba(251, 44, 54, 0.8)',
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(168, 85, 247, 0.8)'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/dashboard.css" asp-append-version="true" />
}
