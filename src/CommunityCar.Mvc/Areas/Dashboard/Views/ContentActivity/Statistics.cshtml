@model CommunityCar.Mvc.Areas.Dashboard.ViewModels.ContentActivityStatisticsViewModel
@{
    ViewData["Title"] = "Content Activity Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Content Activity</a></li>
                    <li class="breadcrumb-item active">Statistics</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">
                <i class="bi bi-graph-up"></i> Content Activity Statistics
            </h1>
            <p class="text-muted">Analyze user engagement and content interaction patterns</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Date Range Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Statistics">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" class="form-control" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">End Date</label>
                        <input type="date" class="form-control" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Update Statistics
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="col-md-3 text-end">
                        <small class="text-muted">
                            Period: @Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Overview Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-activity fs-2 text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Activities</h6>
                            <h3 class="mb-0">@Model.Statistics.TotalActivities.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-people fs-2 text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Unique Users</h6>
                            <h3 class="mb-0">@Model.Statistics.UniqueUsers.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-eye fs-2 text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Views</h6>
                            <h3 class="mb-0">@Model.Statistics.TotalViews.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-plus-circle fs-2 text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Content Created</h6>
                            <h3 class="mb-0">@Model.Statistics.TotalCreates.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Breakdown -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-plus-circle fs-1 text-success mb-2"></i>
                    <h6 class="text-muted">Creates</h6>
                    <h4 class="mb-0">@Model.Statistics.TotalCreates.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-pencil-square fs-1 text-warning mb-2"></i>
                    <h6 class="text-muted">Updates</h6>
                    <h4 class="mb-0">@Model.Statistics.TotalUpdates.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-trash fs-1 text-danger mb-2"></i>
                    <h6 class="text-muted">Deletes</h6>
                    <h4 class="mb-0">@Model.Statistics.TotalDeletes.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-eye fs-1 text-primary mb-2"></i>
                    <h6 class="text-muted">Views</h6>
                    <h4 class="mb-0">@Model.Statistics.TotalViews.ToString("N0")</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Activities by Content Type -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pie-chart"></i> Activities by Content Type
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.ActivitiesByContentType.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Content Type</th>
                                        <th class="text-end">Count</th>
                                        <th class="text-end">Percentage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var total = Model.Statistics.ActivitiesByContentType.Sum(x => x.Value);
                                    }
                                    @foreach (var item in Model.Statistics.ActivitiesByContentType.OrderByDescending(x => x.Value))
                                    {
                                        var percentage = total > 0 ? (item.Value * 100.0 / total) : 0;
                                        <tr>
                                            <td>
                                                <code class="text-primary">@item.Key</code>
                                            </td>
                                            <td class="text-end">
                                                <strong>@item.Value.ToString("N0")</strong>
                                            </td>
                                            <td class="text-end">
                                                <span class="badge bg-info">@percentage.ToString("F1")%</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Activities by Action -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-bar-chart"></i> Activities by Action
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.ActivitiesByAction.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th class="text-end">Count</th>
                                        <th class="text-end">Percentage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var totalActions = Model.Statistics.ActivitiesByAction.Sum(x => x.Value);
                                    }
                                    @foreach (var item in Model.Statistics.ActivitiesByAction.OrderByDescending(x => x.Value))
                                    {
                                        var percentage = totalActions > 0 ? (item.Value * 100.0 / totalActions) : 0;
                                        <tr>
                                            <td>
                                                <span class="badge bg-@GetActionColor(item.Key)">
                                                    <i class="bi bi-@GetActionIcon(item.Key)"></i> @item.Key
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <strong>@item.Value.ToString("N0")</strong>
                                            </td>
                                            <td class="text-end">
                                                <span class="badge bg-secondary">@percentage.ToString("F1")%</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top Active Users -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-trophy"></i> Top Active Users
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.TopUsers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>User</th>
                                        <th class="text-end">Activities</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Statistics.TopUsers.Count; i++)
                                    {
                                        var user = Model.Statistics.TopUsers[i];
                                        <tr>
                                            <td>
                                                @if (i == 0)
                                                {
                                                    <i class="bi bi-trophy-fill text-warning"></i>
                                                }
                                                else if (i == 1)
                                                {
                                                    <i class="bi bi-trophy-fill text-secondary"></i>
                                                }
                                                else if (i == 2)
                                                {
                                                    <i class="bi bi-trophy-fill" style="color: #cd7f32;"></i>
                                                }
                                                else
                                                {
                                                    <span>@(i + 1)</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("UserActivities", new { userId = user.UserId })" class="text-decoration-none">
                                                    <span class="badge bg-info">@user.UserName</span>
                                                </a>
                                            </td>
                                            <td class="text-end">
                                                <strong>@user.ActivityCount.ToString("N0")</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Most Viewed Content -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-star"></i> Most Viewed Content
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Statistics.TopContent.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Title</th>
                                        <th class="text-end">Views</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var content in Model.Statistics.TopContent)
                                    {
                                        <tr>
                                            <td>
                                                <code class="text-primary">@content.ContentType</code>
                                            </td>
                                            <td>
                                                <div class="text-truncate" class="max-w-250" title="@content.ContentTitle">
                                                    @content.ContentTitle
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <strong>@content.ViewCount.ToString("N0")</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetActionIcon(string action)
    {
        return action.ToLower() switch
        {
            "create" => "plus-circle",
            "update" => "pencil-square",
            "delete" => "trash",
            "view" => "eye",
            "like" => "heart",
            "comment" => "chat",
            "share" => "share",
            _ => "circle"
        };
    }

    string GetActionColor(string action)
    {
        return action.ToLower() switch
        {
            "create" => "success",
            "update" => "warning",
            "delete" => "danger",
            "view" => "primary",
            "like" => "danger",
            "comment" => "info",
            "share" => "secondary",
            _ => "secondary"
        };
    }
}
