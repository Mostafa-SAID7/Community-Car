@model CommunityCar.Domain.DTOs.Dashboard.ContentActivityDto
@{
    ViewData["Title"] = "Activity Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Content Activity</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">
                <i class="bi bi-info-circle"></i> Activity Details
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Activity Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th width="200">Activity ID:</th>
                                <td><code>@Model.Id</code></td>
                            </tr>
                            <tr>
                                <th>Timestamp:</th>
                                <td>@Model.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' HH:mm:ss")</td>
                            </tr>
                            <tr>
                                <th>User:</th>
                                <td>
                                    <a href="@Url.Action("UserActivities", new { userId = Model.UserId })" class="text-decoration-none">
                                        <span class="badge bg-info">@Model.UserName</span>
                                    </a>
                                    <br />
                                    <small class="text-muted">User ID: @Model.UserId</small>
                                </td>
                            </tr>
                            <tr>
                                <th>Action:</th>
                                <td>
                                    <span class="badge bg-@GetActionColor(Model.Action) fs-6">
                                        <i class="bi bi-@GetActionIcon(Model.Action)"></i> @Model.Action
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Content Type:</th>
                                <td><code class="text-primary">@Model.ContentType</code></td>
                            </tr>
                            <tr>
                                <th>Content ID:</th>
                                <td><code>@Model.ContentId</code></td>
                            </tr>
                            <tr>
                                <th>Content Title:</th>
                                <td><strong>@Model.ContentTitle</strong></td>
                            </tr>
                            <tr>
                                <th>IP Address:</th>
                                <td><code class="text-muted">@(Model.IpAddress ?? "N/A")</code></td>
                            </tr>
                            <tr>
                                <th>User Agent:</th>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.UserAgent))
                                    {
                                        <small class="text-muted">@Model.UserAgent</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.Metadata != null && Model.Metadata.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Additional Metadata</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Key</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Metadata)
                                {
                                    <tr>
                                        <td><code>@item.Key</code></td>
                                        <td>@item.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a href="@Url.Action("UserActivities", new { userId = Model.UserId })" class="btn btn-outline-info">
                            <i class="bi bi-person"></i> View User Activities
                        </a>
                        <button type="button" class="btn btn-outline-danger" onclick="confirmDelete(@Model.Id)">
                            <i class="bi bi-trash"></i> Delete Activity
                        </button>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Time Since Activity</small>
                        <strong>@GetTimeSince(Model.CreatedAt)</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Activity Type</small>
                        <strong>@Model.Action on @Model.ContentType</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this activity record? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-action="Delete" id="deleteForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            document.getElementById('deleteId').value = id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

@functions {
    string GetActionIcon(string action)
    {
        return action.ToLower() switch
        {
            "create" => "plus-circle",
            "update" => "pencil-square",
            "delete" => "trash",
            "view" => "eye",
            "like" => "heart",
            "comment" => "chat",
            "share" => "share",
            _ => "circle"
        };
    }

    string GetActionColor(string action)
    {
        return action.ToLower() switch
        {
            "create" => "success",
            "update" => "warning",
            "delete" => "danger",
            "view" => "primary",
            "like" => "danger",
            "comment" => "info",
            "share" => "secondary",
            _ => "secondary"
        };
    }

    string GetTimeSince(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;
        
        if (timeSpan.TotalMinutes < 1)
            return "Just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minute(s) ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hour(s) ago";
        if (timeSpan.TotalDays < 30)
            return $"{(int)timeSpan.TotalDays} day(s) ago";
        if (timeSpan.TotalDays < 365)
            return $"{(int)(timeSpan.TotalDays / 30)} month(s) ago";
        
        return $"{(int)(timeSpan.TotalDays / 365)} year(s) ago";
    }
}
