@model List<CommunityCar.Domain.Entities.Communications.notifications.Notification>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Notifications"];
    var unreadCount = ViewBag.UnreadCount ?? 0;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var pageSize = ViewBag.PageSize ?? 20;
    var totalCount = ViewBag.TotalCount ?? 0;
    var unreadOnly = ViewBag.UnreadOnly;
    var totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

@{
    ViewData["HeaderTitle"] = Localizer["Notifications"];
    ViewData["HeaderDescription"] = Localizer["Stay updated with your latest activity"];
    ViewData["HeaderIcon"] = "fas fa-bell";
    
    var unreadBadgeContent = unreadCount > 0 ? "<span class='badge bg-light text-dark fs-6'>" + unreadCount + " " + Localizer["unread"] + "</span>" : "";
    var markAllButtonContent = unreadCount > 0 ? "<button class='btn btn-light' onclick='markAllAsRead()'><i class='fas fa-check-double me-2'></i>" + Localizer["Mark All Read"] + "</button>" : "";
    
    var actionsHtml = "<div class='d-flex gap-2 flex-wrap align-items-center'>" +
                      "<span class='text-white'>" + unreadBadgeContent + "</span>" +
                      "<button class='btn btn-light' onclick='refreshNotifications()'>" +
                      "<i class='fas fa-sync-alt me-2'></i>" + Localizer["Refresh"] +
                      "</button>" +
                      markAllButtonContent +
                      "</div>";
        
    ViewData["HeaderActions"] = Html.Raw(actionsHtml);
}

<partial name="_InnerPageHeader" />

<div class="container">
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
                    <!-- Filter Tabs -->
                    <div class="border-bottom">
                        <ul class="nav nav-tabs border-0 px-3 pt-3">
                            <li class="nav-item">
                                <a class="nav-link @(unreadOnly != true ? "active" : "")" 
                                   href="@Url.Action("Index", new { page = 1, pageSize, unreadOnly = (bool?)null })">
                                    <i class="fas fa-list me-1"></i> @Localizer["All"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(unreadOnly == true ? "active" : "")" 
                                   href="@Url.Action("Index", new { page = 1, pageSize, unreadOnly = true })">
                                    <i class="fas fa-envelope me-1"></i> @Localizer["Unread"]
                                    @if (unreadCount > 0)
                                    {
                                        <span class="badge bg-danger rounded-pill ms-1">@unreadCount</span>
                                    }
                                </a>
                            </li>
                        </ul>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger m-3">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success m-3">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                        </div>
                    }

                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bell-slash fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">@Localizer["No notifications"]</h5>
                            <p class="text-muted">@Localizer["You're all caught up!"]</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var notification in Model)
                            {
                                <div class="list-group-item list-group-item-action @(!notification.IsRead ? "bg-light" : "")" 
                                     data-notification-id="@notification.Id">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center mb-1">
                                                @if (!notification.IsRead)
                                                {
                                                    <span class="badge bg-primary me-2">@Localizer["New"]</span>
                                                }
                                                <h6 class="mb-0">@notification.Title</h6>
                                            </div>
                                            <p class="mb-1 text-muted">@notification.Message</p>
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @notification.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
                                            </small>
                                        </div>
                                        <div class="btn-group ms-3">
                                            @if (!string.IsNullOrEmpty(notification.Link))
                                            {
                                                var normalizedLink = notification.Link.Replace("/Identity/Profiles/Index/", "/Identity/Profiles/");
                                                <a href="@normalizedLink" 
                                                   class="btn btn-sm btn-outline-primary"
                                                   onclick="markAsRead('@notification.Id')">
                                                    <i class="fas fa-external-link-alt"></i> @Localizer["View"]
                                                </a>
                                            }
                                            @if (!notification.IsRead)
                                            {
                                                <button class="btn btn-sm btn-outline-success" 
                                                        onclick="markAsRead('@notification.Id')">
                                                    <i class="fas fa-check"></i> @Localizer["Mark Read"]
                                                </button>
                                            }
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    onclick="deleteNotification('@notification.Id')">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Pagination -->
                        @if (totalPages > 1)
                        {
                            <div class="card-footer">
                                <nav>
                                    <ul class="pagination justify-content-center mb-0">
                                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" 
                                               href="@Url.Action("Index", new { page = currentPage - 1, pageSize, unreadOnly })">
                                                <i class="fas fa-chevron-left"></i> @Localizer["Previous"]
                                            </a>
                                        </li>

                                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" 
                                                   href="@Url.Action("Index", new { page = i, pageSize, unreadOnly })">
                                                    @i
                                                </a>
                                            </li>
                                        }

                                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                            <a class="page-link" 
                                               href="@Url.Action("Index", new { page = currentPage + 1, pageSize, unreadOnly })">
                                                @Localizer["Next"] <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                                <div class="text-center mt-2">
                                    <small class="text-muted">
                                        @string.Format(Localizer["Showing {0} to {1} of {2} notifications"].Value, (currentPage - 1) * pageSize + 1, Math.Min(currentPage * pageSize, totalCount), totalCount)
                                    </small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
</div>

@section Scripts {
    <script>
        function refreshNotifications() {
            location.reload();
        }

        function markAsRead(notificationId) {
            $.ajax({
                url: '@Url.Action("MarkAsRead")/' + notificationId,
                type: 'POST',
                success: function(response) {
                    if (response.success) {
                        var element = $('[data-notification-id="' + notificationId + '"]');
                        element.removeClass('bg-light');
                        element.find('.badge.bg-primary').remove();
                        element.find('.btn-outline-success').remove();
                        
                        // Update unread count
                        updateUnreadCount(response.unreadCount);
                    }
                },
                error: function() {
                    alert('@Localizer["Failed to mark notification as read"]');
                }
            });
        }

        function markAllAsRead() {
            if (!confirm('@Localizer["Mark all notifications as read?"]')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("MarkAllAsRead")',
                type: 'POST',
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message || '@Localizer["Failed to mark all as read"]');
                    }
                },
                error: function() {
                    alert('@Localizer["Failed to mark all notifications as read"]');
                }
            });
        }

        function deleteNotification(notificationId) {
            if (!confirm('@Localizer["Delete this notification?"]')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("Delete")/' + notificationId,
                type: 'POST',
                success: function(response) {
                    if (response.success) {
                        $('[data-notification-id="' + notificationId + '"]').fadeOut(300, function() {
                            $(this).remove();
                            
                            // Check if no notifications left
                            if ($('.list-group-item').length === 0) {
                                location.reload();
                            }
                        });
                    } else {
                        alert(response.message || '@Localizer["Failed to delete notification"]');
                    }
                },
                error: function() {
                    alert('@Localizer["Failed to delete notification"]');
                }
            });
        }

        function updateUnreadCount(count) {
            var badge = $('.card-header .badge.bg-danger');
            if (count > 0) {
                badge.text(count);
            } else {
                badge.remove();
            }
        }

        // Auto-refresh every 30 seconds
        setInterval(function() {
            $.get('@Url.Action("UnreadCount")', function(data) {
                if (data.success) {
                    updateUnreadCount(data.count);
                }
            });
        }, 30000);
    </script>
}
