@model List<CommunityCar.Domain.DTOs.Communications.ChatConversationDto>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Messages";
    ViewData["HideFooter"] = true; // Remove footer for chat
    var unreadCount = ViewBag.UnreadCount ?? 0;
    var friends = ViewBag.Friends as List<CommunityCar.Domain.DTOs.Community.FriendshipDto> ?? new List<CommunityCar.Domain.DTOs.Community.FriendshipDto>();
}

@{
    ViewData["HeaderTitle"] = Localizer["Messages"];
    ViewData["HeaderDescription"] = Localizer["Chat with fellow automotive enthusiasts"];
    ViewData["HeaderIcon"] = "fas fa-comments";
}

<partial name="_InnerPageHeader" />

<div class="chat-page-container">
    <!-- Main Chat Area -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h4 class="fw-bold mb-0">
            <i class="fas fa-comments me-2 text-primary"></i>@Localizer["Recent Conversations"]
        </h4>
        @if (unreadCount > 0)
        {
            <span class="badge bg-danger rounded-pill px-3 py-2">@unreadCount @Localizer["Unread"]</span>
        }
    </div>

    <div class="mb-4">
        <div class="position-relative">
            <span class="position-absolute top-50 start-0 translate-middle-y ps-3 text-muted">
                <i class="fas fa-search"></i>
            </span>
            <input type="text" id="searchConversations" class="form-control chat-search-input" placeholder="@Localizer["Search conversations..."]">
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="chat-sidebar-card p-5 text-center">
            <div class="py-4">
                <div class="mb-4 opacity-25">
                    <i class="fas fa-comment-slash fa-4x"></i>
                </div>
                <h5 class="fw-bold">@Localizer["No Conversations Yet"]</h5>
                <p class="text-muted mb-4">@Localizer["Start chatting with your friends from the list on the right!"]</p>
            </div>
        </div>
    }
    else
    {
        <div class="row g-3" id="conversationsContainer">
            @foreach (var conv in Model)
            {
                <div class="col-12 conversation-wrapper" data-username="@conv.UserName.ToLower()">
                    <a href="@Url.Action("Conversation", "Chats", new { area = "Communications", id = conv.UserId })" class="text-decoration-none">
                        <div class="card conversation-card p-3">
                            <div class="d-flex align-items-center">
                                <div class="position-relative me-3">
                                    @if (!string.IsNullOrEmpty(conv.ProfilePicture))
                                    {
                                        <img src="@conv.ProfilePicture" alt="@conv.UserName" class="chat-avatar">
                                    }
                                    else
                                    {
                                        <div class="chat-avatar-fallback">
                                            @conv.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                    }
                                    @if (conv.IsOnline)
                                    {
                                        <div class="online-indicator"></div>
                                    }
                                </div>
                                <div class="flex-grow-1 min-width-0">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <h6 class="mb-0 fw-bold text-dark text-truncate">@conv.UserName</h6>
                                        @if (conv.LastMessageTime.HasValue)
                                        {
                                            <small class="text-muted" style="font-size: 0.75rem;">
                                                @conv.LastMessageTime.Value.ToString("MMM dd")
                                            </small>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="mb-0 text-muted small message-preview @(conv.UnreadCount > 0 ? "fw-bold text-dark" : "")">
                                            @(conv.LastMessage ?? Localizer["No messages yet"].Value)
                                        </p>
                                        @if (conv.UnreadCount > 0)
                                        {
                                            <span class="badge bg-primary rounded-pill ms-2">@conv.UnreadCount</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let searchTimeout;

            $('#searchConversations').on('input', function() {
                const term = $(this).val().toLowerCase();
                
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    $('.conversation-wrapper').each(function() {
                        const name = $(this).data('username');
                        if (name.includes(term)) {
                            $(this).fadeIn(200);
                        } else {
                            $(this).fadeOut(200);
                        }
                    });
                }, 150);
            });

            // Refresh unread counts periodically
            setInterval(function() {
                const url = CultureHelper.addCultureToUrl('/Communications/Chats/GetUnreadCount');
                $.get(url, function(data) {
                    if (data.success && data.count > 0) {
                        // Optional: update UI without reload
                    }
                }).fail(function(xhr, status, error) {
                    console.debug('Failed to fetch unread count:', status);
                });
            }, 30000);
        });
    </script>
}
