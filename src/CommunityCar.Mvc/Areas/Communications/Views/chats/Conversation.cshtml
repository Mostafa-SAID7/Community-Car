@model List<CommunityCar.Domain.DTOs.Communications.ChatMessageDto>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Chat";
    ViewData["HideFooter"] = true; // Remove footer for chat
    var otherUserId = ViewBag.OtherUserId as Guid?;
    var conversations = ViewBag.Conversations as List<CommunityCar.Domain.DTOs.Communications.ChatConversationDto>;
    var otherUser = conversations?.FirstOrDefault(c => c.UserId == otherUserId);
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

@section RightSidebar {
    <partial name="Sidebars/_RightSidebar_Chat" />
}

@{
    ViewData["HeaderTitle"] = Localizer["Messages"];
    ViewData["HeaderDescription"] = Localizer["Chat with your friends and community members"];
    ViewData["HeaderIcon"] = "fas fa-comments";
}

<partial name="_InnerPageHeader" />

<div class="chat-page-container">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 chat-container" style="min-height: 600px;">
        <div class="row g-0 h-100">
            <!-- Sidebar -->
            <div class="col-md-4 col-lg-3 border-end d-flex flex-column h-100  d-none d-md-flex">
                <div class="p-3 border-bottom ">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0 fw-bold"><i class="fas fa-inbox me-2 "></i>@Localizer["Chats"]</h6>
                        <a asp-action="Index" class="btn  btn-sm rounded-circle shadow-sm">
                            <i class="fas fa-plus "></i>
                        </a>
                    </div>
                    <div class="position-relative">
                        <span class="position-absolute top-50 start-0 translate-middle-y ps-3 text-muted">
                            <i class="fas fa-search small"></i>
                        </span>
                        <input type="text" id="searchConversations" class="form-control form-control-sm chat-search-input" placeholder="@Localizer["Search..."]">
                    </div>
                </div>
                <div class="conversations-list p-2 custom-scrollbar flex-grow-1 overflow-auto">
                    @if (conversations != null)
                    {
                        foreach (var conv in conversations)
                        {
                            <a href="@Url.Action("Conversation", new { id = conv.UserId })" 
                               class="text-decoration-none conversation-wrapper"
                               data-username="@conv.UserName.ToLower()"
                               data-user-id="@conv.UserId">
                                <div class="card conversation-card p-2 @(conv.UserId == otherUserId ? "active" : "")">
                                    <div class="d-flex align-items-center">
                                        <div class="position-relative me-3">
                                            @if (!string.IsNullOrEmpty(conv.ProfilePicture))
                                            {
                                                <img src="@conv.ProfilePicture" class="chat-avatar">
                                            }
                                            else
                                            {
                                                <div class="chat-avatar-fallback">
                                                    @conv.UserName.Substring(0, 1).ToUpper()
                                                </div>
                                            }
                                            @if (conv.IsOnline)
                                            {
                                                <div class="online-indicator"></div>
                                            }
                                        </div>
                                        <div class="flex-grow-1 text-truncate">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <div class="fw-bold text-dark small text-truncate">@conv.UserName</div>
                                                @if (conv.UnreadCount > 0)
                                                {
                                                    <span class="badge bg-danger rounded-pill" style="font-size: 0.6rem;">@conv.UnreadCount</span>
                                                }
                                            </div>
                                            <div class="text-muted small text-truncate" style="font-size: 0.75rem;">
                                                @(conv.LastMessage ?? Localizer["No messages"].Value)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                    }
                </div>
            </div>

            <!-- Chat Area -->
            <div class="col-md-8 col-lg-9 d-flex flex-column h-100 ">
                @if (otherUser != null)
                {
                    <!-- Chat Header -->
                    <div class="p-3 border-bottom d-flex align-items-center justify-content-between  z-index-1">
                        <div class="d-flex align-items-center">
                            <div class="position-relative me-3">
                                @if (!string.IsNullOrEmpty(otherUser.ProfilePicture))
                                {
                                    <img src="@otherUser.ProfilePicture" class="chat-avatar">
                                }
                                else
                                {
                                    <div class="chat-avatar-fallback">
                                        @otherUser.UserName.Substring(0, 1).ToUpper()
                                    </div>
                                }
                                <div id="statusDot" class="online-indicator @(otherUser.IsOnline ? "bg-success" : "bg-secondary")"></div>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">@otherUser.UserName</h6>
                                <small id="statusText" class="text-muted" style="font-size: 0.75rem;">@(otherUser.IsOnline ? Localizer["Online"] : Localizer["Offline"])</small>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <!-- Mobile Conversation List Toggle -->
                            <button class="btn btn-light btn-sm rounded-circle d-md-none" id="toggleMobileConvList" title="@Localizer["Conversations"]">
                                <i class="fas fa-list"></i>
                            </button>
                            <button class="btn btn-light btn-sm rounded-circle d-md-none" onclick="window.location.href='@Url.Action("Index")'">
                                <i class="fas fa-arrow-left"></i>
                            </button>
                            <div class="dropdown">
                                <button class="btn btn-light rounded-circle btn-sm" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-3">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Profiles", new { area = "Identity", id = otherUser.UserId })"><i class="fas fa-user me-2"></i>@Localizer["View Profile"]</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="javascript:void(0)" id="blockUserBtn"><i class="fas fa-ban me-2"></i>@Localizer["Block User"]</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Messages -->
                    <div class="chat-messages-area p-4 bg-accent flex-grow-1 overflow-auto custom-scrollbar" id="chatMessages">
                        <div class="d-flex flex-column gap-3">
                            @foreach (var message in Model.OrderBy(m => m.CreatedAt))
                            {
                                var isSent = message.SenderId.ToString() == currentUserId;
                                <div class="d-flex flex-column @(isSent ? "align-items-end" : "align-items-start")">
                                    <div class="message-bubble @(isSent ? "message-sent" : "message-received")">
                                        <p class="mb-0">@message.Content</p>
                                    </div>
                                    <small class="text-muted mt-1 px-1" style="font-size: 0.65rem;">
                                        @message.CreatedAt.ToString("HH:mm")
                                        @if(isSent) {
                                            <i class="fas @(message.IsRead ? "fa-check-double " : "fa-check") ms-1"></i>
                                        }
                                    </small>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Input Area -->
                    <div class="chat-input-container">
                        <div id="typingIndicator" class="typing-indicator mb-1 px-2 text-muted small fst-italic"></div>
                        <form id="sendMessageForm" class="d-flex gap-2 align-items-end">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ReceiverId" value="@otherUserId" />
                            <div class="flex-grow-1 position-relative">
                                <textarea name="Content" id="messageInput" class="form-control chat-input-field" 
                                       placeholder="@Localizer["Type a message..."]" required maxlength="2000" rows="1"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width:40px; height:40px;">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-column align-items-center justify-content-center h-100 text-center p-5 bg-accent">
                        <div class="chat-avatar-fallback p-4 mb-4" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="fas fa-comments opacity-50"></i>
                        </div>
                        <h4 class="fw-bold mb-2">@Localizer["Welcome to Messages"]</h4>
                        <p class="text-muted mb-4" style="max-width: 300px;">@Localizer["Select a conversation from the left to start chatting with your friends."]</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            const receiverId = '@otherUserId'.toLowerCase();
            const currentUserId = '@currentUserId'.toLowerCase();
            const chatMessages = document.getElementById('chatMessages');
            let typingTimeout;
            let searchTimeout;

            if (!receiverId) return;

            // Mobile Toggle for Conversation List
            $('#toggleMobileConvList').on('click', function() {
                $('.chat-container .col-md-4').toggleClass('d-none');
                $(this).toggleClass('btn-primary btn-light');
            });

            // Block User Functionality
            $('#blockUserBtn').on('click', function() {
                if (confirm('@Localizer["Are you sure you want to block this user?"]')) {
                    const url = CultureHelper.addCultureToUrl('/Friends/BlockUserJson');
                    $.post(url, {
                        friendId: receiverId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    }, function(response) {
                        if (response.success) {
                            window.Toast.show('@Localizer["User Blocked Successfully"]', 'success');
                            setTimeout(() => {
                                window.location.href = CultureHelper.addCultureToUrl('/Communications/Chats');
                            }, 1500);
                        } else {
                            window.Toast.show(response.message || '@Localizer["Failed to block user"]', 'error');
                        }
                    });
                }
            });

            // Search filtering in sidebar
            $('#searchConversations').on('input', function() {
                const term = $(this).val().toLowerCase();
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    $('.conversation-wrapper').each(function() {
                        const name = $(this).data('username');
                        if (name.includes(term)) {
                            $(this).show();
                        } else {
                            $(this).hide();
                        }
                    });
                }, 150);
            });

            // Auto-resize textarea
            $('#messageInput').on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });

            // Initialize SignalR
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            // Receive message
            connection.on("ReceiveMessage", function(senderId, content, timestamp) {
                const sId = senderId.toLowerCase();
                if (sId === receiverId) {
                    appendMessage(content, timestamp, false);
                    markAsRead();
                } else {
                    const badge = $('[data-user-id="' + sId + '"] .badge');
                    if (badge.length) {
                        const count = parseInt(badge.text() || "0") + 1;
                        badge.text(count).show();
                    }
                }
            });

            connection.on("MessageSent", function(recId, content, timestamp) {
                const rId = recId.toLowerCase();
                if (rId === receiverId) {
                    const lastMsg = $('.message-sent p').last().text();
                    if (lastMsg !== content) {
                        appendMessage(content, timestamp, true);
                    }
                }
            });

            connection.on("UserOnline", function(userId) {
                updateUserStatus(userId, true);
            });
            connection.on("UserOffline", function(userId) {
                updateUserStatus(userId, false);
            });

            connection.on("UserTyping", function(userId) {
                if (userId === receiverId) {
                    $('#typingIndicator').text('@(otherUser?.UserName) is typing...');
                }
            });
            connection.on("UserStoppedTyping", function(userId) {
                if (userId === receiverId) {
                    $('#typingIndicator').text('');
                }
            });

            connection.start()
                .then(() => console.log("ChatHub Connected"))
                .catch(err => console.error(err));

            function scrollToBottom() {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
            scrollToBottom();

            function appendMessage(content, timestamp, isSent) {
                const date = new Date(timestamp);
                const timeStr = date.getHours().toString().padStart(2, '0') + ':' + date.getMinutes().toString().padStart(2, '0');
                
                const html = `
                    <div class="d-flex flex-column ${isSent ? 'align-items-end' : 'align-items-start'}">
                        <div class="message-bubble ${isSent ? 'message-sent' : 'message-received'}">
                            <p class="mb-0">${content}</p>
                        </div>
                        <small class="text-muted mt-1 px-1" style="font-size: 0.65rem;">
                            ${timeStr} ${isSent ? '<i class="fas fa-check ms-1"></i>' : ''}
                        </small>
                    </div>`;
                
                $(chatMessages).find('.d-flex.flex-column.gap-3').append(html);
                scrollToBottom();
            }

            function updateUserStatus(userId, isOnline) {
                const indicator = $('[data-user-id="' + userId + '"] .online-indicator');
                if (isOnline) {
                    indicator.removeClass('bg-secondary').addClass('bg-success');
                } else {
                    indicator.removeClass('bg-success').addClass('bg-secondary');
                }

                if (userId === receiverId) {
                    $('#statusDot').removeClass('bg-secondary bg-success').addClass(isOnline ? 'bg-success' : 'bg-secondary');
                    $('#statusText').text(isOnline ? 'Online' : 'Offline');
                }
            }

            function markAsRead() {
                const url = CultureHelper.addCultureToUrl('/Communications/Chats/MarkConversationAsRead/' + receiverId);
                $.post(url, {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                });
            }

            $('#sendMessageForm').on('submit', function(e) {
                e.preventDefault();
                const content = $('#messageInput').val().trim();
                if (!content) return;

                const formData = $(this).serialize();
                const url = CultureHelper.addCultureToUrl('/Communications/Chats/SendMessage');
                $.post(url, formData, function(response) {
                    if (response.success) {
                        appendMessage(content, new Date(), true);
                        $('#messageInput').val('').css('height', 'auto');
                        if (connection.state === signalR.HubConnectionState.Connected) {
                            connection.invoke("SendMessage", receiverId, content);
                        }
                    }
                });
            });

            $('#messageInput').on('input', function() {
                if (connection.state === signalR.HubConnectionState.Connected) {
                    connection.invoke("Typing", receiverId);
                    clearTimeout(typingTimeout);
                    typingTimeout = setTimeout(() => {
                        connection.invoke("StopTyping", receiverId);
                    }, 1000);
                }
            });

            markAsRead();
        });
    </script>
}
