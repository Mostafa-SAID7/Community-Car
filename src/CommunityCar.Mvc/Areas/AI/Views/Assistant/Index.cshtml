@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AI Assistant"];
    ViewData["HideRightSidebar"] = false;
    var userName = User.Identity?.Name ?? "User";
    var firstName = userName.Split(' ').FirstOrDefault() ?? userName;
}

<div class="chat-page-container">
    <div class="ai-assistant-container chat-container">
        <div class="chat-main">
            <div class="chat-header">
                <div class="user-info">
                    <div class="user-avatar-wrapper assistant-avatar">
                        <img src="/img/avatars/ai-assistant.png" class="assistant-avatar" onerror="this.outerHTML='<i class=\'fas fa-robot\'></i>'">
                        <div class="status-indicator status-online"></div>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold text-white">@Localizer["Community Car Assistant"]</h5>
                        <p class="mb-0 text-muted small">@Localizer["Always here to help"]</p>
                    </div>
                </div>
                <div class="header-actions">
                    <button class="btn btn-icon btn-light btn-sm" id="uploadFile" title="@Localizer["Upload Dataset"]">
                        <i class="fas fa-file-upload"></i>
                    </button>
                    <button class="btn btn-icon btn-light btn-sm" id="clearChat" title="@Localizer["Clear Conversation"]">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>

            <div class="chat-messages custom-scrollbar" id="chatMessages" style="overflow-y: auto; max-height: calc(100vh - 300px);">
                <div class="message received assistant">
                    <div class="message-bubble">
                        <div class="welcome-message">
                            <h6 class="mb-2">ðŸ‘‹ @Localizer["Hello"], @firstName!</h6>
                            <p class="mb-0">@Localizer["I'm your AI Assistant. I can help you with questions about Community Car, analyze datasets, and provide insights. How can I assist you today?"]</p>
                        </div>
                    </div>
                    <div class="message-time">@DateTime.Now.ToString("HH:mm")</div>
                </div>
                
                <!-- Quick Actions -->
                <div class="quick-actions-container">
                    <p class="text-muted small mb-2">@Localizer["Quick Actions:"]</p>
                    <div class="quick-actions">
                        <button class="quick-action-btn" data-prompt="How do I create a new post?">
                            <i class="fas fa-edit"></i> @Localizer["Create Post"]
                        </button>
                        <button class="quick-action-btn" data-prompt="How can I join a group?">
                            <i class="fas fa-users"></i> @Localizer["Join Groups"]
                        </button>
                        <button class="quick-action-btn" data-prompt="How do I add friends?">
                            <i class="fas fa-user-plus"></i> @Localizer["Add Friends"]
                        </button>
                        <button class="quick-action-btn" data-prompt="What are the community guidelines?">
                            <i class="fas fa-book"></i> @Localizer["Guidelines"]
                        </button>
                        <button class="quick-action-btn" data-prompt="How do I report a problem?">
                            <i class="fas fa-flag"></i> @Localizer["Report Issue"]
                        </button>
                        <button class="quick-action-btn" data-prompt="Show me my activity statistics">
                            <i class="fas fa-chart-line"></i> @Localizer["My Stats"]
                        </button>
                    </div>
                </div>
            </div>

            <div class="chat-input-area">
                <input type="file" id="fileInput" accept=".csv,.json,.txt,.xlsx" style="display: none;" />
                <div id="filePreview" class="file-preview" style="display: none;">
                    <div class="file-info">
                        <i class="fas fa-file"></i>
                        <span id="fileName"></span>
                        <span id="fileSize" class="text-muted small"></span>
                    </div>
                    <button type="button" class="btn-remove-file" id="removeFile">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <form id="chatForm" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <div class="input-wrapper flex-grow-1">
                        <input type="text" id="userInput" class="form-control" autocomplete="off" placeholder="@Localizer["Type your message or upload a dataset..."]">
                    </div>
                    <button type="submit" class="btn btn-primary btn-send">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section RightSidebar {
    <div class="card mb-3">
        <div class="card-header">
            <h6 class="mb-0"><i class="fas fa-lightbulb me-2"></i>@Localizer["Suggested Topics"]</h6>
        </div>
        <div class="card-body">
            <div class="list-group">
                <button class="list-group-item list-group-item-action border-0 suggested-topic" data-prompt="How do I customize my profile?">
                    <i class="fas fa-user-circle text-primary me-2"></i>
                    @Localizer["Profile Settings"]
                </button>
                <button class="list-group-item list-group-item-action border-0 suggested-topic" data-prompt="What are the privacy settings?">
                    <i class="fas fa-shield-alt text-success me-2"></i>
                    @Localizer["Privacy & Security"]
                </button>
                <button class="list-group-item list-group-item-action border-0 suggested-topic" data-prompt="How do notifications work?">
                    <i class="fas fa-bell text-warning me-2"></i>
                    @Localizer["Notifications"]
                </button>
                <button class="list-group-item list-group-item-action border-0 suggested-topic" data-prompt="Tell me about events and activities">
                    <i class="fas fa-calendar text-info me-2"></i>
                    @Localizer["Events"]
                </button>
                <button class="list-group-item list-group-item-action border-0 suggested-topic" data-prompt="How can I share content?">
                    <i class="fas fa-share-alt text-danger me-2"></i>
                    @Localizer["Sharing Content"]
                </button>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h6 class="mb-0"><i class="fas fa-database me-2"></i>@Localizer["Dataset Analysis"]</h6>
        </div>
        <div class="card-body">
            <p class="small text-muted mb-3">@Localizer["Upload CSV, JSON, or Excel files for AI-powered analysis"]</p>
            <div class="d-grid">
                <button class="btn btn-outline-primary btn-sm" id="uploadDatasetBtn">
                    <i class="fas fa-upload me-2"></i>@Localizer["Upload Dataset"]
                </button>
            </div>
            <div class="mt-3">
                <p class="small text-muted mb-2">@Localizer["Supported formats:"]</p>
                <div class="d-flex flex-wrap gap-1">
                    <span class="badge bg-secondary">.CSV</span>
                    <span class="badge bg-secondary">.JSON</span>
                    <span class="badge bg-secondary">.TXT</span>
                    <span class="badge bg-secondary">.XLSX</span>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/pages/ai-assistant.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/chat-ui-standard.css" />
    <link rel="stylesheet" href="~/css/pages/ai-assistant.css" />
}

