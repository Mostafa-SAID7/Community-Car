@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AI Assistant"];
}

<div class="ai-assistant-container">
    <div class="chat-header">
        <div class="assistant-info">
            <div class="assistant-avatar">
                <i class="fas fa-robot"></i>
                <div class="status-indicator"></div>
            </div>
            <div>
                <h4 class="mb-0">@Localizer["Community Car Assistant"]</h4>
                <p class="mb-0 text-muted small">@Localizer["Always here to help"]</p>
            </div>
        </div>
        <div class="header-actions">
            <button class="btn btn-icon btn-light" id="clearChat" title="@Localizer["Clear Conversation"]">
                <i class="fas fa-trash-alt"></i>
            </button>
        </div>
    </div>

    <div class="chat-messages" id="chatMessages">
        <div class="message assistant">
            <div class="message-bubble">
                @Localizer["Hello! I'm your AI Assistant. How can I help you navigate Community Car today?"]
            </div>
            <div class="message-time">@DateTime.Now.ToString("HH:mm")</div>
        </div>
    </div>

    <div class="chat-input-area">
        <form id="chatForm" class="d-flex gap-2">
            @Html.AntiForgeryToken()
            <div class="input-wrapper flex-grow-1">
                <input type="text" id="userInput" class="form-control" autocomplete="off" placeholder="@Localizer["Type your message..."]">
            </div>
            <button type="submit" class="btn btn-primary btn-send">
                <i class="fas fa-paper-plane"></i>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/ai-assistant.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/ai-assistant.css" />
}
