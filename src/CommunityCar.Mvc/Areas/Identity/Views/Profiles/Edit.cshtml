@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Mvc.Areas.Identity.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = Localizer["Edit Profile"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/profiles.css" asp-append-version="true" />
}

<div class="profile-container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="profile-content-card card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> @Localizer["Edit Profile"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="profile-form">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">@Localizer["FirstName"]</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">@Localizer["LastName"]</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <small class="form-text text-muted">@Localizer["Email cannot be changed here. Contact support if needed."]</small>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">@Localizer["PhoneNumber"]</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Bio" class="form-label">@Localizer["Bio"]</label>
                            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="@Localizer["Tell us about yourself..."]"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                            <small class="form-text text-muted">@Localizer["Maximum 500 characters"]</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">@Localizer["Location"]</label>
                            <input asp-for="Location" class="form-control" placeholder="@Localizer["City, Country"]" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Website" class="form-label">@Localizer["Website"]</label>
                            <input asp-for="Website" class="form-control" placeholder="https://example.com" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">@Localizer["DateOfBirth"]</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="profile-btn profile-btn-secondary">
                                <i class="bi bi-arrow-left"></i> @Localizer["Cancel"]
                            </a>
                            <button type="submit" class="profile-btn profile-btn-primary">
                                <i class="bi bi-check-lg"></i> @Localizer["Save Changes"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Profile Picture Section -->
            <div class="profile-content-card card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-image"></i> @Localizer["Profile Picture"]</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <a asp-action="UploadPicture" class="profile-btn profile-btn-primary d-inline-block me-2">
                            <i class="bi bi-upload"></i> @Localizer["Upload New Picture"]
                        </a>
                        <form asp-action="RemovePicture" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="profile-btn profile-btn-danger" onclick="return confirm('@Localizer["Are you sure you want to remove your profile picture?"]')">
                                <i class="bi bi-trash"></i> @Localizer["Remove Picture"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
