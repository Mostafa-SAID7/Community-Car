@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Web.Areas.Identity.ViewModels.UserStatisticsViewModel
@{
    ViewData["Title"] = string.Format(Localizer["Statistics Title"].Value, Model.User.FirstName);
    ViewData["PageType"] = "profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/profiles.css" asp-append-version="true" />
}

<div class="profile-container">
    <div class="row">
        <!-- User Info -->
        <div class="col-12 mb-4">
            <div class="profile-content-card card shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            @if (!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
                            {
                                <img src="@Model.User.ProfilePictureUrl" alt="@Localizer["Profile Picture"]" class="profile-avatar-small">
                            }
                            else
                            {
                                <div class="profile-avatar-fallback profile-avatar-small mx-auto">
                                    @Model.User.FirstName.Substring(0, 1)@Model.User.LastName.Substring(0, 1)
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h3 class="mb-1">@Model.User.FirstName @Model.User.LastName</h3>
                            <p class="text-muted mb-0">@string.Format(Localizer["Member since"].Value, Model.MemberSince.ToString("MMMM yyyy"))</p>
                        </div>
                        <div class="col-md-2 text-end">
                            <a asp-action="Index" asp-route-userId="@Model.User.Id" class="profile-btn profile-btn-secondary">
                                <i class="bi bi-arrow-left"></i> @Localizer["Back to Profile"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="col-md-3 mb-4">
            <div class="profile-content-card card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2">
                        <i class="bi bi-trophy"></i>
                    </div>
                    <h2 class="mb-0">@Model.ReputationPoints</h2>
                    <p class="text-muted mb-0">@Localizer["Reputation Points"]</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="profile-content-card card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-success mb-2">
                        <i class="bi bi-question-circle"></i>
                    </div>
                    <h2 class="mb-0">@Model.TotalQuestions</h2>
                    <p class="text-muted mb-0">@Localizer["Questions Asked"]</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="profile-content-card card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-info mb-2">
                        <i class="bi bi-chat-left-text"></i>
                    </div>
                    <h2 class="mb-0">@Model.TotalAnswers</h2>
                    <p class="text-muted mb-0">@Localizer["Answers Given"]</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="profile-content-card card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-warning mb-2">
                        <i class="bi bi-hand-thumbs-up"></i>
                    </div>
                    <h2 class="mb-0">@Model.TotalVotes</h2>
                    <p class="text-muted mb-0">@Localizer["Votes Received"]</p>
                </div>
            </div>
        </div>

        <!-- Community Stats -->
        <div class="col-md-6 mb-4">
            <div class="profile-content-card card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-people"></i> @Localizer["Community Engagement"]</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <h3 class="text-primary">@Model.TotalFriends</h3>
                            <p class="text-muted mb-0">@Localizer["Friends"]</p>
                        </div>
                        <div class="col-6 mb-3">
                            <h3 class="text-success">@Model.BadgesCount</h3>
                            <p class="text-muted mb-0">@Localizer["Badges Earned"]</p>
                        </div>
                    </div>
                    <hr />
                    <div class="d-grid gap-2">
                        <a asp-action="Friends" asp-route-userId="@Model.User.Id" class="profile-btn profile-btn-primary">
                            <i class="bi bi-people"></i> @Localizer["View Friends"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Breakdown -->
        <div class="col-md-6 mb-4">
            <div class="profile-content-card card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> @Localizer["Activity Breakdown"]</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@Localizer["Questions"]</span>
                            <span>@Model.TotalQuestions</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @(Model.TotalQuestions > 0 ? 100 : 0)%" aria-valuenow="@Model.TotalQuestions" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@Localizer["Answers"]</span>
                            <span>@Model.TotalAnswers</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @(Model.TotalAnswers > 0 ? 80 : 0)%" aria-valuenow="@Model.TotalAnswers" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@Localizer["Votes"]</span>
                            <span>@Model.TotalVotes</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @(Model.TotalVotes > 0 ? 60 : 0)%" aria-valuenow="@Model.TotalVotes" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Achievements -->
        <div class="col-12">
            <div class="profile-content-card card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-award"></i> @Localizer["Achievements & Badges"]</h5>
                </div>
                <div class="card-body">
                    @if (Model.BadgesCount > 0)
                    {
                        <div class="row">
                            <!-- Badges will be displayed here when implemented -->
                            <div class="col-12 text-center py-4">
                                <p class="text-muted">@Localizer["Badges feature coming soon!"]</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-award display-1 text-muted"></i>
                            <h5 class="mt-3 text-muted">@Localizer["No badges yet"]</h5>
                            <p class="text-muted">@Localizer["Keep contributing to earn badges!"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
