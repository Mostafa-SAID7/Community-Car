@using CommunityCar.Domain.Enums.Community.friends
@model CommunityCar.Web.Areas.Identity.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = $"{Model.User.FirstName} {Model.User.LastName}";
}

<div class="container mt-4">
    <div class="row">
        <!-- Profile Header -->
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            @if (!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
                            {
                                <img src="@Model.User.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle img-fluid" style="width: 120px; height: 120px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px; font-size: 48px;">
                                    @Model.User.FirstName.Substring(0, 1)@Model.User.LastName.Substring(0, 1)
                                </div>
                            }
                        </div>
                        <div class="col-md-7">
                            <h2 class="mb-1">@Model.User.FirstName @Model.User.LastName</h2>
                            @if (!string.IsNullOrEmpty(Model.User.Bio))
                            {
                                <p class="text-muted mb-2">@Model.User.Bio</p>
                            }
                            <div class="d-flex gap-3 text-muted small">
                                @if (!string.IsNullOrEmpty(Model.User.Location))
                                {
                                    <span><i class="bi bi-geo-alt"></i> @Model.User.Location</span>
                                }
                                <span><i class="bi bi-calendar"></i> Joined @Model.JoinedDate.ToString("MMMM yyyy")</span>
                                @if (!string.IsNullOrEmpty(Model.User.Website))
                                {
                                    <span><i class="bi bi-link-45deg"></i> <a href="@Model.User.Website" target="_blank">Website</a></span>
                                }
                            </div>
                        </div>
                        <div class="col-md-3 text-end">
                            @if (Model.IsOwnProfile)
                            {
                                <a asp-action="Edit" class="btn btn-primary mb-2 w-100">
                                    <i class="bi bi-pencil"></i> Edit Profile
                                </a>
                                <a asp-action="Settings" class="btn btn-outline-secondary w-100">
                                    <i class="bi bi-gear"></i> Settings
                                </a>
                            }
                            else
                            {
                                @switch (Model.FriendshipStatus)
                                {
                                    case FriendshipStatus.None:
                                        <form asp-action="SendFriendRequest" asp-route-userId="@Model.User.Id" method="post" class="mb-2">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-primary w-100">
                                                <i class="bi bi-person-plus"></i> Add Friend
                                            </button>
                                        </form>
                                        break;
                                    case FriendshipStatus.Pending:
                                        <button class="btn btn-secondary w-100 mb-2" disabled>
                                            <i class="bi bi-clock"></i> Request Pending
                                        </button>
                                        break;
                                    case FriendshipStatus.Accepted:
                                        <div class="d-flex flex-column gap-2 mb-2">
                                            <a asp-area="" asp-controller="Chats" asp-action="Conversation" asp-route-userId="@Model.User.Id" class="btn btn-primary w-100">
                                                <i class="fas fa-comment"></i> Message
                                            </a>
                                            <form asp-area="" asp-controller="Friends" asp-action="RemoveFriend" asp-route-userId="@Model.User.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger w-100">
                                                    <i class="fas fa-person-dash"></i> Remove Friend
                                                </button>
                                            </form>
                                        </div>
                                        break;
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h3 class="text-primary mb-0">@Model.User.ReputationPoints</h3>
                    <p class="text-muted mb-0">Reputation</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h3 class="text-success mb-0">@Model.QuestionsCount</h3>
                    <p class="text-muted mb-0">Questions</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h3 class="text-info mb-0">@Model.FriendsCount</h3>
                    <p class="text-muted mb-0">Friends</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h3 class="text-warning mb-0">0</h3>
                    <p class="text-muted mb-0">Badges</p>
                </div>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="col-12">
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link active" href="#activity" data-bs-toggle="tab">Activity</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Statistics" asp-route-userId="@Model.User.Id">Statistics</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Friends" asp-route-userId="@Model.User.Id">Friends</a>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="activity">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">Recent Questions</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.RecentQuestions.Any())
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var question in Model.RecentQuestions)
                                    {
                                        <a href="/Questions/Details/@question.Id" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">@question.Title</h6>
                                                <small class="text-muted">@question.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </div>
                                            <p class="mb-1 text-muted small">@(question.Content.Length > 150 ? question.Content.Substring(0, 150) + "..." : question.Content)</p>
                                            <small class="text-muted">
                                                <span class="badge bg-secondary">@question.ViewCount views</span>
                                                <span class="badge bg-success">@question.AnswerCount answers</span>
                                            </small>
                                        </a>
                                    }
                                </div>
                                <div class="text-center mt-3">
                                    <a asp-action="Activity" asp-route-userId="@Model.User.Id" class="btn btn-outline-primary">View All Activity</a>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center py-4">No recent activity</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
