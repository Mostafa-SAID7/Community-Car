@model CommunityCar.Web.Areas.Identity.ViewModels.UserSearchResultsViewModel
@{
    ViewData["Title"] = "Search Users";
}

<div class="container mt-4">
    <div class="row">
        <!-- Search Header -->
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="mb-3"><i class="bi bi-search"></i> Find Friends</h3>
                    <form asp-action="Search" method="get">
                        <div class="input-group input-group-lg">
                            <input type="text" name="query" class="form-control" placeholder="Search by name or email..." value="@Model.Query" />
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Search Results -->
        @if (!string.IsNullOrWhiteSpace(Model.Query))
        {
            <div class="col-12 mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        @if (Model.TotalCount > 0)
                        {
                            <span>Found @Model.TotalCount user@(Model.TotalCount != 1 ? "s" : "") matching "@Model.Query"</span>
                        }
                        else
                        {
                            <span class="text-muted">No users found matching "@Model.Query"</span>
                        }
                    </h5>
                </div>
            </div>

            @if (Model.Users.Any())
            {
                <div class="col-12">
                    <div class="row">
                        @foreach (var user in Model.Users)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm h-100">
                                    <div class="card-body text-center">
                                        @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                        {
                                            <img src="@user.ProfilePictureUrl" alt="@user.FirstName" class="rounded-circle img-fluid mb-3" style="width: 100px; height: 100px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px; font-size: 36px;">
                                                @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                                            </div>
                                        }
                                        <h5 class="mb-1">@user.FirstName @user.LastName</h5>
                                        <p class="text-muted small mb-2">@user.Email</p>
                                        @if (!string.IsNullOrEmpty(user.Bio))
                                        {
                                            <p class="text-muted small mb-2">@(user.Bio.Length > 80 ? user.Bio.Substring(0, 80) + "..." : user.Bio)</p>
                                        }
                                        @if (!string.IsNullOrEmpty(user.Location))
                                        {
                                            <p class="text-muted small mb-2">
                                                <i class="bi bi-geo-alt"></i> @user.Location
                                            </p>
                                        }
                                        <p class="text-muted small mb-3">
                                            <i class="bi bi-trophy"></i> @user.ReputationPoints points
                                        </p>
                                        <div class="d-grid gap-2">
                                            <a asp-action="Index" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">
                                                <i class="bi bi-person"></i> View Profile
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Search results pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage - 1)">
                                        <i class="bi bi-chevron-left"></i> Previous
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage + 1)">
                                        Next <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            }
            else
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-search display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">No results found</h4>
                            <p class="text-muted">Try searching with different keywords</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Popular Users / Suggestions -->
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-people display-1 text-muted"></i>
                        <h4 class="mt-3">Discover Community Members</h4>
                        <p class="text-muted">Search for users by name or email to connect with them</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
