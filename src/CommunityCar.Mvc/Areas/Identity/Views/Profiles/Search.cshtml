@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Mvc.Areas.Identity.ViewModels.UserSearchResultsViewModel
@{
    ViewData["Title"] = Localizer["Search Users"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/profiles.css" asp-append-version="true" />
}

<div class="profile-container mt-4">
    <div class="row">
        <!-- Search Header -->
        <div class="col-12 mb-4">
            <div class="profile-content-card card shadow-sm">
                <div class="card-body">
                    <h3 class="mb-3"><i class="bi bi-search"></i> @Localizer["Find Friends"]</h3>
                    <form asp-action="Search" method="get">
                        <div class="input-group input-group-lg">
                            <input type="text" name="query" class="form-control" placeholder="@Localizer["Search by name or email..."]" value="@Model.Query" />
                            <button class="profile-btn profile-btn-primary" type="submit">
                                <i class="bi bi-search"></i> @Localizer["SearchBtn"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Search Results -->
        @if (!string.IsNullOrWhiteSpace(Model.Query))
        {
            <div class="col-12 mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        @if (Model.TotalCount > 0)
                        {
                            <span>@string.Format(Localizer["Found matching"].Value, Model.TotalCount, Model.Query)</span>
                        }
                        else
                        {
                            <span class="text-muted">@string.Format(Localizer["No users found matching"].Value, Model.Query)</span>
                        }
                    </h5>
                </div>
            </div>

            @if (Model.Users.Any())
            {
                <div class="col-12">
                    <div class="row">
                        @foreach (var user in Model.Users)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="profile-content-card card shadow-sm h-100">
                                    <div class="card-body text-center">
                                        @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                        {
                                            <img src="@user.ProfilePictureUrl" alt="@user.FirstName" class="profile-avatar-medium mx-auto mb-3">
                                        }
                                        else
                                        {
                                            <div class="profile-avatar-fallback profile-avatar-medium mx-auto mb-3">
                                                @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                                            </div>
                                        }
                                        <h5 class="mb-1">@user.FirstName @user.LastName</h5>
                                        <p class="text-muted small mb-2">@user.Email</p>
                                        @if (!string.IsNullOrEmpty(user.Bio))
                                        {
                                            <p class="text-muted small mb-2">@(user.Bio.Length > 80 ? user.Bio.Substring(0, 80) + "..." : user.Bio)</p>
                                        }
                                        @if (!string.IsNullOrEmpty(user.Location))
                                        {
                                            <p class="text-muted small mb-2">
                                                <i class="bi bi-geo-alt"></i> @user.Location
                                            </p>
                                        }
                                        <p class="text-muted small mb-3">
                                            <i class="bi bi-trophy"></i> @user.ReputationPoints @Localizer["points"]
                                        </p>
                                        <div class="d-grid gap-2">
                                            <a asp-action="Index" asp-route-userId="@user.Id" class="profile-btn profile-btn-primary btn-sm">
                                                <i class="bi bi-person"></i> @Localizer["View Profile"]
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Search results pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage - 1)">
                                        <i class="bi bi-chevron-left"></i> @Localizer["Previous"]
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage + 1)">
                                        @Localizer["Next"] <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            }
            else
            {
                <div class="col-12">
                    <div class="profile-content-card card shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-search display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">@Localizer["No results found"]</h4>
                            <p class="text-muted">@Localizer["Try searching with different keywords"]</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Popular Users / Suggestions -->
            <div class="col-12">
                <div class="profile-content-card card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-people display-1 text-muted"></i>
                        <h4 class="mt-3">@Localizer["Discover Community Members"]</h4>
                        <p class="text-muted">@Localizer["Search for users by name or email to connect with them"]</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
