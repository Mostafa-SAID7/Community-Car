@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Web.Areas.Identity.ViewModels.UserActivityViewModel
@{
    ViewData["Title"] = string.Format(Localizer["Activity Title"].Value, Model.User.FirstName);
    ViewData["PageType"] = "profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/profiles.css" asp-append-version="true" />
}

<div class="profile-container">
    <div class="row">
        <!-- User Info Sidebar -->
        <div class="col-md-3">
            <div class="profile-content-card card mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
                    {
                        <img src="@Model.User.ProfilePictureUrl" alt="@Localizer["Profile Picture"]" class="profile-avatar-medium mb-3">
                    }
                    else
                    {
                        <div class="profile-avatar-fallback profile-avatar-medium mx-auto mb-3">
                            @Model.User.FirstName.Substring(0, 1)@Model.User.LastName.Substring(0, 1)
                        </div>
                    }
                    <h5>@Model.User.FirstName @Model.User.LastName</h5>
                    <p class="text-muted small">@Model.User.Email</p>
                    <a asp-action="Index" asp-route-userId="@Model.User.Id" class="profile-btn profile-btn-secondary w-100">
                        <i class="bi bi-person"></i> @Localizer["View Profile"]
                    </a>
                </div>
            </div>

            <!-- Activity Stats -->
            <div class="profile-content-card card">
                <div class="card-header">
                    <h6 class="mb-0">@Localizer["Activity Summary"]</h6>
                </div>
                <div class="list-group list-group-flush">
                    <div class="profile-list-item list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-question-circle text-primary me-2"></i> @Localizer["Questions"]</span>
                        <span class="profile-badge profile-badge-primary">@Model.TotalQuestions</span>
                    </div>
                    <div class="profile-list-item list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-chat-left-text text-success me-2"></i> @Localizer["Answers"]</span>
                        <span class="profile-badge profile-badge-success">@Model.TotalAnswers</span>
                    </div>
                    <div class="profile-list-item list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-hand-thumbs-up text-info me-2"></i> @Localizer["Votes"]</span>
                        <span class="profile-badge profile-badge-info">@Model.TotalVotes</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Timeline -->
        <div class="col-md-9">
            <div class="profile-content-card card">
                <div class="card-header">
                    <h4><i class="bi bi-clock-history me-2"></i> @Localizer["Recent Activity"]</h4>
                </div>
                <div class="card-body">
                    @if (Model.RecentQuestions.Any())
                    {
                        <div class="timeline">
                            @foreach (var question in Model.RecentQuestions)
                            {
                                <div class="profile-timeline-item">
                                    <div class="d-flex">
                                        <div class="profile-timeline-icon">
                                            <i class="bi bi-question-circle"></i>
                                        </div>
                                        <div class="profile-timeline-content">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="profile-timeline-title">@Localizer["Asked a question"]</h6>
                                                    <small class="profile-timeline-date">@question.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <a href="/Questions/Details/@question.Id" class="profile-timeline-link">
                                                    @question.Title
                                                </a>
                                                <p class="profile-timeline-text">@(question.Content.Length > 200 ? question.Content.Substring(0, 200) + "..." : question.Content)</p>
                                                <div class="d-flex gap-2">
                                                    <span class="profile-badge profile-badge-secondary">@question.ViewCount @Localizer["views"]</span>
                                                    <span class="profile-badge profile-badge-success">@question.AnswerCount @Localizer["answers"]</span>
                                                    <span class="profile-badge profile-badge-info">@question.VoteCount @Localizer["votes"]</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="profile-empty-state">
                            <div class="profile-empty-icon">
                                <i class="bi bi-inbox"></i>
                            </div>
                            <h5 class="profile-empty-title">@Localizer["No activity yet"]</h5>
                            <p class="profile-empty-text">@Localizer["This user hasn't posted any questions yet."]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
