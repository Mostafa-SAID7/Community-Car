@model CommunityCar.Web.Areas.Identity.ViewModels.UserActivityViewModel
@{
    ViewData["Title"] = $"{Model.User.FirstName}'s Activity";
}

<div class="container mt-4">
    <div class="row">
        <!-- User Info Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
                    {
                        <img src="@Model.User.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle img-fluid mb-3" style="width: 100px; height: 100px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px; font-size: 36px;">
                            @Model.User.FirstName.Substring(0, 1)@Model.User.LastName.Substring(0, 1)
                        </div>
                    }
                    <h5>@Model.User.FirstName @Model.User.LastName</h5>
                    <p class="text-muted small">@Model.User.Email</p>
                    <a asp-action="Index" asp-route-userId="@Model.User.Id" class="btn btn-sm btn-outline-primary w-100">
                        <i class="bi bi-person"></i> View Profile
                    </a>
                </div>
            </div>

            <!-- Activity Stats -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0">Activity Summary</h6>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-question-circle text-primary"></i> Questions</span>
                        <span class="badge bg-primary rounded-pill">@Model.TotalQuestions</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-chat-left-text text-success"></i> Answers</span>
                        <span class="badge bg-success rounded-pill">@Model.TotalAnswers</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-hand-thumbs-up text-info"></i> Votes</span>
                        <span class="badge bg-info rounded-pill">@Model.TotalVotes</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Timeline -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-clock-history"></i> Recent Activity</h4>
                </div>
                <div class="card-body">
                    @if (Model.RecentQuestions.Any())
                    {
                        <div class="timeline">
                            @foreach (var question in Model.RecentQuestions)
                            {
                                <div class="timeline-item mb-4 pb-4 border-bottom">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="bi bi-question-circle"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">Asked a question</h6>
                                                    <small class="text-muted">@question.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <a href="/Questions/Details/@question.Id" class="text-decoration-none">
                                                    <h5 class="text-primary">@question.Title</h5>
                                                </a>
                                                <p class="text-muted mb-2">@(question.Content.Length > 200 ? question.Content.Substring(0, 200) + "..." : question.Content)</p>
                                                <div class="d-flex gap-2">
                                                    <span class="badge bg-secondary">@question.ViewCount views</span>
                                                    <span class="badge bg-success">@question.AnswerCount answers</span>
                                                    <span class="badge bg-info">@question.VoteCount votes</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="mt-3 text-muted">No activity yet</h5>
                            <p class="text-muted">This user hasn't posted any questions yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline-item:last-child {
            border-bottom: none !important;
        }
    </style>
}
