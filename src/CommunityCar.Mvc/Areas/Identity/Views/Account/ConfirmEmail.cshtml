@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Email Confirmation"];
    ViewData["HideSidebars"] = true;
    ViewData["HideFooter"] = true;
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" />
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header text-center">
            @if (TempData["Success"] != null)
            {
                <div class="mb-4">
                    <i class="fas fa-check-circle fa-4x text-success animate__animated animate__bounceIn"></i>
                </div>
                <h2>@Localizer["Email Confirmed"]</h2>
                <p class="text-muted">@Localizer["Thank you for confirming your email."]</p>
                <div class="mt-4">
                    <a href="/@culture/Login" class="btn btn-primary btn-lg w-100">@Localizer["Go to Login"]</a>
                </div>
            }
            else
            {
                <div class="mb-4">
                    <i class="fas fa-times-circle fa-4x text-danger animate__animated animate__shakeX"></i>
                </div>
                <h2>@Localizer["Confirmation Failed"]</h2>
                <p class="text-muted">@Localizer["There was an error confirming your email."]</p>
                <div class="mt-4">
                    <a href="/@culture/Login" class="btn btn-secondary btn-lg w-100">@Localizer["Back to Login"]</a>
                </div>
            }
        </div>
    </div>
</div>
