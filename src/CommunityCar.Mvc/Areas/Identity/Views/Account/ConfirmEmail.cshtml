@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5 text-center">
                    @if (TempData["Success"] != null)
                    {
                        <div class="mb-4">
                            <i class="bi bi-check-circle" style="font-size: 4rem; color: #28a745;"></i>
                        </div>
                        <h2 class="mb-3">Email Confirmed</h2>
                        <p class="text-muted mb-4">@TempData["Success"]</p>
                        <a asp-action="Login" class="btn btn-primary">Go to Login</a>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="bi bi-x-circle" style="font-size: 4rem; color: #dc3545;"></i>
                        </div>
                        <h2 class="mb-3">Confirmation Failed</h2>
                        <p class="text-muted mb-4">@TempData["Error"]</p>
                        <a asp-action="Login" class="btn btn-secondary">Back to Login</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
