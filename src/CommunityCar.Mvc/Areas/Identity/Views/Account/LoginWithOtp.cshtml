@model CommunityCar.Web.Areas.Identity.ViewModels.SendOtpViewModel
@{
    ViewData["Title"] = "Login with OTP";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-phone" class="icon-placeholder"></i>
                    </div>
                    <h2 class="text-center mb-4">Login with OTP</h2>
                    <p class="text-center text-muted mb-4">Enter your phone number to receive a verification code</p>

                    <form asp-action="SendOtpCode" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+1234567890" autofocus />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            <small class="form-text text-muted">Include country code (e.g., +1 for US)</small>
                        </div>

                        <input asp-for="ReturnUrl" type="hidden" />

                        <button type="submit" class="btn btn-primary w-100 mb-3">Send Code</button>

                        <div class="text-center">
                            <p class="mb-0">
                                <a asp-action="Login" class="text-decoration-none">Back to Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
