@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check" style="font-size: 4rem; color: #28a745;"></i>
                    </div>
                    <h2 class="mb-3">Check Your Email</h2>
                    <p class="text-muted mb-4">
                        If an account exists with the email you provided, you will receive a password reset link shortly.
                    </p>
                    <p class="text-muted mb-4">
                        Please check your email and follow the instructions to reset your password.
                    </p>
                    <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
