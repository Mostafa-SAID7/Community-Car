@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Mvc.Areas.Identity.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = Localizer["Reset Password"];
    ViewData["HideSidebars"] = true;
    ViewData["HideFooter"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" />
}

@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header">
            <h2>@Localizer["Reset Password"]</h2>
            <p class="text-muted">@Localizer["Enter your new password"]</p>
        </div>

        <form asp-action="ResetPassword" method="post" class="login-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input asp-for="Code" type="hidden" />

            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required>
                <label asp-for="Email">@Localizer["Email address"]</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                <label asp-for="Password">@Localizer["New Password"]</label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y text-decoration-none text-muted pe-3 z-10" 
                        onclick="togglePassword('floatingPassword', 'toggleIcon')">
                    <i class="fas fa-eye" id="toggleIcon"></i>
                </button>
            </div>

            <div class="form-floating mb-4 position-relative">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfirmPassword" placeholder="Confirm Password" required>
                <label asp-for="ConfirmPassword">@Localizer["Confirm New Password"]</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y text-decoration-none text-muted pe-3 z-10" 
                        onclick="togglePassword('floatingConfirmPassword', 'toggleConfirmIcon')">
                    <i class="fas fa-eye" id="toggleConfirmIcon"></i>
                </button>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg mb-4">@Localizer["Reset Password"]</button>

            <div class="login-footer text-center">
                <a asp-action="Login" class="register-link fw-bold">@Localizer["Back to Login"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/identity-utils.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
