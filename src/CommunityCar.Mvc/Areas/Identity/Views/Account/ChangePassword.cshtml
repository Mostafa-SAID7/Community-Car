@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Web.Areas.Identity.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = Localizer["Change Password"];
    ViewData["HideSidebars"] = true;
    ViewData["HideFooter"] = true;
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" />
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header">
            <div class="text-center mb-3">
                <i class="bi bi-key display-4 text-primary"></i>
            </div>
            <h2>@Localizer["Change Password"]</h2>
            <p class="text-muted">@Localizer["Update your account password"]</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-area="Identity" asp-controller="Account" asp-action="ChangePassword" asp-route-culture="@culture" method="post" class="login-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="CurrentPassword" class="form-control" id="floatingCurrentPassword" placeholder="Current Password" required>
                <label asp-for="CurrentPassword">@Localizer["Current Password"]</label>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="NewPassword" type="password" class="form-control" id="floatingNewPassword" placeholder="New Password" required>
                <label asp-for="NewPassword">@Localizer["New Password"]</label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
                <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y text-decoration-none text-muted pe-3 z-10" 
                        onclick="togglePassword('floatingNewPassword', 'toggleNewIcon')">
                    <i class="fas fa-eye" id="toggleNewIcon"></i>
                </button>
            </div>
            
            <!-- Password Requirements Checklist -->
            <div class="password-requirements mb-3" id="passwordRequirements" style="display: none;">
                <small class="text-muted d-block mb-2">@Localizer["Password must contain:"]</small>
                <ul class="list-unstyled small">
                    <li id="req-length"><i class="fas fa-times text-danger"></i> @Localizer["At least 6 characters"]</li>
                    <li id="req-uppercase"><i class="fas fa-times text-danger"></i> @Localizer["One uppercase letter"]</li>
                    <li id="req-lowercase"><i class="fas fa-times text-danger"></i> @Localizer["One lowercase letter"]</li>
                    <li id="req-digit"><i class="fas fa-times text-danger"></i> @Localizer["One number"]</li>
                </ul>
            </div>

            <div class="form-floating mb-4 position-relative">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" id="floatingConfirmNewPassword" placeholder="Confirm New Password" required>
                <label asp-for="ConfirmNewPassword">@Localizer["Confirm New Password"]</label>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y text-decoration-none text-muted pe-3 z-10" 
                        onclick="togglePassword('floatingConfirmNewPassword', 'toggleConfirmNewIcon')">
                    <i class="fas fa-eye" id="toggleConfirmNewIcon"></i>
                </button>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg mb-4">@Localizer["Change Password"]</button>

            <div class="login-footer text-center">
                <a asp-area="Identity" asp-controller="Profiles" asp-action="Index" class="register-link fw-bold">@Localizer["Back to Profile"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/identity-utils.js"></script>
    <script>
        // Show toast notifications for TempData messages
        @if (TempData["Success"] != null)
        {
            <text>
            if (window.Toast) {
                window.Toast.show('@TempData["Success"]', 'success');
            }
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
            if (window.Toast) {
                window.Toast.show('@TempData["Error"]', 'error');
            }
            </text>
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize password validation for new password field
            const newPasswordInput = document.getElementById('floatingNewPassword');
            if (newPasswordInput) {
                initializePasswordValidation('floatingNewPassword', 'passwordRequirements');
            }
        });
    </script>
}
