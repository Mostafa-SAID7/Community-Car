@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Locked out"];
    ViewData["HideSidebars"] = true;
    ViewData["HideFooter"] = true;
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" />
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header text-center">
            <div class="mb-4">
                <i class="fas fa-user-lock fa-4x text-danger animate__animated animate__shakeX"></i>
            </div>
            <h2>@Localizer["Account Locked"]</h2>
            <p class="text-muted">@Localizer["For security reasons, your account has been temporarily locked due to multiple failed login attempts."]</p>
        </div>

        <div class="text-center mt-4">
            <a href="/@culture/Login" class="btn btn-primary btn-lg w-100">@Localizer["Back to Login"]</a>
        </div>
    </div>
</div>
