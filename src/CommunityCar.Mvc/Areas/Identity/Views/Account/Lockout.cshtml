@{
    ViewData["Title"] = "Account Locked";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-lock" style="font-size: 4rem; color: #ffc107;"></i>
                    </div>
                    <h2 class="mb-3">Account Locked</h2>
                    <p class="text-muted mb-4">
                        Your account has been locked due to multiple failed login attempts.
                    </p>
                    <p class="text-muted mb-4">
                        Please try again later or contact support if you need immediate assistance.
                    </p>
                    <a asp-action="Login" class="btn btn-secondary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
