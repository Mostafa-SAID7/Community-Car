@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-left">
            <h2>Two-factor authentication</h2>
            <p class="text-muted">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
            
            <form asp-area="Identity" asp-controller="Account" asp-action="LoginWith2fa" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <input type="hidden" name="rememberMe" value="@ViewData["RememberMe"]" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="form-group mb-4">
                    <label>Authenticator code</label>
                    <input name="code" class="form-control form-control-lg text-center" autocomplete="off" placeholder="000000" required />
                </div>
                
                <div class="form-check mb-4 text-start">
                    <input name="rememberMachine" type="checkbox" class="form-check-input" id="rememberMachine" />
                    <label class="form-check-label" for="rememberMachine">Remember this machine</label>
                </div>
                
                <button type="submit" class="btn btn-primary w-100 btn-lg">Verify</button>
            </form>
        </div>
        <div class="login-divider"></div>
        <div class="login-right">
            <div class="security-badge mb-3">
                <i class="fas fa-shield-alt fa-3x text-primary"></i>
            </div>
            <h3>Extra Security</h3>
            <p class="text-muted">2FA adds an extra layer of protection to your account by requiring more than just a password to log in.</p>
            <hr class="w-50 my-4" />
            <p class="small text-muted">Don't have access to your device? <a href="#">Use a recovery code</a></p>
        </div>
    </div>
</div>

