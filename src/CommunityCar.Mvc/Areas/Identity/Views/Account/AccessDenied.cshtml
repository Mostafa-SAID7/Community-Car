@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Access denied"];
    ViewData["HideSidebars"] = true;
    ViewData["HideFooter"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" />
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header text-center">
            <div class="mb-4">
                <i class="fas fa-ban fa-4x text-danger animate__animated animate__headShake"></i>
            </div>
            <h2>@Localizer["Restricted Area"]</h2>
            <div class="mt-3">
                <p class="text-muted">@Localizer["It looks like you don't have the necessary permissions to view this page. If you believe this is an error, please contact your administrator."]</p>
            </div>
        </div>

        <div class="d-flex flex-column gap-3 mt-4">
            <a asp-controller="Feed" asp-action="Index" asp-area="" class="btn btn-primary btn-lg w-100">
                <i class="fas fa-home me-2"></i>@Localizer["Back to Home"]
            </a>
            <a asp-area="Identity" asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary btn-lg w-100">
                <i class="fas fa-sign-out-alt me-2"></i>@Localizer["Sign Out"]
            </a>
        </div>
    </div>
</div>
