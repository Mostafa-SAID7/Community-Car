@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Mvc.Areas.Identity.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = Localizer["Forgot Password"];
    ViewData["HideSidebars"] = true;
    ViewData["HideFooter"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" />
}

@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header">
            <h2>@Localizer["Forgot Password"]</h2>
            <p class="text-muted">@Localizer["Enter your email to reset your password"]</p>
        </div>

        <form action="/@culture/ForgotPassword" method="post" class="login-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-4">
                <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" autofocus required>
                <label asp-for="Email">@Localizer["Email address"]</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg mb-4">@Localizer["Send Reset Link"]</button>

            <div class="login-footer text-center">
                <p class="mb-0">@Localizer["Remembered your password?"] <a href="/@culture/Login" class="register-link fw-bold">@Localizer["Back to Login"]</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/identity-utils.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
