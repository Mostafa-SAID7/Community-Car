@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Reset Password Confirmation"];
    ViewData["HideSidebars"] = true;
    ViewData["HideFooter"] = true;
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css" />
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header text-center">
            <div class="mb-4">
                <i class="fas fa-check-circle fa-4x text-success animate__animated animate__bounceIn"></i>
            </div>
            <h2>@Localizer["Password Reset"]</h2>
            <p class="text-muted">@Localizer["Your password has been reset. Please click here to log in."]</p>
        </div>

        <div class="text-center mt-4">
            <a href="/@culture/Login" class="btn btn-primary btn-lg w-100">@Localizer["Click here to Login"]</a>
        </div>
    </div>
</div>
