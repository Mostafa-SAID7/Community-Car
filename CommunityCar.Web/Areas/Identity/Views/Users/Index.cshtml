@model IEnumerable<CommunityCar.Domain.Entities.Identity.Users.ApplicationUser>
@{
    ViewData["Title"] = "Discover People";
}

<div class="mb-4">
    <h1 class="h3">Find Enthusiasts</h1>
    <p class="text-muted">Search for people in the community to connect with.</p>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control border-start-0 ps-0" placeholder="Search by name, username or email..." />
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-4">
    @if (!Model.Any())
    {
        <div class="col-12 text-center py-5">
            <i class="fas fa-search fa-3x text-light mb-3"></i>
            <h5>No results found</h5>
            <p class="text-muted">Try searching with a different term.</p>
        </div>
    }
    else
    {
        @foreach (var user in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100 user-card">
                    <div class="card-body d-flex align-items-center gap-3">
                        <div class="avatar-md bg-info text-white">
                            @user.FirstName?[..1].ToUpper()@user.LastName?[..1].ToUpper()
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-0 fw-bold">@user.FullName</h6>
                            <p class="small text-muted mb-0">@@@user.UserName</p>
                        </div>
                        <form asp-area="Community" asp-controller="Friends" asp-action="SendRequest" method="post">
                            <input type="hidden" name="friendId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-primary rounded-pill px-3">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .avatar-md { width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; flex-shrink: 0; }
    .user-card { transition: background 0.2s; }
    .user-card:hover { background: #f8f9fa; }
</style>
